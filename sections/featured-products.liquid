<style>
  .featured-products {
    padding: 100px 0;
    background: white;
  }

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 16px;
    color: #2D2D2D;
    letter-spacing: -0.02em;
  }

  .section-description {
    font-size: 1.2rem;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .products-carousel-container {
    position: relative;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 60px;
  }

  .products-carousel {
    display: flex;
    gap: 30px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding: 20px 0;
    scroll-snap-type: x mandatory;
  }

  .products-carousel::-webkit-scrollbar {
    display: none;
  }

  .product-card {
    flex: 0 0 320px;
    scroll-snap-align: start;
    background: white;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  .product-card:hover {
    transform: translateY(-12px);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
  }

  .product-card-badge {
    position: absolute;
    top: 16px;
    left: 16px;
    background: #E8C4B8;
    color: white;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    z-index: 2;
  }

  .product-image-container {
    position: relative;
    height: 280px;
    overflow: hidden;
  }

  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0;
    transition: opacity 0.3s ease, transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .product-image.loaded {
    opacity: 1;
  }

  .product-card:hover .product-image {
    transform: scale(1.1);
  }

  .product-quick-view {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0.8);
    background: rgba(255, 255, 255, 0.95);
    border: none;
    padding: 12px 24px;
    border-radius: 25px;
    font-weight: 600;
    color: #2D2D2D;
    cursor: pointer;
    opacity: 0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    backdrop-filter: blur(10px);
  }

  .product-card:hover .product-quick-view {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }

  .product-quick-view:hover {
    background: white;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }

  .product-info {
    padding: 24px;
  }

  .product-category {
    font-size: 0.8rem;
    color: #E8C4B8;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 8px;
  }

  .product-title {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 12px;
    color: #2D2D2D;
    line-height: 1.3;
  }

  .product-title a {
    text-decoration: none;
    color: inherit;
    transition: color 0.3s ease;
  }

  .product-title a:hover {
    color: #E8C4B8;
  }

  .product-description {
    font-size: 0.9rem;
    color: #666;
    line-height: 1.5;
    margin-bottom: 16px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .product-price {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 20px;
  }

  .current-price {
    font-size: 1.3rem;
    font-weight: 700;
    color: #2D2D2D;
  }

  .original-price {
    font-size: 1rem;
    color: #999;
    text-decoration: line-through;
  }

  .product-rating {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 20px;
  }

  .stars {
    color: #FFD700;
    font-size: 0.9rem;
  }

  .rating-count {
    font-size: 0.8rem;
    color: #666;
  }

  .product-actions {
    display: flex;
    gap: 12px;
  }

  .add-to-cart-btn {
    flex: 1;
    background: #2D2D2D;
    color: white;
    border: none;
    padding: 14px;
    border-radius: 12px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-size: 0.9rem;
  }

  .add-to-cart-btn:hover:not(:disabled) {
    background: #E8C4B8;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(232, 196, 184, 0.4);
  }

  .add-to-cart-btn:disabled {
    background: #ccc;
    cursor: not-allowed;
    transform: none;
  }

  .wishlist-btn {
    background: white;
    border: 2px solid #F0F0F0;
    color: #666;
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 1.2rem;
  }

  .wishlist-btn:hover {
    border-color: #E8C4B8;
    color: #E8C4B8;
    transform: translateY(-2px);
  }

  .wishlist-btn.active {
    background: #E8C4B8;
    border-color: #E8C4B8;
    color: white;
  }

  .carousel-controls {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    display: flex;
    justify-content: space-between;
    pointer-events: none;
  }

  .carousel-btn {
    background: white;
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: all;
    font-size: 1.2rem;
    color: #2D2D2D;
  }

  .carousel-btn:hover:not(:disabled) {
    background: #E8C4B8;
    color: white;
    transform: scale(1.1);
  }

  .carousel-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
  }

  .view-all-container {
    text-align: center;
    margin-top: 60px;
  }

  .btn-outline {
    display: inline-block;
    padding: 12px 32px;
    border: 2px solid #2D2D2D;
    color: #2D2D2D;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-outline:hover {
    background: #2D2D2D;
    color: white;
  }

  .quick-view-modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    z-index: 1000;
    align-items: center;
    justify-content: center;
  }

  .quick-view-modal.active {
    display: flex;
  }

  .modal-content {
    background: white;
    border-radius: 20px;
    max-width: 900px;
    width: 90%;
    max-height: 90vh;
    overflow-y: auto;
    position: relative;
  }

  .modal-close {
    position: absolute;
    top: 20px;
    right: 20px;
    background: none;
    border: none;
    font-size: 2rem;
    cursor: pointer;
    z-index: 1001;
    color: #2D2D2D;
  }

  /* Loading state */
  .loading {
    opacity: 0.7;
    pointer-events: none;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .featured-products {
      padding: 60px 0;
    }

    .section-title {
      font-size: 2rem;
    }

    .products-carousel-container {
      padding: 0 20px;
    }

    .product-card {
      flex: 0 0 280px;
    }

    .carousel-controls {
      display: none;
    }

    .product-actions {
      flex-direction: column;
    }

    .wishlist-btn {
      width: 100%;
      height: 48px;
    }

    .modal-content {
      width: 95%;
      margin: 20px;
    }
  }
</style>

<section class="featured-products">
  <div class="section-header">
    <h2 class="section-title">{{ section.settings.title | default: "Best Sellers" }}</h2>
    <p class="section-description">{{ section.settings.description | default: "Most loved by our curl community. Formulated to transform your hair routine." }}</p>
  </div>

  <div class="products-carousel-container">
    <div class="products-carousel" id="products-carousel">
      {% assign featured_collection = collections[section.settings.collection] | default: collections.all %}
      {% assign products_limit = section.settings.products_limit | default: 8 %}
      
      {% for product in featured_collection.products limit: products_limit %}
        <div class="product-card">
          {% if product.tags contains 'bestseller' %}
            <div class="product-card-badge">Best Seller</div>
          {% elsif product.tags contains 'new' %}
            <div class="product-card-badge">New</div>
          {% endif %}

          <div class="product-image-container">
            <img 
              src="{{ product.featured_image | img_url: '400x400' }}" 
              alt="{{ product.title | escape }}"
              class="product-image"
              loading="lazy"
              width="400"
              height="400"
              onload="this.classList.add('loaded')"
            >
            <button class="product-quick-view" data-product-handle="{{ product.handle }}">
              Quick View
            </button>
          </div>

          <div class="product-info">
            <div class="product-category">
              {{ product.type | default: 'Hair Care' }}
            </div>
            
            <h3 class="product-title">
              <a href="{{ product.url }}">{{ product.title }}</a>
            </h3>
            
            <p class="product-description">
              {{ product.description | strip_html | truncatewords: 15 }}
            </p>

            <div class="product-price">
              <span class="current-price">{{ product.price | money }}</span>
              {% if product.compare_at_price > product.price %}
                <span class="original-price">{{ product.compare_at_price | money }}</span>
              {% endif %}
            </div>

            {% if section.settings.show_ratings %}
              <div class="product-rating">
                <div class="stars">
                  {% comment %} Static stars - replace with dynamic ratings if available {% endcomment %}
                  ★★★★★
                </div>
                <span class="rating-count">({{ forloop.index | times: 12 }})</span>
              </div>
            {% endif %}

            <div class="product-actions">
              {% if product.available %}
                <form action="/cart/add" method="post" class="product-form">
                  <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                  <button type="submit" class="add-to-cart-btn">
                    Add to Cart
                  </button>
                </form>
              {% else %}
                <button class="add-to-cart-btn" disabled>
                  Sold Out
                </button>
              {% endif %}
              <button class="wishlist-btn" aria-label="Add to wishlist">
                ♡
              </button>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="carousel-controls">
      <button class="carousel-btn prev-btn" id="carousel-prev" aria-label="Previous products">
        ‹
      </button>
      <button class="carousel-btn next-btn" id="carousel-next" aria-label="Next products">
        ›
      </button>
    </div>
  </div>

  <div class="view-all-container">
    <a href="{{ section.settings.collection_url | default: featured_collection.url }}" class="btn-outline">
      View All Products
    </a>
  </div>
</section>

<!-- Quick View Modal -->
<div class="quick-view-modal" id="quick-view-modal">
  <div class="modal-content">
    <button class="modal-close" id="modal-close">&times;</button>
    <div id="quick-view-content"></div>
  </div>
</div>

<script>
class ProductCarousel {
  constructor() {
    this.carousel = document.getElementById('products-carousel');
    this.prevBtn = document.getElementById('carousel-prev');
    this.nextBtn = document.getElementById('carousel-next');
    this.quickViewModal = document.getElementById('quick-view-modal');
    this.modalClose = document.getElementById('modal-close');
    this.quickViewContent = document.getElementById('quick-view-content');
    this.cardWidth = 320 + 30; // card width + gap
    this.init();
  }

  init() {
    this.bindEvents();
    this.updateButtonStates();
  }

  bindEvents() {
    // Carousel navigation
    this.prevBtn.addEventListener('click', () => this.scroll('prev'));
    this.nextBtn.addEventListener('click', () => this.scroll('next'));

    // Touch events for mobile
    let startX;
    this.carousel.addEventListener('touchstart', (e) => {
      startX = e.touches[0].clientX;
    });
    
    this.carousel.addEventListener('touchend', (e) => {
      const endX = e.changedTouches[0].clientX;
      const diff = startX - endX;
      
      if (Math.abs(diff) > 50) { // Minimum swipe distance
        if (diff > 0) this.scroll('next');
        else this.scroll('prev');
      }
    });

    // Wishlist buttons
    document.querySelectorAll('.wishlist-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        btn.classList.toggle('active');
        btn.textContent = btn.classList.contains('active') ? '♥' : '♡';
        
        // Show feedback
        const originalText = btn.textContent;
        if (btn.classList.contains('active')) {
          btn.textContent = '♥ Added!';
          setTimeout(() => {
            btn.textContent = originalText;
          }, 2000);
        }
      });
    });

    // Quick view buttons
    document.querySelectorAll('.product-quick-view').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        const productHandle = btn.dataset.productHandle;
        this.openQuickView(productHandle);
      });
    });

    // Modal close
    this.modalClose.addEventListener('click', () => this.closeQuickView());
    this.quickViewModal.addEventListener('click', (e) => {
      if (e.target === this.quickViewModal) {
        this.closeQuickView();
      }
    });

    // Update button states on scroll
    this.carousel.addEventListener('scroll', () => {
      this.updateButtonStates();
    });

    // Close modal on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && this.quickViewModal.classList.contains('active')) {
        this.closeQuickView();
      }
    });
  }

  scroll(direction) {
    const scrollAmount = this.cardWidth * 2; // Scroll 2 cards at a time
    const newScrollLeft = direction === 'next' 
      ? this.carousel.scrollLeft + scrollAmount
      : this.carousel.scrollLeft - scrollAmount;

    this.carousel.scrollTo({
      left: newScrollLeft,
      behavior: 'smooth'
    });
  }

  updateButtonStates() {
    const { scrollLeft, scrollWidth, clientWidth } = this.carousel;
    
    this.prevBtn.disabled = scrollLeft <= 0;
    this.nextBtn.disabled = scrollLeft + clientWidth >= scrollWidth - 10;
  }

  async openQuickView(productHandle) {
    try {
      this.quickViewModal.classList.add('active');
      this.quickViewContent.innerHTML = `
        <div style="padding: 40px; text-align: center;" class="loading">
          <p>Loading product...</p>
        </div>
      `;

      const response = await fetch(`/products/${productHandle}?view=quick`);
      
      if (!response.ok) {
        throw new Error('Product not found');
      }
      
      const html = await response.text();
      this.quickViewContent.innerHTML = html;
      
    } catch (error) {
      console.error('Error loading quick view:', error);
      this.quickViewContent.innerHTML = `
        <div style="padding: 40px; text-align: center;">
          <p>Unable to load product. <a href="/products/${productHandle}">View product page</a></p>
        </div>
      `;
    } finally {
      this.quickViewContent.classList.remove('loading');
    }
  }

  closeQuickView() {
    this.quickViewModal.classList.remove('active');
    this.quickViewContent.innerHTML = '';
  }
}

// Initialize carousel
document.addEventListener('DOMContentLoaded', () => {
  new ProductCarousel();
});

// Image loading fallback
document.addEventListener('DOMContentLoaded', function() {
  const images = document.querySelectorAll('.product-image');
  images.forEach(img => {
    if (img.complete) {
      img.classList.add('loaded');
    } else {
      img.addEventListener('load', function() {
        this.classList.add('loaded');
      });
      img.addEventListener('error', function() {
        // Handle broken images
        this.style.backgroundColor = '#f5f5f5';
      });
    }
  });
});
</script>

