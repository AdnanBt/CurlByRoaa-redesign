                width="400"
                height="400"
                loading="lazy"
              >
            {% elsif forloop.index == 2 %}
              <img 
                src="https://cdn.shopify.com/s/files/1/0567/4172/4316/files/Keune_Derma_Activate_Lotion_bottle.jpg?v=1764275401" 
                alt="Keune Derma Activate Lotion"
                class="product-image"
                width="400"
                height="400"
                loading="lazy"
              >
            {% elsif forloop.index == 3 %}
              <img 
                src="https://cdn.shopify.com/s/files/1/0567/4172/4316/files/27422-Style-Klibansky-No44-Soft-Mousse-200ml-scaled-768x768_ad007548-4fb4-4367-9515-59acba488c3d.jpg?v=1763061511" 
