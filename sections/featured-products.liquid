<style>
  .featured-products {
    padding: 100px 0;
    background: white;
  }

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 16px;
    color: #2D2D2D;
    letter-spacing: -0.02em;
  }

  .section-description {
    font-size: 1.2rem;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .product-card {
    background: white;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  .product-card:hover {
    transform: translateY(-12px);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
  }

  .product-card-badge {
    position: absolute;
    top: 16px;
    left: 16px;
    background: #E8C4B8;
    color: white;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    z-index: 2;
  }

  .product-image-container {
    position: relative;
    height: 280px;
    overflow: hidden;
  }

  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .product-card:hover .product-image {
    transform: scale(1.1);
  }

  .product-info {
    padding: 24px;
  }

  .product-category {
    font-size: 0.8rem;
    color: #E8C4B8;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 8px;
  }

  .product-title {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 12px;
    color: #2D2D2D;
    line-height: 1.3;
  }

  .product-title a {
    text-decoration: none;
    color: inherit;
    transition: color 0.3s ease;
  }

  .product-title a:hover {
    color: #E8C4B8;
  }

  .product-description {
    font-size: 0.9rem;
    color: #666;
    line-height: 1.5;
    margin-bottom: 16px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .product-price {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 20px;
  }

  .current-price {
    font-size: 1.3rem;
    font-weight: 700;
    color: #2D2D2D;
  }

  .original-price {
    font-size: 1rem;
    color: #999;
    text-decoration: line-through;
  }

  .product-rating {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 20px;
  }

  .stars {
    color: #FFD700;
    font-size: 0.9rem;
  }

  .rating-count {
    font-size: 0.8rem;
    color: #666;
  }

  .product-actions {
    display: flex;
    gap: 12px;
  }

  .add-to-cart-btn {
    flex: 1;
    background: #2D2D2D;
    color: white;
    border: none;
    padding: 14px;
    border-radius: 12px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-size: 0.9rem;
  }

  .add-to-cart-btn:hover:not(:disabled) {
    background: #E8C4B8;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(232, 196, 184, 0.4);
  }

  .add-to-cart-btn:disabled {
    background: #ccc;
    cursor: not-allowed;
    transform: none;
  }

  .wishlist-btn {
    background: white;
    border: 2px solid #F0F0F0;
    color: #666;
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 1.2rem;
  }

  .wishlist-btn:hover {
    border-color: #E8C4B8;
    color: #E8C4B8;
    transform: translateY(-2px);
  }

  .wishlist-btn.active {
    background: #E8C4B8;
    border-color: #E8C4B8;
    color: white;
  }

  .view-all-container {
    text-align: center;
    margin-top: 60px;
  }

  .btn-outline {
    display: inline-block;
    padding: 12px 32px;
    border: 2px solid #2D2D2D;
    color: #2D2D2D;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-outline:hover {
    background: #2D2D2D;
    color: white;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .featured-products {
      padding: 60px 0;
    }

    .section-title {
      font-size: 2rem;
    }

    .products-grid {
      grid-template-columns: 1fr;
      gap: 20px;
      padding: 0 15px;
    }

    .product-actions {
      flex-direction: column;
    }

    .wishlist-btn {
      width: 100%;
      height: 48px;
    }
  }
</style>

<section class="featured-products">
  <div class="section-header">
    <h2 class="section-title">{{ section.settings.title }}</h2>
    <p class="section-description">{{ section.settings.description }}</p>
  </div>

  <div class="products-grid">
    {% assign featured_collection = collections[section.settings.collection] %}
    {% assign products_limit = section.settings.products_limit %}
    
    {% for product in featured_collection.products limit: products_limit %}
      <div class="product-card">
        {% if product.tags contains 'bestseller' %}
          <div class="product-card-badge">Best Seller</div>
        {% elsif product.tags contains 'new' %}
          <div class="product-card-badge">New</div>
        {% endif %}

        <div class="product-image-container">
          <img 
            src="{{ product.featured_image | image_url: width: 400, height: 400, crop: 'center' }}" 
            alt="{{ product.title | escape }}"
            class="product-image"
            loading="lazy"
            width="400"
            height="400"
          >
        </div>

        <div class="product-info">
          <div class="product-category">
            {{ product.type | default: 'Hair Care' }}
          </div>
          
          <h3 class="product-title">
            <a href="{{ product.url }}">{{ product.title }}</a>
          </h3>
          
          <p class="product-description">
            {{ product.description | strip_html | truncatewords: 15 }}
          </p>

          <div class="product-price">
            <span class="current-price">{{ product.price | money }}</span>
            {% if product.compare_at_price > product.price %}
              <span class="original-price">{{ product.compare_at_price | money }}</span>
            {% endif %}
          </div>

          {% if section.settings.show_ratings %}
            <div class="product-rating">
              <div class="stars">
                ★★★★★
              </div>
              <span class="rating-count">({{ forloop.index | times: 12 }})</span>
            </div>
          {% endif %}

          <div class="product-actions">
            {% if product.available %}
              <form action="{{ routes.cart_add_url }}" method="post" class="product-form">
                <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                <button type="submit" class="add-to-cart-btn">
                  Add to Cart
                </button>
              </form>
            {% else %}
              <button class="add-to-cart-btn" disabled>
                Sold Out
              </button>
            {% endif %}
            <button class="wishlist-btn" aria-label="Add to wishlist" onclick="toggleWishlist(this)">
              ♡
            </button>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

  <div class="view-all-container">
    <a href="{{ section.settings.collection_url | default: featured_collection.url }}" class="btn-outline">
      View All Products
    </a>
  </div>
</section>

<script>
function toggleWishlist(button) {
  button.classList.toggle('active');
  button.textContent = button.classList.contains('active') ? '♥' : '♡';
  
  if (button.classList.contains('active')) {
    const originalText = button.textContent;
    button.textContent = '♥ Added!';
    setTimeout(() => {
      button.textContent = originalText;
    }, 2000);
  }
}
</script>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Best Sellers"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Most loved by our curl community. Formulated to transform your hair routine."
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_limit",
      "label": "Products to show",
      "min": 2,
      "max": 8,
      "step": 1,
      "default": 4
    },
    {
      "type": "url",
      "id": "collection_url",
      "label": "View All Link"
    },
    {
      "type": "checkbox",
      "id": "show_ratings",
      "label": "Show product ratings",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Featured Products",
      "category": "Homepage"
    }
  ]
}
{% endschema %}