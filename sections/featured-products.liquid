        {% endfor %}
      {% endfor %}
    </div>

    <div class="carousel-controls">
      <button class="carousel-btn prev-btn" id="carousel-prev" aria-label="Previous products">
        ‹
      </button>
      <button class="carousel-btn next-btn" id="carousel-next" aria-label="Next products">
        ›
      </button>
    </div>
  </div>

  <div class="view-all-container">
    <a href="{{ section.settings.collection_url | default: routes.all_products_collection_url }}" class="btn btn-outline">
      View All Products
    </a>
  </div>
</section>

<script>
class ProductCarousel {
  constructor() {
    this.carousel = document.getElementById('products-carousel');
    this.prevBtn = document.getElementById('carousel-prev');
    this.nextBtn = document.getElementById('carousel-next');
    this.cardWidth = 320 + 30; // card width + gap
    this.init();
  }

  init() {
    this.bindEvents();
    this.updateButtonStates();
  }

  bindEvents() {
    // Carousel navigation
    if (this.prevBtn && this.nextBtn) {
      this.prevBtn.addEventListener('click', () => this.scroll('prev'));
      this.nextBtn.addEventListener('click', () => this.scroll('next'));
    }

    // Wishlist buttons
    document.querySelectorAll('.wishlist-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        btn.classList.toggle('active');
        btn.textContent = btn.classList.contains('active') ? '♥' : '♡';
        
        // Show feedback
        const originalText = btn.textContent;
        if (btn.classList.contains('active')) {
          btn.textContent = '♥ Added!';
          setTimeout(() => {
            btn.textContent = originalText;
          }, 2000);
        }
      });
    });

    // Quick view buttons
    document.querySelectorAll('.product-quick-view').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        const productHandle = btn.dataset.productHandle;
        this.openQuickView(productHandle);
      });
    });

    // Update button states on scroll
    if (this.carousel) {
      this.carousel.addEventListener('scroll', () => {
        this.updateButtonStates();
      });
    }

    // Add to cart forms
    document.querySelectorAll('.product-form').forEach(form => {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const submitBtn = form.querySelector('.add-to-cart-btn');
        const originalText = submitBtn.textContent;
        
        // Show loading state
        submitBtn.textContent = 'Adding...';
        submitBtn.disabled = true;

        try {
          // Using Fetch API for better handling
          const formData = new FormData(form);
          const response = await fetch('{{ routes.cart_add_url }}', {
            method: 'POST',
            body: formData
          });

          if (response.ok) {
            // Success state
            submitBtn.textContent = 'Added! ✓';
            
            // Update cart count if available
            this.updateCartCount();
            
            // Open cart drawer if available
            if (window.cartDrawer) {
              window.cartDrawer.openCart();
            }
            
            // Reset after delay
            setTimeout(() => {
              submitBtn.textContent = originalText;
              submitBtn.disabled = false;
            }, 2000);
          } else {
            throw new Error('Failed to add to cart');
          }
          
        } catch (error) {
          console.error('Error adding to cart:', error);
          submitBtn.textContent = 'Error - Try Again';
          setTimeout(() => {
            submitBtn.textContent = originalText;
            submitBtn.disabled = false;
          }, 2000);
        }
      });
    });
  }

  scroll(direction) {
    if (!this.carousel) return;
    
    const scrollAmount = this.cardWidth * 2; // Scroll 2 cards at a time
    const newScrollLeft = direction === 'next' 
      ? this.carousel.scrollLeft + scrollAmount
      : this.carousel.scrollLeft - scrollAmount;

    this.carousel.scrollTo({
      left: newScrollLeft,
      behavior: 'smooth'
    });
  }

  updateButtonStates() {
    if (!this.carousel || !this.prevBtn || !this.nextBtn) return;
    
    const { scrollLeft, scrollWidth, clientWidth } = this.carousel;
    
    this.prevBtn.disabled = scrollLeft <= 0;
    this.nextBtn.disabled = scrollLeft + clientWidth >= scrollWidth - 10;
  }

  updateCartCount() {
    // This would typically fetch the updated cart count from Shopify
    const cartCounts = document.querySelectorAll('.cart-count');
    cartCounts.forEach(count => {
      const current = parseInt(count.textContent) || 0;
      count.textContent = current + 1;
    });
  }

  openQuickView(productHandle) {
    // In a real implementation, this would fetch product data and show a modal
    console.log('Opening quick view for:', productHandle);
    // You would typically make an AJAX request to get product data
    // and display it in a modal with more details and image gallery
  }
}

// Initialize carousel
document.addEventListener('DOMContentLoaded', () => {
  new ProductCarousel();
});
</script>

