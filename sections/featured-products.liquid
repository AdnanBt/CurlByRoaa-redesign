<style>
  .featured-products {
    padding: 100px 0;
    background: white;
  }

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 16px;
    color: #2D2D2D;
    letter-spacing: -0.02em;
  }

  .section-description {
    font-size: 1.2rem;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .products-carousel-container {
    position: relative;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 60px;
  }

  .products-carousel {
    display: flex;
    gap: 30px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding: 20px 0;
    scroll-snap-type: x mandatory;
  }

  .products-carousel::-webkit-scrollbar {
    display: none;
  }

  .product-card {
    flex: 0 0 320px;
    scroll-snap-align: start;
    background: white;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  .product-card:hover {
    transform: translateY(-12px);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
  }

  .product-card-badge {
    position: absolute;
    top: 16px;
    left: 16px;
    background: #E8C4B8;
    color: white;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    z-index: 2;
  }

  .product-image-container {
    position: relative;
    height: 280px;
    overflow: hidden;
  }

  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .product-card:hover .product-image {
    transform: scale(1.1);
  }

  .product-quick-view {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0.8);
    background: rgba(255, 255, 255, 0.95);
    border: none;
    padding: 12px 24px;
    border-radius: 25px;
    font-weight: 600;
    color: #2D2D2D;
    cursor: pointer;
    opacity: 0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    backdrop-filter: blur(10px);
  }

  .product-card:hover .product-quick-view {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }

  .product-quick-view:hover {
    background: white;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }

  .product-info {
    padding: 24px;
  }

  .product-category {
    font-size: 0.8rem;
    color: #E8C4B8;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 8px;
  }

  .product-title {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 12px;
    color: #2D2D2D;
    line-height: 1.3;
  }

  .product-title a {
    text-decoration: none;
    color: inherit;
    transition: color 0.3s ease;
  }

  .product-title a:hover {
    color: #E8C4B8;
  }

  .product-description {
    font-size: 0.9rem;
    color: #666;
    line-height: 1.5;
    margin-bottom: 16px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .product-price {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 20px;
  }

  .current-price {
    font-size: 1.3rem;
    font-weight: 700;
    color: #2D2D2D;
  }

  .original-price {
    font-size: 1rem;
    color: #999;
    text-decoration: line-through;
  }

  .product-rating {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 20px;
  }

  .stars {
    color: #FFD700;
    font-size: 0.9rem;
  }

  .rating-count {
    font-size: 0.8rem;
    color: #666;
  }

  .product-actions {
    display: flex;
    gap: 12px;
  }

  .add-to-cart-btn {
    flex: 1;
    background: #2D2D2D;
    color: white;
    border: none;
    padding: 14px;
    border-radius: 12px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-size: 0.9rem;
  }

  .add-to-cart-btn:hover {
    background: #E8C4B8;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(232, 196, 184, 0.4);
  }

  .wishlist-btn {
    background: white;
    border: 2px solid #F0F0F0;
    color: #666;
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .wishlist-btn:hover {
    border-color: #E8C4B8;
    color: #E8C4B8;
    transform: translateY(-2px);
  }

  .wishlist-btn.active {
    background: #E8C4B8;
    border-color: #E8C4B8;
    color: white;
  }

  .carousel-controls {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    display: flex;
    justify-content: space-between;
    pointer-events: none;
  }

  .carousel-btn {
    background: white;
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: all;
    font-size: 1.2rem;
    color: #2D2D2D;
  }

  .carousel-btn:hover {
    background: #E8C4B8;
    color: white;
    transform: scale(1.1);
  }

  .carousel-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
  }

  .view-all-container {
    text-align: center;
    margin-top: 60px;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .featured-products {
      padding: 60px 0;
    }

    .section-title {
      font-size: 2rem;
    }

    .products-carousel-container {
      padding: 0 20px;
    }

    .product-card {
      flex: 0 0 280px;
    }

    .carousel-controls {
      display: none;
    }

    .product-actions {
      flex-direction: column;
    }

    .wishlist-btn {
      width: 100%;
      height: 48px;
    }
  }
</style>

<section class="featured-products">
  <div class="section-header">
    <h2 class="section-title">{{ section.settings.title | default: "Best Sellers" }}</h2>
    <p class="section-description">{{ section.settings.description | default: "Most loved by our curl community. Formulated to transform your hair routine." }}</p>
  </div>

  <div class="products-carousel-container">
    <div class="products-carousel" id="products-carousel">
      {% assign featured_collection = collections[section.settings.collection] | default: collections.all %}
      {% for product in featured_collection.products limit: 8 %}
        <div class="product-card">
          {% if product.tags contains 'bestseller' %}
            <div class="product-card-badge">Best Seller</div>
          {% elsif product.tags contains 'new' %}
            <div class="product-card-badge">New</div>
          {% endif %}

          <div class="product-image-container">
            {% comment %} Real product images with proper attributes {% endcomment %}
