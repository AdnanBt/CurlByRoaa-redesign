                class="product-image"
                width="400"
                height="400"
                loading="lazy"
              >
            {% elsif forloop.index == 6 %}
              <img 
                src="https://cdn.shopify.com/s/files/1/0567/4172/4316/files/27464-Keune-Style-Relaunch-RushHour-Packshot-200ml-768x768_d7b6e364-3d99-4319-880c-5f8d52829412.jpg?v=1763061509" 
                alt="Keune Style Relaunch RushHour"
                class="product-image"
                width="400"
                height="400"
                loading="lazy"
              >
            {% elsif forloop.index == 7 %}
              <img 
                src="https://cdn.shopify.com/s/files/1/0567/4172/4316/files/27430-Style-Klibansky-No75-Root-Volumizer-300ml-scaled-768x768_63358ae4-2757-4052-9e51-6fca320e7c4f.jpg?v=1763061508" 
                alt="Style Klibansky No75 Root Volumizer"
                class="product-image"
                width="400"
                height="400"
                loading="lazy"
              >
            {% elsif forloop.index == 8 %}
              <img 
                src="https://cdn.shopify.com/s/files/1/0567/4172/4316/files/27478-Keune-Style-Relaunch-Restyler-Packshot-100ml-768x768_534d3b1d-5417-462c-83fd-ddf83598b6eb.jpg?v=1763061508" 
                alt="Keune Style Relaunch Restyler"
                class="product-image"
                width="400"
                height="400"
                loading="lazy"
              >
            {% else %}
              {% comment %} Fallback to Shopify product image with modern filter {% endcomment %}
              {% if product.featured_image %}
                <img 
                  src="{{ product.featured_image | image_url: width: 400, height: 400, crop: 'center' }}" 
                  alt="{{ product.title | escape }}"
                  class="product-image"
                  width="400"
                  height="400"
                  loading="lazy"
                >
              {% else %}
                <div class="product-image" style="background: #f8f8f8; display: flex; align-items: center; justify-content: center; color: #666;">
                  No Image
                </div>
