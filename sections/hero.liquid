<style>
  .hero {
    position: relative;
    height: 100vh;
    min-height: 800px;
    display: flex;
    align-items: center;
    overflow: hidden;
    background: #ffffff;
    margin-top: 80px;
  }

  .hero-carousel-container {
    width: 100%;
    height: auto;
    position: relative;
  }

  /* Full Width Cards Carousel */
  .hero-carousel {
    display: flex;
    height: 100%;
    scroll-snap-type: x mandatory;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .hero-carousel::-webkit-scrollbar {
    display: none;
  }

  .hero-card {
    flex: 0 0 100vw;
    scroll-snap-align: start;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 5%;
    position: relative;
  }

  /* Card Background Variations */
  .hero-card:nth-child(1) {
    background: linear-gradient(135deg, #FAF8F6 0%, #FFFFFF 100%);
  }

  .hero-card:nth-child(2) {
    background: linear-gradient(135deg, #FFF8F6 0%, #FFFFFF 100%);
  }

  .hero-card:nth-child(3) {
    background: linear-gradient(135deg, #F6F8FF 0%, #FFFFFF 100%);
  }

  .hero-card:nth-child(4) {
    background: linear-gradient(135deg, #F6FFF8 0%, #FFFFFF 100%);
  }

  .hero-card:nth-child(5) {
    background: linear-gradient(135deg, #FFF6F8 0%, #FFFFFF 100%);
  }

  /* Card Content - Adjusted for larger images */
  .card-content {
    display: grid;
    grid-template-columns: 1fr 1.2fr; /* More space for images */
    gap: 60px;
    align-items: center;
    max-width: 1400px;
    width: 100%;
    height: 100%;
    padding: 40px 0;
  }

  .card-text {
    padding-right: 0;
    max-width: 500px;
  }

  .card-badge {
    display: inline-block;
    background: #E8C4B8;
    color: white;
    padding: 8px 20px;
    border-radius: 25px;
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 30px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .card-title {
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 24px;
    color: #2D2D2D;
    letter-spacing: -0.02em;
  }

  .card-description {
    font-size: 1.2rem;
    line-height: 1.6;
    margin-bottom: 40px;
    color: #666;
    font-weight: 400;
  }

  .card-price {
    font-size: 2rem;
    font-weight: 700;
    color: #E8C4B8;
    margin-bottom: 40px;
  }

  .card-actions {
    display: flex;
    gap: 20px;
    align-items: center;
    flex-wrap: wrap;
  }

  .card-btn {
    padding: 16px 40px;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 12px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .card-btn-primary {
    background: #2D2D2D;
    color: white;
    border: 2px solid #2D2D2D;
  }

  .card-btn-primary:hover {
    background: #E8C4B8;
    border-color: #E8C4B8;
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(232, 196, 184, 0.4);
  }

  .card-btn-secondary {
    background: transparent;
    color: #2D2D2D;
    border: 2px solid #2D2D2D;
  }

  .card-btn-secondary:hover {
    background: #2D2D2D;
    color: white;
    transform: translateY(-2px);
  }

  /* Card Image - LARGER and better positioned */
  .card-image {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: 100%;
  }

  .product-image-large {
    width: 100%;
    max-width: 700px; /* Much larger */
    height: 600px; /* Taller */
    object-fit: cover;
    border-radius: 24px;
    box-shadow: 0 25px 80px rgba(0, 0, 0, 0.15);
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hero-card:hover .product-image-large {
    transform: scale(1.05) translateY(-10px);
    box-shadow: 0 35px 100px rgba(0, 0, 0, 0.2);
  }

  /* Fallback image styling */
  .image-placeholder {
    width: 100%;
    max-width: 700px;
    height: 600px;
    background: linear-gradient(135deg, #E8C4B8, #D4A59A);
    border-radius: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.8rem;
    font-weight: 600;
    box-shadow: 0 25px 80px rgba(0, 0, 0, 0.15);
  }

  /* Carousel Navigation */
  .carousel-dots {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 12px;
    z-index: 10;
  }

  .carousel-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: rgba(45, 45, 45, 0.3);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .carousel-dot.active {
    background: #E8C4B8;
    transform: scale(1.2);
  }

  .carousel-nav {
    position: absolute;
    top: 50%;
    left: 40px;
    right: 40px;
    transform: translateY(-50%);
    display: flex;
    justify-content: space-between;
    pointer-events: none;
    z-index: 10;
  }

  .carousel-btn {
    background: white;
    border: none;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    transition: all 0.3s ease;
    pointer-events: all;
    font-size: 1.5rem;
    color: #2D2D2D;
  }

  .carousel-btn:hover {
    background: #E8C4B8;
    color: white;
    transform: scale(1.1);
  }

  .hero-scroll-indicator {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    color: #666;
    animation: float 3s ease-in-out infinite;
    z-index: 20;
    cursor: pointer;
    background: white;
    border-radius: 50%;
    padding: 12px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    border: 1px solid #f0f0f0;
  }

  @keyframes float {
    0%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    50% {
      transform: translateX(-50%) translateY(-8px);
    }
  }

  /* Mobile Styles */
  @media (max-width: 1024px) {
    .card-content {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
      padding: 60px 0;
    }

    .card-text {
      max-width: 100%;
      order: 2;
    }

    .card-image {
      order: 1;
    }

    .card-title {
      font-size: 2.8rem;
    }

    .product-image-large {
      max-width: 500px;
      height: 450px;
    }

    .image-placeholder {
      max-width: 500px;
      height: 450px;
    }
  }

  @media (max-width: 768px) {
    .hero {
      height: auto;
      min-height: 100vh;
      margin-top: 60px;
    }

    .hero-card {
      padding: 80px 5% 60px;
    }

    .card-content {
      padding: 40px 0;
    }

    .card-title {
      font-size: 2.2rem;
    }

    .card-description {
      font-size: 1.1rem;
    }

    .card-actions {
      flex-direction: column;
      gap: 15px;
    }

    .card-btn {
      width: 200px;
      padding: 14px 32px;
    }

    .product-image-large {
      max-width: 400px;
      height: 350px;
    }

    .image-placeholder {
      max-width: 400px;
      height: 350px;
      font-size: 1.4rem;
    }

    .carousel-btn {
      width: 50px;
      height: 50px;
      font-size: 1.2rem;
    }

    .carousel-dots {
      bottom: 20px;
    }
  }

  @media (max-width: 480px) {
    .card-title {
      font-size: 1.8rem;
    }

    .product-image-large {
      max-width: 300px;
      height: 280px;
    }

    .image-placeholder {
      max-width: 300px;
      height: 280px;
      font-size: 1.2rem;
    }
  }
</style>

<section class="hero">
  <div class="hero-carousel-container">
    <div class="hero-carousel" id="hero-carousel">
      {%- assign featured_collection = collections[section.settings.collection] | default: collections.all -%}
      
      {%- for product in featured_collection.products limit: 5 -%}
        <div class="hero-card" data-index="{{ forloop.index0 }}">
          <div class="card-content">
            <div class="card-text">
              {%- if product.tags contains 'bestseller' or product.tags contains 'best seller' -%}
                <div class="card-badge">BESTSELLER</div>
              {%- elsif product.tags contains 'new' -%}
                <div class="card-badge">NEW</div>
              {%- endif -%}

              <h2 class="card-title">{{ product.title }}</h2>
              
              <p class="card-description">
                {{ product.description | strip_html | truncatewords: 25 | default: "Professional-grade hair care solution designed for your unique curl pattern. Experience the perfect harmony of science and nature." }}
              </p>
              
              <div class="card-price">{{ product.price | money }}</div>
              
              <div class="card-actions">
                <form action="{{ routes.cart_add_url }}" method="post" class="product-form">
                  <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                  <input type="hidden" name="quantity" value="1">
                  <button type="submit" class="card-btn card-btn-primary" name="add">
                    Add to Cart
                  </button>
                </form>
                <a href="{{ product.url }}" class="card-btn card-btn-secondary">
                  Learn More
                </a>
              </div>
            </div>
            
            <div class="card-image">
              {%- if product.featured_image -%}
                <img 
                  src="{{ product.featured_image | image_url: width: 800, height: 800, crop: 'center' }}" 
                  alt="{{ product.title | escape }}"
                  class="product-image-large"
                  width="800"
                  height="800"
                  loading="lazy"
                >
              {%- else -%}
                <div class="image-placeholder">
                  {{ product.title | truncate: 20 }}
                </div>
              {%- endif -%}
            </div>
          </div>
        </div>
      {%- else -%}
        <!-- Fallback demo cards -->
        {%- for i in (1..3) -%}
          <div class="hero-card" data-index="{{ forloop.index0 }}">
            <div class="card-content">
              <div class="card-text">
                <div class="card-badge">{{ 'BESTSELLER' }}</div>
                
                <h2 class="card-title">Curl Defining Cream {{ i }}</h2>
                
                <p class="card-description">
                  Professional-grade hair care solution designed for your unique curl pattern. Experience the perfect harmony of science and nature with our meticulously crafted formula.
                </p>
                
                <div class="card-price">{{ 29.99 | times: i | money }}</div>
                
                <div class="card-actions">
                  <form action="{{ routes.cart_add_url }}" method="post" class="product-form">
                    <input type="hidden" name="id" value="{{ all_products.first.variants.first.id }}">
                    <input type="hidden" name="quantity" value="1">
                    <button type="submit" class="card-btn card-btn-primary" name="add">
                      Add to Cart
                    </button>
                  </form>
                  <a href="/products" class="card-btn card-btn-secondary">
                    Learn More
                  </a>
                </div>
              </div>
              
              <div class="card-image">
                <div class="image-placeholder">
                  Product {{ i }}
                </div>
              </div>
            </div>
          </div>
        {%- endfor -%}
      {%- endfor -%}
    </div>

    <!-- Carousel Navigation -->
    <div class="carousel-nav">
      <button class="carousel-btn prev-btn" id="hero-prev">
        ‹
      </button>
      <button class="carousel-btn next-btn" id="hero-next">
        ›
      </button>
    </div>

    <!-- Carousel Dots -->
    <div class="carousel-dots" id="carousel-dots">
      <!-- Dots will be generated by JavaScript -->
    </div>
  </div>

  <div class="hero-scroll-indicator" onclick="scrollToNextSection()">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M12 5v14M5 12l7 7 7-7"/>
    </svg>
  </div>
</section>

<script>
class HeroCarousel {
  constructor() {
    this.carousel = document.getElementById('hero-carousel');
    this.prevBtn = document.getElementById('hero-prev');
    this.nextBtn = document.getElementById('hero-next');
    this.dotsContainer = document.getElementById('carousel-dots');
    this.cards = document.querySelectorAll('.hero-card');
    
    if (this.carousel) {
      this.currentIndex = 0;
      this.totalCards = this.cards.length;
      this.init();
    }
  }

  init() {
    this.bindEvents();
    this.createDots();
    this.updateNavigation();
    this.startAutoScroll();
  }

  bindEvents() {
    // Navigation buttons
    if (this.prevBtn && this.nextBtn) {
      this.prevBtn.addEventListener('click', () => {
        this.stopAutoScroll();
        this.prevSlide();
        this.startAutoScroll();
      });
      this.nextBtn.addEventListener('click', () => {
        this.stopAutoScroll();
        this.nextSlide();
        this.startAutoScroll();
      });
    }

    // Dot navigation
    this.dotsContainer.addEventListener('click', (e) => {
      if (e.target.classList.contains('carousel-dot')) {
        this.stopAutoScroll();
        const index = Array.from(this.dotsContainer.children).indexOf(e.target);
        this.goToSlide(index);
        this.startAutoScroll();
      }
    });

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowLeft') {
        this.stopAutoScroll();
        this.prevSlide();
        this.startAutoScroll();
      } else if (e.key === 'ArrowRight') {
        this.stopAutoScroll();
        this.nextSlide();
        this.startAutoScroll();
      }
    });

    // Pause auto-scroll on hover
    if (this.carousel) {
      this.carousel.addEventListener('mouseenter', () => this.stopAutoScroll());
      this.carousel.addEventListener('mouseleave', () => this.startAutoScroll());
    }
  }

  createDots() {
    if (!this.dotsContainer || this.totalCards <= 1) return;
    
    this.dotsContainer.innerHTML = '';
    for (let i = 0; i < this.totalCards; i++) {
      const dot = document.createElement('button');
      dot.className = `carousel-dot ${i === 0 ? 'active' : ''}`;
      this.dotsContainer.appendChild(dot);
    }
  }

  updateDots() {
    const dots = this.dotsContainer.querySelectorAll('.carousel-dot');
    dots.forEach((dot, index) => {
      dot.classList.toggle('active', index === this.currentIndex);
    });
  }

  updateNavigation() {
    if (!this.prevBtn || !this.nextBtn) return;
    
    this.prevBtn.disabled = this.currentIndex === 0;
    this.nextBtn.disabled = this.currentIndex === this.totalCards - 1;
  }

  goToSlide(index) {
    this.currentIndex = index;
    this.carousel.scrollTo({
      left: window.innerWidth * index,
      behavior: 'smooth'
    });
    this.updateDots();
    this.updateNavigation();
  }

  nextSlide() {
    if (this.currentIndex < this.totalCards - 1) {
      this.goToSlide(this.currentIndex + 1);
    } else {
      this.goToSlide(0); // Loop to first
    }
  }

  prevSlide() {
    if (this.currentIndex > 0) {
      this.goToSlide(this.currentIndex - 1);
    } else {
      this.goToSlide(this.totalCards - 1); // Loop to last
    }
  }

  startAutoScroll() {
    this.autoScrollInterval = setInterval(() => {
      this.nextSlide();
    }, 5000); // Change slide every 5 seconds
  }

  stopAutoScroll() {
    if (this.autoScrollInterval) {
      clearInterval(this.autoScrollInterval);
      this.autoScrollInterval = null;
    }
  }
}

// Initialize carousel
document.addEventListener('DOMContentLoaded', () => {
  new HeroCarousel();
});

function scrollToNextSection() {
  window.scrollTo({
    top: window.innerHeight,
    behavior: 'smooth'
  });
}
</script>

