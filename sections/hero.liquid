<style>
  .hero {
    position: relative;
    height: 100vh;
    min-height: 800px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: #000;
    margin-top: 0; /* Remove margin for full viewport */
  }

  .hero-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.6; /* Adjusted opacity for Numberc style */
  }

  .hero-video-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.4) 0%,
      rgba(0, 0, 0, 0.2) 50%,
      rgba(0, 0, 0, 0.4) 100%
    );
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    color: white;
    max-width: 800px;
    padding: 0 40px;
  }

  .hero-title {
    font-size: 4rem;
    font-weight: 300; /* Lighter weight like Numberc */
    line-height: 1.1;
    margin-bottom: 24px;
    letter-spacing: -0.02em;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1.2s ease 0.3s forwards;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
  }

  .hero-title strong {
    font-weight: 400; /* Slightly bolder for emphasis */
  }

  .hero-subtitle {
    font-size: 1.3rem;
    line-height: 1.6;
    margin-bottom: 48px;
    color: rgba(255, 255, 255, 0.9);
    font-weight: 300; /* Lighter weight */
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1.2s ease 0.6s forwards;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-actions {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1.2s ease 0.9s forwards;
    position: relative;
    z-index: 3;
  }

  .hero-btn {
    padding: 16px 40px;
    font-size: 0.9rem;
    font-weight: 400;
    text-decoration: none;
    border-radius: 0; /* Square edges like Numberc */
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    text-transform: uppercase;
    letter-spacing: 1.5px;
    position: relative;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.3);
    background: transparent;
    color: white;
  }

  .hero-btn-primary {
    background: white;
    color: #000;
    border: 1px solid white;
  }

  .hero-btn-primary:hover {
    background: transparent;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(255, 255, 255, 0.2);
  }

  .hero-btn-secondary {
    background: transparent;
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .hero-btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.6);
    transform: translateY(-2px);
  }

  /* Numberc-style stats */
  .hero-stats {
    display: flex;
    justify-content: center;
    gap: 80px;
    margin-top: 100px;
    padding-top: 40px;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    opacity: 0;
    animation: fadeIn 1.2s ease 1.2s forwards;
    position: relative;
    z-index: 2;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    font-size: 2rem;
    font-weight: 300;
    display: block;
    color: white;
    margin-bottom: 8px;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .stat-label {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.7);
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 300;
  }

  /* Subtle scroll indicator like Numberc */
  .hero-scroll-indicator {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    color: rgba(255, 255, 255, 0.6);
    animation: float 3s ease-in-out infinite;
    z-index: 2;
    cursor: pointer;
  }

  .hero-scroll-indicator svg {
    width: 20px;
    height: 20px;
  }

  .hero-fallback-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: none;
    opacity: 0.6;
  }

  /* Numberc-style animations */
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    50% {
      transform: translateX(-50%) translateY(-10px);
    }
  }

  /* Gradient text effect like Numberc */
  .gradient-text {
    background: linear-gradient(135deg, #fff 0%, rgba(255,255,255,0.8) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Mobile Styles - Adjusted for Numberc aesthetic */
  @media (max-width: 768px) {
    .hero {
      min-height: 100vh;
      height: 100vh;
    }

    .hero-title {
      font-size: 2.8rem;
      font-weight: 300;
    }

    .hero-subtitle {
      font-size: 1.1rem;
      font-weight: 300;
    }

    .hero-actions {
      flex-direction: column;
      align-items: center;
      gap: 15px;
    }

    .hero-btn {
      width: 220px;
      padding: 14px 32px;
    }

    .hero-stats {
      flex-direction: column;
      gap: 30px;
      margin-top: 80px;
    }

    .stat-number {
      font-size: 1.8rem;
    }

    .hero-content {
      padding: 0 20px;
    }
  }

  @media (max-width: 480px) {
    .hero-title {
      font-size: 2.2rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .hero-stats {
      gap: 25px;
      margin-top: 60px;
    }
  }

  /* Additional Numberc-style enhancements */
  .hero-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.5s;
  }

  .hero-btn:hover::before {
    left: 100%;
  }

  /* Subtle background animation */
  @keyframes backgroundShift {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
    100% {
      transform: scale(1);
    }
  }

  .hero-video {
    animation: backgroundShift 20s ease-in-out infinite;
  }
</style>

