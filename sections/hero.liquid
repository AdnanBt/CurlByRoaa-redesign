<style>
  .hero {
    position: relative;
    height: 80vh;
    min-height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: #0a0a0a;
    margin-top: 80px;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 50%, #2a1e1c 100%);
  }

  /* Single Card Focus Design */
  .hero-carousel {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .carousel-track {
    display: flex;
    gap: 60px; /* More gap for better focus */
    animation: carouselScroll 60s linear infinite;
    padding: 0 100px; /* More padding for center focus */
  }

  .carousel-track:hover {
    animation-play-state: paused;
  }

  .product-card-hero {
    flex: 0 0 600px; /* Much wider cards for single focus */
    height: 500px; /* Slightly shorter for better proportions */
    border-radius: 28px;
    padding: 50px 45px;
    text-align: center;
    backdrop-filter: blur(25px);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    /* Center the card in view */
    scroll-snap-align: center;
  }

  /* Main Content Card Styles */
  .hero-content-card {
    background: linear-gradient(145deg, 
      rgba(0, 0, 0, 0.85) 0%, 
      rgba(0, 0, 0, 0.7) 100%);
    border: 1px solid rgba(255, 255, 255, 0.25);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  /* Different color themes for product cards */
  .product-card-hero:not(.hero-content-card):nth-child(5n+2),
  .product-card-hero:not(.hero-content-card):nth-child(5n+7) {
    background: linear-gradient(145deg, 
      rgba(232, 196, 184, 0.2) 0%, 
      rgba(232, 196, 184, 0.08) 100%);
    border: 1px solid rgba(232, 196, 184, 0.4);
  }

  .product-card-hero:not(.hero-content-card):nth-child(5n+3),
  .product-card-hero:not(.hero-content-card):nth-child(5n+8) {
    background: linear-gradient(145deg, 
      rgba(168, 216, 234, 0.2) 0%, 
      rgba(168, 216, 234, 0.08) 100%);
    border: 1px solid rgba(168, 216, 234, 0.4);
  }

  .product-card-hero:not(.hero-content-card):nth-child(5n+4),
  .product-card-hero:not(.hero-content-card):nth-child(5n+9) {
    background: linear-gradient(145deg, 
      rgba(149, 225, 211, 0.2) 0%, 
      rgba(149, 225, 211, 0.08) 100%);
    border: 1px solid rgba(149, 225, 211, 0.4);
  }

  .product-card-hero:not(.hero-content-card):nth-child(5n+5),
  .product-card-hero:not(.hero-content-card):nth-child(5n+10) {
    background: linear-gradient(145deg, 
      rgba(255, 154, 158, 0.2) 0%, 
      rgba(255, 154, 158, 0.08) 100%);
    border: 1px solid rgba(255, 154, 158, 0.4);
  }

  .product-card-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.15), transparent);
    transition: left 0.8s ease;
  }

  .product-card-hero:hover::before {
    left: 100%;
  }

  .product-card-hero:hover {
    transform: translateY(-15px) scale(1.05);
    background: rgba(255, 255, 255, 0.15);
    box-shadow: 
      0 40px 80px rgba(0, 0, 0, 0.6),
      0 0 0 1px rgba(255, 255, 255, 0.3);
  }

  .product-image-hero {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    object-fit: cover;
    margin: 0 auto 30px;
    border: 3px solid rgba(255, 255, 255, 0.25);
    transition: all 0.5s ease;
    background: linear-gradient(135deg, #2a1e1c, #3a2e2c);
  }

  .product-card-hero:hover .product-image-hero {
    transform: scale(1.15);
    border-color: rgba(255, 255, 255, 0.5);
  }

  .product-title-hero {
    font-size: 1.6rem;
    font-weight: 400;
    color: white;
    margin-bottom: 20px;
    line-height: 1.4;
    letter-spacing: -0.5px;
  }

  .product-price-hero {
    font-size: 1.8rem;
    font-weight: 300;
    color: #E8C4B8;
    margin-bottom: 30px;
    font-family: 'Inter', sans-serif;
  }

  .product-badge-hero {
    position: absolute;
    top: 25px;
    right: 25px;
    background: rgba(255, 255, 255, 0.95);
    color: #000;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
    backdrop-filter: blur(10px);
  }

  /* Hero Content Styles */
  .hero-title {
    font-size: 3.2rem;
    font-weight: 350;
    line-height: 1.1;
    margin-bottom: 25px;
    letter-spacing: -0.02em;
    background: linear-gradient(135deg, #ffffff 0%, #E8C4B8 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-align: center;
  }

  .hero-subtitle {
    font-size: 1.3rem;
    line-height: 1.6;
    margin-bottom: 40px;
    color: rgba(255, 255, 255, 0.85);
    font-weight: 350;
    max-width: 450px;
    text-align: center;
  }

  .hero-actions {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .hero-btn {
    padding: 16px 40px;
    font-size: 0.9rem;
    font-weight: 500;
    text-decoration: none;
    border-radius: 12px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    text-transform: uppercase;
    letter-spacing: 1.2px;
    border: 1px solid rgba(255, 255, 255, 0.4);
    background: transparent;
    color: white;
  }

  .hero-btn-primary {
    background: white;
    color: #000;
    border: 1px solid white;
  }

  .hero-btn-primary:hover {
    background: transparent;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 15px 35px rgba(255, 255, 255, 0.2);
  }

  .hero-btn-secondary {
    background: transparent;
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.4);
  }

  .hero-btn-secondary:hover {
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.6);
    transform: translateY(-2px);
  }

  .hero-scroll-indicator {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    color: rgba(255, 255, 255, 0.6);
    animation: float 3s ease-in-out infinite;
    z-index: 20;
    cursor: pointer;
    background: rgba(0, 0, 0, 0.6);
    border-radius: 50%;
    padding: 12px;
    backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.15);
  }

  /* Animations - Adjusted for single card focus */
  @keyframes carouselScroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-600px * 5 - 60px * 5)); /* Adjusted for wider cards */
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    50% {
      transform: translateX(-50%) translateY(-8px);
    }
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .hero {
      height: 70vh;
      min-height: 500px;
      margin-top: 60px;
    }

    .carousel-track {
      gap: 40px;
      padding: 0 50px;
      animation-duration: 40s;
    }

    .product-card-hero {
      flex: 0 0 400px; /* Still wide but smaller for mobile */
      height: 450px;
      padding: 40px 30px;
    }

    .product-image-hero {
      width: 150px;
      height: 150px;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
      margin-bottom: 30px;
    }

    .hero-actions {
      flex-direction: column;
      align-items: center;
      gap: 15px;
    }

    .hero-btn {
      width: 220px;
      padding: 14px 32px;
    }

    @keyframes carouselScroll {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(calc(-400px * 5 - 40px * 5));
      }
    }
  }

  @media (max-width: 480px) {
    .carousel-track {
      gap: 30px;
      padding: 0 30px;
    }

    .product-card-hero {
      flex: 0 0 320px;
      height: 420px;
      padding: 35px 25px;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }
  }
</style>

