<style>
  .hero {
    position: relative;
    height: 90vh;
    min-height: 700px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: #ffffff;
    margin-top: 80px;
  }

  .hero-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    width: 100%;
  }

  /* Numberc.com Style Grid Layout */
  .hero-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
    height: 100%;
  }

  /* Content Side */
  .hero-content {
    padding: 60px 0;
  }

  .hero-title {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 24px;
    letter-spacing: -0.02em;
    color: #2D2D2D;
  }

  .hero-subtitle {
    font-size: 1.3rem;
    line-height: 1.6;
    margin-bottom: 48px;
    color: #666;
    font-weight: 400;
    max-width: 500px;
  }

  .hero-actions {
    display: flex;
    gap: 20px;
    align-items: center;
    flex-wrap: wrap;
  }

  .hero-btn {
    padding: 16px 40px;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 12px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .hero-btn-primary {
    background: #2D2D2D;
    color: white;
    border: 2px solid #2D2D2D;
  }

  .hero-btn-primary:hover {
    background: #E8C4B8;
    border-color: #E8C4B8;
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(232, 196, 184, 0.4);
  }

  .hero-btn-secondary {
    background: transparent;
    color: #2D2D2D;
    border: 2px solid #2D2D2D;
  }

  .hero-btn-secondary:hover {
    background: #2D2D2D;
    color: white;
    transform: translateY(-2px);
  }

  /* Products Side - Numberc.com Style Carousel */
  .hero-products {
    position: relative;
    height: 600px;
    display: flex;
    align-items: center;
  }

  .products-carousel {
    display: flex;
    gap: 30px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding: 40px 20px;
    scroll-snap-type: x mandatory;
  }

  .products-carousel::-webkit-scrollbar {
    display: none;
  }

  .product-card-hero {
    flex: 0 0 380px;
    scroll-snap-align: start;
    background: white;
    border-radius: 20px;
    padding: 30px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid #f0f0f0;
    text-align: center;
  }

  .product-card-hero:hover {
    transform: translateY(-10px);
    box-shadow: 0 25px 60px rgba(0, 0, 0, 0.15);
  }

  .product-image-container {
    position: relative;
    height: 280px;
    margin-bottom: 25px;
    border-radius: 16px;
    overflow: hidden;
    background: #f8f8f8;
  }

  .product-image-hero {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .product-card-hero:hover .product-image-hero {
    transform: scale(1.05);
  }

  .product-badge-hero {
    position: absolute;
    top: 15px;
    left: 15px;
    background: #E8C4B8;
    color: white;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    z-index: 2;
  }

  .product-title-hero {
    font-size: 1.3rem;
    font-weight: 600;
    color: #2D2D2D;
    margin-bottom: 12px;
    line-height: 1.4;
  }

  .product-price-hero {
    font-size: 1.5rem;
    font-weight: 700;
    color: #E8C4B8;
    margin-bottom: 20px;
  }

  .add-to-cart-btn {
    width: 100%;
    padding: 14px;
    background: #2D2D2D;
    color: white;
    border: none;
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .add-to-cart-btn:hover {
    background: #E8C4B8;
    transform: translateY(-2px);
  }

  /* Carousel Navigation */
  .carousel-nav {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    display: flex;
    justify-content: space-between;
    pointer-events: none;
    z-index: 10;
  }

  .carousel-btn {
    background: white;
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    transition: all 0.3s ease;
    pointer-events: all;
    font-size: 1.2rem;
    color: #2D2D2D;
  }

  .carousel-btn:hover {
    background: #E8C4B8;
    color: white;
    transform: scale(1.1);
  }

  .hero-scroll-indicator {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    color: #666;
    animation: float 3s ease-in-out infinite;
    z-index: 20;
    cursor: pointer;
    background: white;
    border-radius: 50%;
    padding: 12px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    border: 1px solid #f0f0f0;
  }

  @keyframes float {
    0%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    50% {
      transform: translateX(-50%) translateY(-8px);
    }
  }

  /* Mobile Styles */
  @media (max-width: 1024px) {
    .hero-grid {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
    }

    .hero-products {
      height: 500px;
    }

    .product-card-hero {
      flex: 0 0 320px;
    }
  }

  @media (max-width: 768px) {
    .hero {
      height: auto;
      min-height: auto;
      padding: 100px 0 60px;
      margin-top: 60px;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
      margin-bottom: 30px;
    }

    .hero-actions {
      flex-direction: column;
      gap: 15px;
    }

    .hero-btn {
      width: 200px;
      padding: 14px 32px;
    }

    .products-carousel {
      padding: 20px 10px;
    }

    .carousel-nav {
      display: none;
    }

    .product-card-hero {
      flex: 0 0 280px;
      padding: 25px 20px;
    }

    .product-image-container {
      height: 220px;
    }
  }

  @media (max-width: 480px) {
    .hero-title {
      font-size: 2rem;
    }

    .product-card-hero {
      flex: 0 0 260px;
    }
  }
</style>

<section class="hero">
  <div class="hero-container">
    <div class="hero-grid">
      <!-- Content Side -->
      <div class="hero-content">
        <h1 class="hero-title">
          {{ section.settings.heading | default: "Discover Your Perfect Curl Journey" }}
        </h1>
        
        <p class="hero-subtitle">
          {{ section.settings.subheading | default: "Professional-grade hair care solutions tailored to your unique curl pattern. Transform your routine with scientifically formulated products." }}
        </p>
        
        <div class="hero-actions">
          <a href="{{ section.settings.cta_url | default: '/collections/all' }}" class="hero-btn hero-btn-primary">
            {{ section.settings.cta_text | default: 'Shop Collection' }}
          </a>
          <a href="{{ section.settings.secondary_cta_url | default: '/pages/quiz' }}" class="hero-btn hero-btn-secondary">
            {{ section.settings.secondary_cta_text | default: 'Find Your Routine' }}
          </a>
        </div>
      </div>

      <!-- Products Side -->
      <div class="hero-products">
        <div class="products-carousel" id="hero-carousel">
          {%- assign featured_collection = collections[section.settings.collection] | default: collections.all -%}
          
          {%- for product in featured_collection.products limit: 6 -%}
            <div class="product-card-hero">
              {%- if product.tags contains 'bestseller' or product.tags contains 'best seller' -%}
                <div class="product-badge-hero">BESTSELLER</div>
              {%- elsif product.tags contains 'new' -%}
                <div class="product-badge-hero">NEW</div>
              {%- endif -%}

              <div class="product-image-container">
                {%- if product.featured_image -%}
                  <img 
                    src="{{ product.featured_image | img_url: '400x400' }}" 
                    alt="{{ product.title | escape }}"
                    class="product-image-hero"
                    width="400"
                    height="400"
                    loading="lazy"
                  >
                {%- else -%}
                  <div class="product-image-hero" style="background: linear-gradient(135deg, #E8C4B8, #D4A59A); display: flex; align-items: center; justify-content: center; color: white; font-size: 1.2rem;">
                    {{ product.title | truncate: 15 }}
                  </div>
                {%- endif -%}
              </div>

              <h3 class="product-title-hero">{{ product.title }}</h3>
              <div class="product-price-hero">{{ product.price | money }}</div>
              
              <form action="/cart/add" method="post" class="product-form">
                <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                <input type="hidden" name="quantity" value="1">
                <button type="submit" class="add-to-cart-btn" name="add">
                  Add to Cart
                </button>
              </form>
            </div>
          {%- else -%}
            <!-- Fallback demo products -->
            {%- for i in (1..4) -%}
              <div class="product-card-hero">
                <div class="product-badge-hero">{{ 'BESTSELLER' }}</div>
                <div class="product-image-container">
                  <div class="product-image-hero" style="background: linear-gradient(135deg, #E8C4B8, #D4A59A); display: flex; align-items: center; justify-content: center; color: white; font-size: 1.5rem;">
                    Product {{ i }}
                  </div>
                </div>
                <h3 class="product-title-hero">Demo Product {{ i }}</h3>
                <div class="product-price-hero">{{ 29.99 | money }}</div>
                <button class="add-to-cart-btn">Add to Cart</button>
              </div>
            {%- endfor -%}
          {%- endfor -%}
        </div>

        <!-- Carousel Navigation -->
        <div class="carousel-nav">
          <button class="carousel-btn prev-btn" id="hero-prev">
            ‹
          </button>
          <button class="carousel-btn next-btn" id="hero-next">
            ›
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="hero-scroll-indicator" onclick="scrollToNextSection()">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M12 5v14M5 12l7 7 7-7"/>
    </svg>
  </div>
</section>

<script>
class HeroCarousel {
  constructor() {
    this.carousel = document.getElementById('hero-carousel');
    this.prevBtn = document.getElementById('hero-prev');
    this.nextBtn = document.getElementById('hero-next');
    
    if (this.carousel) {
      this.cardWidth = 380 + 30; // card width + gap
      this.init();
    }
  }

  init() {
    this.bindEvents();
  }

  bindEvents() {
    if (this.prevBtn && this.nextBtn) {
      this.prevBtn.addEventListener('click', () => this.scroll('prev'));
      this.nextBtn.addEventListener('click', () => this.scroll('next'));
    }

    // Pause auto-scroll on hover
    if (this.carousel) {
      this.carousel.addEventListener('mouseenter', () => this.stopAutoScroll());
      this.carousel.addEventListener('mouseleave', () => this.startAutoScroll());
    }
  }

  scroll(direction) {
    if (!this.carousel) return;
    
    const scrollAmount = this.cardWidth * 2; // Scroll 2 cards at a time
    
    if (direction === 'next') {
      this.carousel.scrollBy({
        left: scrollAmount,
        behavior: 'smooth'
      });
    } else {
      this.carousel.scrollBy({
        left: -scrollAmount,
        behavior: 'smooth'
      });
    }
  }
}

// Initialize carousel
document.addEventListener('DOMContentLoaded', () => {
  new HeroCarousel();
});

function scrollToNextSection() {
  window.scrollTo({
    top: window.innerHeight,
    behavior: 'smooth'
  });
}
</script>

