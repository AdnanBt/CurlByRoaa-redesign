<style>
  .hero {
    position: relative;
    height: 100vh;
    min-height: 800px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: #000;
  }

  .hero-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.6;
  }

  .hero-video-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.4) 0%,
      rgba(0, 0, 0, 0.2) 50%,
      rgba(0, 0, 0, 0.4) 100%
    );
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    color: white;
    max-width: 800px;
    padding: 0 40px;
  }

  .hero-title {
    font-size: 4rem;
    font-weight: 300;
    line-height: 1.1;
    margin-bottom: 24px;
    letter-spacing: -0.02em;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1.2s ease 0.3s forwards;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
  }

  .hero-title strong {
    font-weight: 400;
  }

  .hero-subtitle {
    font-size: 1.3rem;
    line-height: 1.6;
    margin-bottom: 48px;
    color: rgba(255, 255, 255, 0.9);
    font-weight: 300;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1.2s ease 0.6s forwards;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-actions {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1.2s ease 0.9s forwards;
  }

  .hero-btn {
    padding: 16px 40px;
    font-size: 0.9rem;
    font-weight: 400;
    text-decoration: none;
    border-radius: 0;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    text-transform: uppercase;
    letter-spacing: 1.5px;
    position: relative;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.3);
    background: transparent;
    color: white;
  }

  .hero-btn-primary {
    background: white;
    color: #000;
    border: 1px solid white;
  }

  .hero-btn-primary:hover {
    background: transparent;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(255, 255, 255, 0.2);
  }

  .hero-btn-secondary {
    background: transparent;
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .hero-btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.6);
    transform: translateY(-2px);
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    gap: 80px;
    margin-top: 100px;
    padding-top: 40px;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    opacity: 0;
    animation: fadeIn 1.2s ease 1.2s forwards;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    font-size: 2rem;
    font-weight: 300;
    display: block;
    color: white;
    margin-bottom: 8px;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .stat-label {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.7);
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 300;
  }

  .hero-scroll-indicator {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    color: rgba(255, 255, 255, 0.6);
    animation: float 3s ease-in-out infinite;
    z-index: 2;
    cursor: pointer;
  }

  .hero-scroll-indicator svg {
    width: 20px;
    height: 20px;
  }

  .hero-fallback-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: none;
    opacity: 0.6;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    50% {
      transform: translateX(-50%) translateY(-10px);
    }
  }

  .gradient-text {
    background: linear-gradient(135deg, #fff 0%, rgba(255,255,255,0.8) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .hero {
      min-height: 100vh;
    }

    .hero-title {
      font-size: 2.8rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }

    .hero-actions {
      flex-direction: column;
      align-items: center;
      gap: 15px;
    }

    .hero-btn {
      width: 220px;
      padding: 14px 32px;
    }

    .hero-stats {
      flex-direction: column;
      gap: 30px;
      margin-top: 80px;
    }

    .stat-number {
      font-size: 1.8rem;
    }

    .hero-content {
      padding: 0 20px;
    }
  }

  @media (max-width: 480px) {
    .hero-title {
      font-size: 2.2rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .hero-stats {
      gap: 25px;
      margin-top: 60px;
    }
  }
</style>

<section class="hero">
  {% comment %} Use asset_url for better performance {% endcomment %}
  {% if section.settings.video_asset != blank %}
    <video class="hero-video" autoplay muted loop playsinline 
           poster="{{ section.settings.fallback_image | image_url: width: 1920 }}"
           onerror="document.getElementById('hero-fallback').style.display='block'; this.style.display='none';">
      <source src="{{ section.settings.video_asset | asset_url }}" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  {% elsif section.settings.video_url != blank %}
    <video class="hero-video" autoplay muted loop playsinline 
           poster="{{ section.settings.fallback_image | image_url: width: 1920 }}"
           onerror="document.getElementById('hero-fallback').style.display='block'; this.style.display='none';">
      <source src="{{ section.settings.video_url }}" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  {% endif %}
  
  {% if section.settings.fallback_image != blank %}
    <img 
      id="hero-fallback"
      class="hero-fallback-image"
      src="{{ section.settings.fallback_image | image_url: width: 1920 }}" 
      alt="{{ section.settings.heading | escape }}"
      width="1920"
      height="1080"
      loading="eager"
    >
  {% endif %}
  
  <div class="hero-video-overlay"></div>

  <div class="hero-content">
    <h1 class="hero-title">
      <span class="gradient-text">
        {{ section.settings.heading }}
      </span>
    </h1>
    
    <p class="hero-subtitle">
      {{ section.settings.subheading }}
    </p>
    
    <div class="hero-actions">
      {% if section.settings.cta_url != blank and section.settings.cta_text != blank %}
        <a href="{{ section.settings.cta_url }}" class="hero-btn hero-btn-primary">
          {{ section.settings.cta_text }}
        </a>
      {% endif %}
      
      {% if section.settings.secondary_cta_url != blank and section.settings.secondary_cta_text != blank %}
        <a href="{{ section.settings.secondary_cta_url }}" class="hero-btn hero-btn-secondary">
          {{ section.settings.secondary_cta_text }}
        </a>
      {% endif %}
    </div>

    <div class="hero-stats">
      <div class="stat-item">
        <span class="stat-number">10K+</span>
        <span class="stat-label">Transformations</span>
      </div>
      <div class="stat-item">
        <span class="stat-number">4.9â˜…</span>
        <span class="stat-label">Rated Excellence</span>
      </div>
      <div class="stat-item">
        <span class="stat-number">100%</span>
        <span class="stat-label">Pure Ingredients</span>
      </div>
    </div>
  </div>

  <div class="hero-scroll-indicator" onclick="scrollToNextSection()">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
      <path d="M12 5v14M5 12l7 7 7-7"/>
    </svg>
  </div>
</section>

<script>
function scrollToNextSection() {
  window.scrollTo({
    top: window.innerHeight,
    behavior: 'smooth'
  });
}

document.addEventListener('DOMContentLoaded', function() {
  const heroVideo = document.querySelector('.hero-video');
  const fallbackImage = document.getElementById('hero-fallback');
  
  if (heroVideo) {
    heroVideo.play().catch(function(error) {
      console.log('Video autoplay failed, showing fallback');
      if (fallbackImage) {
        fallbackImage.style.display = 'block';
        heroVideo.style.display = 'none';
      }
    });
  }
});
</script>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Elevate Your Natural Beauty"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Experience the perfect harmony of science and nature with our meticulously crafted hair care solutions"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Primary Button Text",
      "default": "Explore Products"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "secondary_cta_text",
      "label": "Secondary Button Text",
      "default": "Begin Journey"
    },
    {
      "type": "url",
      "id": "secondary_cta_url",
      "label": "Secondary Button Link"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL",
      "info": "External video URL (optional)"
    },
    {
      "type": "text",
      "id": "video_asset",
      "label": "Video Asset",
      "info": "Upload video to Assets and enter filename (e.g., 'hero-video.mp4')"
    },
    {
      "type": "image_picker",
      "id": "fallback_image",
      "label": "Fallback Image",
      "info": "This image will show if the video fails to load"
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "category": "Homepage"
    }
  ]
}
{% endschema %}