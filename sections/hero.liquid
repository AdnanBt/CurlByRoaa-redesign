<style>
  .hero {
    position: relative;
    height: 60vh;
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
   /* background: #000;
    /* ADD THESE FIXES */
    margin-top: 80px; /* Account for fixed header height */
    padding-top: 40px; /* Additional spacing */
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
  }

  /* Product Cards Carousel */
  .hero-carousel {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .carousel-track {
    display: flex;
    gap: 60px;
    animation: carouselScroll 40s linear infinite;
    padding: 0 100px;
  }

  .carousel-track:hover {
    animation-play-state: paused;
  }

  .product-card-hero {
    flex: 0 0 380px;
    height: 480px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 24px;
    padding: 40px 30px;
    text-align: center;
    backdrop-filter: blur(20px);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .product-card-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
    transition: left 0.6s ease;
  }

  .product-card-hero:hover::before {
    left: 100%;
  }

  .product-card-hero:hover {
    transform: translateY(-15px) scale(1.05);
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(232, 196, 184, 0.4);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.4);
  }

  .product-image-hero {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    object-fit: cover;
    margin: 0 auto 30px;
    border: 2px solid rgba(232, 196, 184, 0.3);
    transition: all 0.4s ease;
  }

  .product-card-hero:hover .product-image-hero {
    transform: scale(1.15);
    border-color: rgba(232, 196, 184, 0.6);
  }

  .product-title-hero {
    font-size: 1.4rem;
    font-weight: 400;
    color: white;
    margin-bottom: 15px;
    line-height: 1.4;
  }

  .product-price-hero {
    font-size: 1.6rem;
    font-weight: 300;
    color: #E8C4B8;
    margin-bottom: 25px;
  }

  .product-badge-hero {
    position: absolute;
    top: 20px;
    right: 20px;
    background: #E8C4B8;
    color: #000;
    padding: 6px 12px;
    border-radius: 15px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
    color: white;
    max-width: 800px;
    padding: 0 40px;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(20px);
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 60px 40px;
    /* ADD THIS TO REMOVE THE TOP CARD */
    margin-top: -100px; /* Pull content up to avoid overlapping with carousel */
  }

  .hero-title {
    font-size: 4rem;
    font-weight: 300;
    line-height: 1.1;
    margin-bottom: 24px;
    letter-spacing: -0.02em;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1.2s ease 0.3s forwards;
  }

  .hero-title strong {
    font-weight: 400;
    background: linear-gradient(135deg, #E8C4B8 0%, #ffffff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.3rem;
    line-height: 1.6;
    margin-bottom: 48px;
    color: rgba(255, 255, 255, 0.8);
    font-weight: 300;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1.2s ease 0.6s forwards;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-actions {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1.2s ease 0.9s forwards;
  }

  .hero-btn {
    padding: 16px 40px;
    font-size: 0.9rem;
    font-weight: 400;
    text-decoration: none;
    border-radius: 0;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    text-transform: uppercase;
    letter-spacing: 1.5px;
    position: relative;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.3);
    background: transparent;
    color: white;
  }

  .hero-btn-primary {
    background: white;
    color: #000;
    border: 1px solid white;
  }

  .hero-btn-primary:hover {
    background: transparent;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(255, 255, 255, 0.2);
  }

  .hero-btn-secondary {
    background: transparent;
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .hero-btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.6);
    transform: translateY(-2px);
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    gap: 80px;
    margin-top: 60px;
    padding-top: 40px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    opacity: 0;
    animation: fadeIn 1.2s ease 1.2s forwards;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    font-size: 2rem;
    font-weight: 300;
    display: block;
    color: #E8C4B8;
    margin-bottom: 8px;
  }

  .stat-label {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.7);
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 300;
  }

  .hero-scroll-indicator {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    color: rgba(255, 255, 255, 0.6);
    animation: float 3s ease-in-out infinite;
    z-index: 10;
    cursor: pointer;
    background: rgba(0, 0, 0, 0.5);
    border-radius: 50%;
    padding: 10px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .hero-scroll-indicator svg {
    width: 20px;
    height: 20px;
  }

  /* Animations */
  @keyframes carouselScroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-380px * 4 - 60px * 4));
    }
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    50% {
      transform: translateX(-50%) translateY(-10px);
    }
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .hero {
      min-height: 100vh;
      margin-top: 60px; /* Adjust for mobile header */
      padding-top: 20px;
    }

    .hero-title {
      font-size: 2.8rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }

    .hero-actions {
      flex-direction: column;
      align-items: center;
      gap: 15px;
    }

    .hero-btn {
      width: 220px;
      padding: 14px 32px;
    }

    .hero-stats {
      flex-direction: column;
      gap: 30px;
      margin-top: 40px;
    }

    .stat-number {
      font-size: 1.8rem;
    }

    .hero-content {
      padding: 40px 20px;
      margin: 0 20px;
      margin-top: -50px; /* Adjust for mobile */
    }

    /* Adjust carousel for mobile */
    .carousel-track {
      gap: 30px;
      padding: 0 50px;
      animation-duration: 25s;
    }

    .product-card-hero {
      flex: 0 0 280px;
      height: 380px;
      padding: 30px 20px;
    }

    .product-image-hero {
      width: 120px;
      height: 120px;
    }

    .product-title-hero {
      font-size: 1.1rem;
    }

    .product-price-hero {
      font-size: 1.3rem;
    }
  }

  @media (max-width: 480px) {
    .hero-title {
      font-size: 2.2rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .hero-stats {
      gap: 25px;
      margin-top: 30px;
    }

    .carousel-track {
      animation-duration: 20s;
    }
  }
</style>

