/* HERO SECTION - MOBILE FIRST */
.hero {
  position: relative;
  width: 100%;
  padding: calc(var(--header-height-mobile) + var(--space-xl)) var(--space-sm) var(--space-2xl);
  background: linear-gradient(135deg, #FAF8F6 0%, #FFFFFF 100%);
  overflow: hidden;
}

.hero-carousel-container {
  width: 100%;
  position: relative;
}

.hero-carousel {
  display: flex;
  scroll-snap-type: x mandatory;
  overflow-x: auto;
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
  -ms-overflow-style: none;
  width: 100%;
}

.hero-carousel::-webkit-scrollbar {
  display: none;
}

.hero-card {
  flex: 0 0 100%;
  scroll-snap-align: start;
  width: 100%;
  padding: var(--space-lg);
  position: relative;
}

.card-content {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--space-xl);
  align-items: center;
  width: 100%;
}

.card-text {
  order: 2;
  text-align: center;
}

.card-badge {
  display: inline-block;
  background: var(--color-accent);
  color: white;
  padding: var(--space-xs) var(--space-md);
  border-radius: 25px;
  font-size: var(--fs-xs);
  font-weight: 600;
  margin-bottom: var(--space-lg);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.card-title {
  font-size: var(--fs-3xl);
  font-weight: 700;
  line-height: 1.1;
  margin-bottom: var(--space-md);
  color: var(--color-primary);
}

.card-description {
  font-size: var(--fs-base);
  line-height: 1.6;
  margin-bottom: var(--space-lg);
  color: var(--color-text-light);
}

.card-price {
  font-size: var(--fs-2xl);
  font-weight: 700;
  color: var(--color-accent);
  margin-bottom: var(--space-lg);
}

.card-actions {
  display: flex;
  flex-direction: column;
  gap: var(--space-sm);
  align-items: center;
}

.card-btn {
  min-height: 44px;
  min-width: 200px;
  padding: var(--space-sm) var(--space-lg);
  font-size: var(--fs-sm);
  font-weight: 600;
  text-decoration: none;
  border-radius: var(--border-radius);
  transition: all var(--transition-base);
  text-transform: uppercase;
  letter-spacing: 0.5px;
  touch-action: manipulation;
}

.card-image {
  order: 1;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.product-image-large,
.image-placeholder {
  width: 100%;
  max-width: 400px;
  height: 300px;
  border-radius: var(--border-radius-xl);
  object-fit: cover;
  background: #f8f8f8;
}

/* Carousel Navigation for Mobile */
.carousel-dots {
  position: absolute;
  bottom: var(--space-lg);
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: var(--space-xs);
  z-index: 10;
}

.carousel-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: rgba(45, 45, 45, 0.3);
  border: none;
  cursor: pointer;
  transition: all var(--transition-base);
  touch-action: manipulation;
}

.carousel-btn {
  display: none; /* Hide on mobile, use swipe */
}

.hero-scroll-indicator {
  display: none;
}

/* TABLET (640px and up) */
@media (min-width: 640px) {
  .hero {
    padding: calc(var(--header-height-mobile) + var(--space-2xl)) var(--space-md) var(--space-3xl);
  }
  
  .card-title {
    font-size: var(--fs-4xl);
  }
  
  .product-image-large,
  .image-placeholder {
    height: 350px;
  }
  
  .card-actions {
    flex-direction: row;
    justify-content: center;
  }
}

/* TABLET LANDSCAPE (768px and up) */
@media (min-width: 768px) {
  .hero {
    padding-top: calc(var(--header-height-desktop) + var(--space-2xl));
  }
  
  .card-content {
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2xl);
  }
  
  .card-text {
    order: 1;
    text-align: left;
  }
  
  .card-image {
    order: 2;
  }
  
  .card-actions {
    justify-content: flex-start;
  }
  
  .product-image-large,
  .image-placeholder {
    height: 400px;
  }
  
  /* Show navigation buttons */
  .carousel-btn {
    display: flex;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: white;
    border: none;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: var(--shadow-lg);
    z-index: 10;
    touch-action: manipulation;
  }
  
  .carousel-btn.prev {
    left: var(--space-md);
  }
  
  .carousel-btn.next {
    right: var(--space-md);
  }
}

/* DESKTOP (1024px and up) */
@media (min-width: 1024px) {
  .hero {
    height: 90vh;
    min-height: 700px;
    max-height: 900px;
    padding: 0;
    display: flex;
    align-items: center;
  }
  
  .hero-card {
    padding: 0 var(--space-3xl);
  }
  
  .card-title {
    font-size: var(--fs-5xl);
  }
  
  .product-image-large,
  .image-placeholder {
    max-width: 600px;
    height: 500px;
  }
  
  .hero-scroll-indicator {
    display: block;
    position: absolute;
    bottom: var(--space-xl);
    left: 50%;
    transform: translateX(-50%);
    animation: float 3s ease-in-out infinite;
    z-index: 20;
  }
}

/* LARGE DESKTOP (1400px and up) */
@media (min-width: 1400px) {
  .hero-card {
    padding: 0;
  }
  
  .card-content {
    max-width: var(--container-width, 1200px);
    margin: 0 auto;
  }
}

/* ANIMATION */
@keyframes float {
  0%, 100% { transform: translateX(-50%) translateY(0); }
  50% { transform: translateX(-50%) translateY(-10px); }
}

<section class="hero">
  <div class="hero-carousel-container">
    <div class="hero-carousel" id="hero-carousel">
      {%- assign featured_collection = collections[section.settings.collection] | default: collections.all -%}
      
      {%- if featured_collection.products.size > 0 -%}
        {%- for product in featured_collection.products limit: 5 -%}
          <div class="hero-card" data-index="{{ forloop.index0 }}">
            <div class="card-content">
              <div class="card-text">
                {%- if product.tags contains 'bestseller' or product.tags contains 'best seller' -%}
                  <div class="card-badge">BESTSELLER</div>
                {%- elsif product.tags contains 'new' -%}
                  <div class="card-badge">NEW</div>
                {%- endif -%}

                <h2 class="card-title">{{ product.title }}</h2>
                
                <p class="card-description">
                  {{ product.description | strip_html | truncatewords: 25 | default: "Professional-grade hair care solution designed for your unique curl pattern. Experience the perfect harmony of science and nature." }}
                </p>
                
                <div class="card-price">{{ product.price | money }}</div>
                
                <div class="card-actions">
                  <form action="{{ routes.cart_add_url }}" method="post" class="product-form">
                    <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                    <input type="hidden" name="quantity" value="1">
                    <button type="submit" class="card-btn card-btn-primary" name="add">
                      Add to Cart
                    </button>
                  </form>
                  <a href="{{ product.url }}" class="card-btn card-btn-secondary">
                    Learn More
                  </a>
                </div>
              </div>
              
              <div class="card-image">
                {%- if product.featured_image -%}
                  <img 
                    src="{{ product.featured_image | image_url: width: 600, height: 600 }}" 
                    alt="{{ product.title | escape }}"
                    class="product-image-large"
                    width="600"
                    height="600"
                    loading="lazy"
                    onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                  >
                  <div class="image-placeholder" style="display: none;">
                    {{ product.title | truncate: 20 }}
                  </div>
                {%- else -%}
                  <div class="image-placeholder">
                    {{ product.title | truncate: 20 }}
                  </div>
                {%- endif -%}
              </div>
            </div>
          </div>
        {%- endfor -%}
      {%- else -%}
        <!-- Fallback demo cards when no products exist -->
        {%- for i in (1..3) -%}
          <div class="hero-card" data-index="{{ forloop.index0 }}">
            <div class="card-content">
              <div class="card-text">
                <div class="card-badge">BESTSELLER</div>
                
                <h2 class="card-title">
                  {%- if i == 1 -%}Curl Defining Cream
                  {%- elsif i == 2 -%}Hydrating Shampoo
                  {%- else -%}Repairing Conditioner
                  {%- endif -%}
                </h2>
                
                <p class="card-description">
                  Professional-grade hair care solution designed for your unique curl pattern. Experience the perfect harmony of science and nature with our meticulously crafted formula.
                </p>
                
                <div class="card-price">{{ 29.99 | times: i | money }}</div>
                
                <div class="card-actions">
                  <button class="card-btn card-btn-primary" onclick="window.location.href='/collections/all'">
                    Add to Cart
                  </button>
                  <a href="/collections/all" class="card-btn card-btn-secondary">
                    Learn More
                  </a>
                </div>
              </div>
              
              <div class="card-image">
                <div class="image-placeholder">
                  {%- if i == 1 -%}Curl Cream
                  {%- elsif i == 2 -%}Shampoo
                  {%- else -%}Conditioner
                  {%- endif -%}
                </div>
              </div>
            </div>
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>

    <!-- Carousel Navigation -->
    <div class="carousel-nav">
      <button class="carousel-btn prev-btn" id="hero-prev">
        ‹
      </button>
      <button class="carousel-btn next-btn" id="hero-next">
        ›
      </button>
    </div>

    <!-- Carousel Dots -->
    <div class="carousel-dots" id="carousel-dots">
      <!-- Dots will be generated by JavaScript -->
    </div>
  </div>

  <div class="hero-scroll-indicator" onclick="scrollToNextSection()">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M12 5v14M5 12l7 7 7-7"/>
    </svg>
  </div>
</section>

<script>
class HeroCarousel {
  constructor() {
    this.carousel = document.getElementById('hero-carousel');
    this.prevBtn = document.getElementById('hero-prev');
    this.nextBtn = document.getElementById('hero-next');
    this.dotsContainer = document.getElementById('carousel-dots');
    this.cards = document.querySelectorAll('.hero-card');
    
    if (this.carousel) {
      this.currentIndex = 0;
      this.totalCards = this.cards.length;
      this.init();
    }
  }

  init() {
    this.bindEvents();
    this.createDots();
    this.updateNavigation();
    this.startAutoScroll();
  }

  bindEvents() {
    // Navigation buttons
    if (this.prevBtn && this.nextBtn) {
      this.prevBtn.addEventListener('click', () => {
        this.stopAutoScroll();
        this.prevSlide();
        this.startAutoScroll();
      });
      this.nextBtn.addEventListener('click', () => {
        this.stopAutoScroll();
        this.nextSlide();
        this.startAutoScroll();
      });
    }

    // Dot navigation
    this.dotsContainer.addEventListener('click', (e) => {
      if (e.target.classList.contains('carousel-dot')) {
        this.stopAutoScroll();
        const index = Array.from(this.dotsContainer.children).indexOf(e.target);
        this.goToSlide(index);
        this.startAutoScroll();
      }
    });

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowLeft') {
        this.stopAutoScroll();
        this.prevSlide();
        this.startAutoScroll();
      } else if (e.key === 'ArrowRight') {
        this.stopAutoScroll();
        this.nextSlide();
        this.startAutoScroll();
      }
    });

    // Pause auto-scroll on hover
    if (this.carousel) {
      this.carousel.addEventListener('mouseenter', () => this.stopAutoScroll());
      this.carousel.addEventListener('mouseleave', () => this.startAutoScroll());
    }
  }

  createDots() {
    if (!this.dotsContainer || this.totalCards <= 1) return;
    
    this.dotsContainer.innerHTML = '';
    for (let i = 0; i < this.totalCards; i++) {
      const dot = document.createElement('button');
      dot.className = `carousel-dot ${i === 0 ? 'active' : ''}`;
      this.dotsContainer.appendChild(dot);
    }
  }

  updateDots() {
    const dots = this.dotsContainer.querySelectorAll('.carousel-dot');
    dots.forEach((dot, index) => {
      dot.classList.toggle('active', index === this.currentIndex);
    });
  }

  updateNavigation() {
    if (!this.prevBtn || !this.nextBtn) return;
    
    this.prevBtn.disabled = this.currentIndex === 0;
    this.nextBtn.disabled = this.currentIndex === this.totalCards - 1;
  }

  goToSlide(index) {
    this.currentIndex = index;
    this.carousel.scrollTo({
      left: window.innerWidth * index,
      behavior: 'smooth'
    });
    this.updateDots();
    this.updateNavigation();
  }

  nextSlide() {
    if (this.currentIndex < this.totalCards - 1) {
      this.goToSlide(this.currentIndex + 1);
    } else {
      this.goToSlide(0); // Loop to first
    }
  }

  prevSlide() {
    if (this.currentIndex > 0) {
      this.goToSlide(this.currentIndex - 1);
    } else {
      this.goToSlide(this.totalCards - 1); // Loop to last
    }
  }

  startAutoScroll() {
    this.autoScrollInterval = setInterval(() => {
      this.nextSlide();
    }, 5000); // Change slide every 5 seconds
  }

  stopAutoScroll() {
    if (this.autoScrollInterval) {
      clearInterval(this.autoScrollInterval);
      this.autoScrollInterval = null;
    }
  }
}

// Initialize carousel
document.addEventListener('DOMContentLoaded', () => {
  new HeroCarousel();
});

function scrollToNextSection() {
  window.scrollTo({
    top: window.innerHeight,
    behavior: 'smooth'
  });
}

// Image error handling
document.addEventListener('DOMContentLoaded', function() {
  const images = document.querySelectorAll('.product-image-large');
  images.forEach(img => {
    img.addEventListener('error', function() {
      this.style.display = 'none';
      const placeholder = this.nextElementSibling;
      if (placeholder && placeholder.classList.contains('image-placeholder')) {
        placeholder.style.display = 'flex';
      }
    });
  });
});
</script>

