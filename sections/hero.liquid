<style>
  .hero {
    position: relative;
    height: 80vh;
    min-height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: #0a0a0a;
    margin-top: 80px;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 50%, #2a1e1c 100%);
  }

  /* Single Card Focus Design */
  .hero-carousel {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .carousel-track {
    display: flex;
    gap: 40px;
    animation: carouselScroll 60s linear infinite;
    padding: 0 50px;
  }

  .product-card-hero {
    flex: 0 0 420px; /* Wider cards */
    height: 520px; /* Taller cards */
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 28px;
    padding: 50px 35px;
    text-align: center;
    backdrop-filter: blur(25px);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    /* Subtle gradient backgrounds like Numberc.com */
    background: linear-gradient(145deg, 
      rgba(232, 196, 184, 0.1) 0%, 
      rgba(168, 216, 234, 0.05) 50%, 
      rgba(149, 225, 211, 0.08) 100%);
  }

  /* Different color themes for each card like Numberc.com */
  .product-card-hero:nth-child(1) {
    background: linear-gradient(145deg, 
      rgba(232, 196, 184, 0.15) 0%, 
      rgba(232, 196, 184, 0.05) 100%);
    border-color: rgba(232, 196, 184, 0.3);
  }

  .product-card-hero:nth-child(2) {
    background: linear-gradient(145deg, 
      rgba(168, 216, 234, 0.15) 0%, 
      rgba(168, 216, 234, 0.05) 100%);
    border-color: rgba(168, 216, 234, 0.3);
  }

  .product-card-hero:nth-child(3) {
    background: linear-gradient(145deg, 
      rgba(149, 225, 211, 0.15) 0%, 
      rgba(149, 225, 211, 0.05) 100%);
    border-color: rgba(149, 225, 211, 0.3);
  }

  .product-card-hero:nth-child(4) {
    background: linear-gradient(145deg, 
      rgba(255, 154, 158, 0.15) 0%, 
      rgba(255, 154, 158, 0.05) 100%);
    border-color: rgba(255, 154, 158, 0.3);
  }

  .product-card-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
    transition: left 0.8s ease;
  }

  .product-card-hero:hover::before {
    left: 100%;
  }

  .product-card-hero:hover {
    transform: translateY(-20px) scale(1.08);
    background: rgba(255, 255, 255, 0.12);
    box-shadow: 
      0 30px 60px rgba(0, 0, 0, 0.5),
      0 0 0 1px rgba(255, 255, 255, 0.2);
  }

  .product-image-hero {
    width: 220px;
    height: 220px;
    border-radius: 50%;
    object-fit: cover;
    margin: 0 auto 35px;
    border: 3px solid rgba(255, 255, 255, 0.2);
    transition: all 0.5s ease;
    background: linear-gradient(135deg, #2a1e1c, #3a2e2c);
  }

  .product-card-hero:hover .product-image-hero {
    transform: scale(1.2);
    border-color: rgba(255, 255, 255, 0.4);
  }

  .product-title-hero {
    font-size: 1.5rem;
    font-weight: 400;
    color: white;
    margin-bottom: 20px;
    line-height: 1.4;
    letter-spacing: -0.5px;
  }

  .product-price-hero {
    font-size: 1.8rem;
    font-weight: 300;
    color: #E8C4B8;
    margin-bottom: 30px;
    font-family: 'Inter', sans-serif;
  }

  .product-badge-hero {
    position: absolute;
    top: 25px;
    right: 25px;
    background: rgba(255, 255, 255, 0.9);
    color: #000;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
    backdrop-filter: blur(10px);
  }

  /* Hero Content - Like Numberc.com */
  .hero-content {
    position: relative;
    z-index: 20;
    text-align: center;
    color: white;
    max-width: 650px;
    padding: 60px 45px;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(30px);
    border-radius: 24px;
    border: 1px solid rgba(255, 255, 255, 0.15);
    margin: 0 auto;
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 350;
    line-height: 1.1;
    margin-bottom: 20px;
    letter-spacing: -0.02em;
    background: linear-gradient(135deg, #ffffff 0%, #E8C4B8 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    line-height: 1.6;
    margin-bottom: 40px;
    color: rgba(255, 255, 255, 0.8);
    font-weight: 350;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-actions {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .hero-btn {
    padding: 16px 36px;
    font-size: 0.9rem;
    font-weight: 400;
    text-decoration: none;
    border-radius: 12px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    text-transform: uppercase;
    letter-spacing: 1.2px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    background: transparent;
    color: white;
  }

  .hero-btn-primary {
    background: white;
    color: #000;
    border: 1px solid white;
  }

  .hero-btn-primary:hover {
    background: transparent;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 15px 35px rgba(255, 255, 255, 0.15);
  }

  .hero-btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.5);
    transform: translateY(-2px);
  }

  .hero-scroll-indicator {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    color: rgba(255, 255, 255, 0.6);
    animation: float 3s ease-in-out infinite;
    z-index: 20;
    cursor: pointer;
    background: rgba(0, 0, 0, 0.6);
    border-radius: 50%;
    padding: 12px;
    backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.15);
  }

  /* Animations */
  @keyframes carouselScroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-420px * 4 - 40px * 4));
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    50% {
      transform: translateX(-50%) translateY(-8px);
    }
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .hero {
      height: 70vh;
      min-height: 500px;
      margin-top: 60px;
    }

    .carousel-track {
      gap: 25px;
      padding: 0 30px;
      animation-duration: 40s;
    }

    .product-card-hero {
      flex: 0 0 320px;
      height: 420px;
      padding: 35px 25px;
    }

    .product-image-hero {
      width: 160px;
      height: 160px;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-content {
      padding: 40px 25px;
      margin: 0 20px;
    }

    .hero-actions {
      flex-direction: column;
      align-items: center;
    }

    .hero-btn {
      width: 200px;
    }
  }
</style>

