<style>
  /* Reset and Base Styles */
  :root {
    --header-height: 80px;
    --announcement-height: 40px;
    --primary-color: #E8C4B8;
    --text-dark: #2D2D2D;
    --text-light: #666666;
    --text-black: #000000;
    --white: #FFFFFF;
    --gray-light: #f9f9f9;
    --sidebar-width: 350px;
  }

  /* Announcement Bar */
  .announcement-bar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1001;
    height: var(--announcement-height);
  }

  /* Header */
  .header {
    background: transparent;
    position: fixed;
    top: var(--announcement-height);
    left: 0;
    right: 0;
    z-index: 1000;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  }

  body {
    padding-top: calc(var(--header-height) + var(--announcement-height));
  }

  .header.scrolled {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  }

  body:not(.has-announcement) .header {
    top: 0;
  }
  
  body:not(.has-announcement) {
    padding-top: var(--header-height);
  }

  .header-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  /* NEW: Adjust header container when sidebar is visible on desktop */
  @media (min-width: 1025px) {
    body.sidebar-desktop-visible .header-container {
      margin-left: var(--sidebar-width);
      max-width: calc(1400px - var(--sidebar-width));
    }
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: var(--header-height);
  }

  /* Logo */
  .logo {
    flex-shrink: 0;
    z-index: 1002;
  }

  .logo img {
    height: 40px;
    width: auto;
    max-width: 120px;
    object-fit: contain;
  }

  /* Main Navigation - DESKTOP */
  .nav-main {
    display: flex;
    gap: 40px;
    align-items: center;
    position: relative;
  }

  .nav-item {
    position: relative;
  }

  .nav-link {
    text-decoration: none;
    color: var(--text-dark);
    font-weight: 500;
    font-size: 14px;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    padding: 8px 0;
    transition: color 0.3s ease;
    display: flex;
    align-items: center;
    gap: 6px;
    cursor: pointer;
  }

  .nav-link.has-dropdown::after {
    content: '›';
    font-size: 16px;
    transform: rotate(90deg);
    transition: transform 0.3s ease;
  }

  .nav-item:hover .nav-link.has-dropdown::after {
    transform: rotate(-90deg);
  }

  .nav-link:hover {
    color: var(--primary-color);
  }

  /* Mega Dropdown - DESKTOP */
  .mega-dropdown {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(12px);
    width: 800px;
    background: var(--white);
    border-radius: 16px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    z-index: 1001;
    padding: 40px;
    pointer-events: none;
  }

  .nav-item:hover .mega-dropdown,
  .mega-dropdown:hover {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
    pointer-events: auto;
    transition-delay: 0s;
  }

  /* Left-side dropdown (Shop) */
  .nav-item:first-child .mega-dropdown {
    left: 0;
    transform: translateX(0) translateY(12px);
  }

  .nav-item:first-child:hover .mega-dropdown,
  .nav-item:first-child .mega-dropdown:hover {
    transform: translateX(0) translateY(0);
  }

  /* Right-side dropdowns */
  .nav-item:nth-last-child(-n+2) .mega-dropdown {
    left: auto;
    right: 0;
    transform: translateX(0) translateY(12px);
  }

  .nav-item:nth-last-child(-n+2):hover .mega-dropdown,
  .nav-item:nth-last-child(-n+2) .mega-dropdown:hover {
    transform: translateX(0) translateY(0);
  }

  /* Dropdown Content */
  .mega-dropdown,
  .mega-dropdown *:not(.dropdown-image-content) {
    color: var(--text-black) !important;
  }

  .dropdown-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
  }

  .dropdown-column h4 {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .dropdown-links {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .dropdown-link {
    text-decoration: none;
    font-size: 14px;
    transition: all 0.3s ease;
    padding: 8px 0;
    border-bottom: 1px solid transparent;
    display: block;
  }

  .dropdown-link:hover {
    color: var(--primary-color) !important;
    border-bottom-color: var(--primary-color);
    transform: translateX(8px);
  }

  .dropdown-image {
    border-radius: 12px;
    overflow: hidden;
    margin-top: 20px;
  }

  .dropdown-image-content {
    background: linear-gradient(135deg, var(--primary-color), #D4A59A);
    height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--white);
    font-size: 1.2rem;
    font-weight: 600;
    border-radius: 12px;
    transition: transform 0.3s ease;
  }

  .dropdown-image-content:hover {
    transform: scale(1.02);
  }

  /* Header Actions */
  .header-actions {
    display: flex;
    align-items: center;
    gap: 16px;
    z-index: 1002;
  }

  .header-action {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    text-decoration: none;
    color: var(--text-dark);
    transition: all 0.3s ease;
    position: relative;
  }

  .header-action:hover {
    background: rgba(232, 196, 184, 0.1);
    color: var(--primary-color);
  }

  .cart-count {
    background: var(--primary-color);
    color: var(--white);
    border-radius: 50%;
    width: 18px;
    height: 18px;
    font-size: 11px;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: -2px;
    right: -2px;
  }

  /* Sidebar Toggle Button - FOR MOBILE & TABLET */
  .sidebar-toggle {
    display: none;
    background: none;
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: var(--text-dark);
    transition: all 0.3s ease;
    z-index: 1002;
  }

  .sidebar-toggle:hover {
    background: rgba(232, 196, 184, 0.1);
    color: var(--primary-color);
  }

  /* Services by Concern Link - No dropdown arrow */
  .nav-link[href="#services-by-concern"]::after {
    display: none !important;
  }

  /* ==================== */
  /* RESPONSIVE STYLES - FIXED */
  /* ==================== */

  /* Tablet (768px - 1024px) */
  @media (max-width: 1024px) {
    .mega-dropdown {
      width: 700px;
      padding: 30px;
    }
    
    .nav-main {
      gap: 25px;
    }
  }

  /* MOBILE & TABLET (≤ 1024px) */
  @media (max-width: 1024px) {
    /* Show only sidebar toggle on tablet & mobile */
    .sidebar-toggle {
      display: flex;
    }

    /* Hide desktop navigation on mobile/tablet */
    .nav-main {
      display: none !important;
    }

    .header-actions {
      gap: 12px;
    }

    /* Mobile specific */
    @media (max-width: 768px) {
      .header {
        background: var(--white) !important;
        backdrop-filter: none !important;
        border-bottom: 1px solid rgba(0, 0, 0, 0.08);
        top: 0 !important;
      }

      .announcement-bar {
        position: relative !important;
        top: auto !important;
        height: auto;
      }

      body {
        padding-top: var(--header-height) !important;
      }
    }
  }

  /* Small Mobile */
  @media (max-width: 480px) {
    :root {
      --header-height: 70px;
    }
    
    .logo img {
      height: 35px;
    }
    
    .header-actions {
      gap: 8px;
    }
    
    .header-action {
      width: 36px;
      height: 36px;
    }
  }
</style>

