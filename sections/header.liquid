    transition: transform 0.3s ease;
  }

  .nav-item:hover .nav-link::after {
    transform: rotate(-90deg);
  }

  .nav-link:hover {
    color: #E8C4B8;
  }

  /* Mega Dropdown Styles */
  .mega-dropdown {
    position: absolute;
