<header class="site-header" id="site-header">
  <style>
    .site-header {
      position: sticky;
      top: 0;
      width: 100%;
      z-index: 50;
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(15px);
      border-bottom: 1px solid rgba(0,0,0,0.06);
    }
    .header-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 24px;
      height: 80px;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    .header-left, .header-right {
      display: flex;
      align-items: center;
      gap: 24px;
    }

    /* Logo */
    .site-logo img {
      height: 55px;
      width: auto;
      object-fit: contain;
    }
    .site-logo-text {
      font-size: 24px;
      font-weight: 700;
      letter-spacing: -0.5px;
      color: #2d2d2d;
    }

    /* Navigation */
    .main-nav { display: flex; gap: 36px; align-items: center; }
    .nav-item { position: relative; }
    .nav-link {
      text-decoration: none;
      color: #2d2d2d;
      font-weight: 500;
      font-size: 14px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      padding: 12px 0;
      display: flex;
      align-items: center;
      gap: 6px;
      cursor: pointer;
    }
    .nav-link:hover { color: #d2a492; }

    /* Dropdown */
    .mega-dropdown {
      position: absolute;
      top: 100%;
      left: 0;
      width: 700px;
      background: #fff;
      border-radius: 14px;
      padding: 32px;
      box-shadow: 0 12px 40px rgba(0,0,0,0.12);
      opacity: 0;
      visibility: hidden;
      transform: translateY(15px);
      transition: all 0.25s ease;
    }
    .nav-item:hover .mega-dropdown {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }

    .dropdown-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 28px;
    }
    .dropdown-column h4 {
      font-size: 14px;
      font-weight: 600;
      text-transform: uppercase;
      margin-bottom: 12px;
    }
    .dropdown-link {
      display: block;
      padding: 6px 0;
      font-size: 14px;
      text-decoration: none;
      color: #666;
      transition: all 0.2s ease;
    }
    .dropdown-link:hover {
      color: #d2a492;
      transform: translateX(6px);
    }

    /* Header Icons */
    .header-icons {
      display: flex;
      gap: 18px;
      align-items: center;
    }
    .header-icon {
      font-size: 20px;
      cursor: pointer;
      text-decoration: none;
      color: #2d2d2d;
    }
    .cart-count {
      background: #d2a492;
      color: white;
      border-radius: 50%;
      padding: 3px 7px;
      font-size: 12px;
      position: relative;
      top: -10px;
      right: 10px;
    }

    /* Mobile Styles */
    .mobile-menu-btn {
      display: none;
      font-size: 28px;
      cursor: pointer;
      background: none;
      border: none;
    }
    @media(max-width: 940px){
      .main-nav { display: none; }
      .mobile-menu-btn { display: block; }
    }
  </style>

  <div class="header-container">
    
    <!-- Mobile Menu Toggle -->
    <button class="mobile-menu-btn" id="mobile-menu-btn">‚ò∞</button>

    <!-- Logo -->
    <div class="site-logo">
      <a href="{{ routes.root_url }}">
        {% if section.settings.logo %}
          <img src="{{ section.settings.logo | file_url }}" alt="{{ shop.name }}">
        {% else %}
          <span class="site-logo-text">{{ shop.name }}</span>
        {% endif %}
      </a>
    </div>

    <!-- Navigation Menu -->
    <nav class="main-nav">
      {% assign menu = section.settings.main_menu %}
      {% if menu %}
        {% for link in linklists[menu].links %}
          <div class="nav-item">

            <a href="{{ link.url }}" class="nav-link">
              {{ link.title }}
              {% if link.links.size > 0 %}<span>‚ñæ</span>{% endif %}
            </a>

            {% if link.links.size > 0 %}
            <div class="mega-dropdown">
              <div class="dropdown-grid">
                <div class="dropdown-column">
                  <h4>{{ link.title }}</h4>
                  {% for sub in link.links %}
                    <a href="{{ sub.url }}" class="dropdown-link">{{ sub.title }}</a>
                  {% endfor %}
                </div>
                <div class="dropdown-column">
                  <h4>Featured</h4>
                  <a href="{{ routes.all_products_collection_url }}" class="dropdown-link">All Products</a>
                  <a href="{{ routes.collections_url }}" class="dropdown-link">Collections</a>
                  <a href="{{ routes.search_url }}" class="dropdown-link">Search</a>
                </div>
              </div>
            </div>
            {% endif %}

          </div>
        {% endfor %}
      {% endif %}
    </nav>

    <!-- Icons -->
    <div class="header-icons">
      <a href="{{ routes.search_url }}" class="header-icon">üîç</a>
      <a href="{{ routes.account_login_url }}" class="header-icon">üë§</a>
      <a href="{{ routes.cart_url }}" class="header-icon">
        üõí<span class="cart-count">{{ cart.item_count }}</span>
      </a>
    </div>
  </div>

  <script>
    const btn = document.getElementById("mobile-menu-btn");
    btn?.addEventListener("click", () => {
      const nav = document.querySelector(".main-nav");
      nav.style.display = nav.style.display === "flex" ? "none" : "flex";
    });
  </script>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "Main Menu"
    }
  ]
}
{% endschema %}
