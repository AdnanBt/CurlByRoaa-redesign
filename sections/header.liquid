<script>
class HeaderWithDropdowns {
  constructor() {
    this.header = document.getElementById('main-header');
    this.headerContainer = document.querySelector('.header-container');
    this.sidebarToggle = document.getElementById('sidebarToggle');
    this.mainNav = document.getElementById('main-nav');
    this.navItems = document.querySelectorAll('.nav-item');
    this.navLinks = document.querySelectorAll('.nav-link');
    this.dropdowns = document.querySelectorAll('.mega-dropdown');
    
    this.hoverTimeout = null;
    this.leaveTimeout = null;
    this.isMobile = window.innerWidth <= 1024;
    this.scrollThreshold = window.innerHeight;
    this.lastScrollTop = 0;
    
    this.init();
  }

  init() {
    this.bindEvents();
    this.setupScrollEffect();
    this.setupDropdowns();
    this.setupNavigation();
    this.handleResize();
    this.checkAnnouncementBar();
    this.setupSidebarToggle();
  }

  setupSidebarToggle() {
    if (this.sidebarToggle) {
      this.sidebarToggle.addEventListener('click', () => {
        document.dispatchEvent(new CustomEvent('toggleSidebar'));
      });
    }
  }

  checkAnnouncementBar() {
    const announcementBar = document.querySelector('.announcement-bar');
    if (announcementBar) {
      document.body.classList.add('has-announcement');
    } else {
      document.body.classList.remove('has-announcement');
    }
  }

  bindEvents() {
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        this.closeAllDropdowns();
      }
    });

    window.addEventListener('resize', () => {
      this.handleResize();
    });
  }

  handleResize() {
    const wasMobile = this.isMobile;
    this.isMobile = window.innerWidth <= 1024;
    this.scrollThreshold = window.innerHeight;
    
    if (wasMobile !== this.isMobile) {
      this.closeAllDropdowns();
      this.setupDropdowns();
      
      // Reset header for desktop
      if (!this.isMobile) {
        this.header.style.transform = 'translateY(0)';
        this.header.classList.add('scrolled');
      }
    }
  }

  setupDropdowns() {
    if (this.isMobile) {
      // Remove desktop event listeners for mobile
      this.navItems.forEach(item => {
        const link = item.querySelector('.nav-link.has-dropdown');
        if (link) {
          link.removeEventListener('mouseenter', this.handleDesktopEnter);
          link.removeEventListener('mouseleave', this.handleDesktopLeave);
        }
      });
    } else {
      // Desktop dropdown handling
      this.navItems.forEach(item => {
        const dropdown = item.querySelector('.mega-dropdown');
        if (!dropdown) return;

        item.addEventListener('mouseenter', () => {
          if (this.leaveTimeout) clearTimeout(this.leaveTimeout);
          
          this.hoverTimeout = setTimeout(() => {
            this.closeAllDropdowns();
            
            dropdown.style.transition = 'all 0.25s ease';
            dropdown.style.opacity = '1';
            dropdown.style.visibility = 'visible';
            dropdown.style.pointerEvents = 'auto';
            
            if (item === this.navItems[0]) {
              dropdown.style.transform = 'translateX(0) translateY(0)';
            } else if (item === this.navItems[this.navItems.length - 1] || 
                       item === this.navItems[this.navItems.length - 2]) {
              dropdown.style.transform = 'translateX(0) translateY(0)';
            } else {
              dropdown.style.transform = 'translateX(-50%) translateY(0)';
            }
          }, 100);
        });

        item.addEventListener('mouseleave', () => {
          if (this.hoverTimeout) clearTimeout(this.hoverTimeout);
          
          this.leaveTimeout = setTimeout(() => {
            if (!dropdown.matches(':hover')) {
              this.closeDropdown(dropdown);
            }
          }, 150);
        });

        dropdown.addEventListener('mouseenter', () => {
          if (this.leaveTimeout) clearTimeout(this.leaveTimeout);
          if (this.hoverTimeout) clearTimeout(this.hoverTimeout);
        });

        dropdown.addEventListener('mouseleave', () => {
          this.leaveTimeout = setTimeout(() => {
            this.closeDropdown(dropdown);
          }, 100);
        });
      });
    }
  }

  closeDropdown(dropdown) {
    dropdown.style.opacity = '0';
    dropdown.style.pointerEvents = 'none';
    
    const item = dropdown.parentElement;
    const navItems = this.navItems;
    
    if (item === navItems[0]) {
      dropdown.style.transform = 'translateX(0) translateY(12px)';
    } else if (item === navItems[navItems.length - 1] || 
               item === navItems[navItems.length - 2]) {
      dropdown.style.transform = 'translateX(0) translateY(12px)';
    } else {
      dropdown.style.transform = 'translateX(-50%) translateY(12px)';
    }
    
    setTimeout(() => {
      if (parseFloat(dropdown.style.opacity) === 0) {
        dropdown.style.visibility = 'hidden';
      }
    }, 300);
  }

  setupNavigation() {
    this.navLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        const href = link.getAttribute('href');
        
        if (href && href.startsWith('#')) {
          e.preventDefault();
          const targetId = href.substring(1);
          const targetElement = document.getElementById(targetId);
          
          if (targetElement) {
            this.closeAllDropdowns();
            
            const headerHeight = this.header.offsetHeight;
            const announcementBar = document.querySelector('.announcement-bar');
            const announcementHeight = announcementBar ? announcementBar.offsetHeight : 0;
            const totalOffset = headerHeight + announcementHeight;
            
            const targetPosition = targetElement.getBoundingClientRect().top + window.pageYOffset;
            const offsetPosition = Math.max(0, targetPosition - totalOffset);
            
            window.scrollTo({
              top: offsetPosition,
              behavior: 'smooth'
            });
          }
        }
      });
    });
  }

  setupScrollEffect() {
    window.addEventListener('scroll', () => {
      const currentScroll = window.pageYOffset;
      const isDesktop = window.innerWidth > 1024;
      const scrollDirection = currentScroll > this.lastScrollTop ? 'down' : 'up';
      
      // Add/remove scrolled class
      if (currentScroll > 50) {
        this.header.classList.add('scrolled');
      } else {
        this.header.classList.remove('scrolled');
      }
      
      // Desktop behavior
      if (isDesktop) {
        const sidebarVisible = document.body.classList.contains('sidebar-desktop-visible');
        
        if (currentScroll > this.scrollThreshold) {
          // Hide main header when scrolling down past threshold
          if (scrollDirection === 'down') {
            this.header.style.transform = 'translateY(-100%)';
            this.header.style.transition = 'transform 0.3s ease';
            
            // Show sidebar if not already visible
            if (!sidebarVisible) {
              document.dispatchEvent(new CustomEvent('showSidebarOnScroll'));
            }
          } else {
            // Show header when scrolling up
            this.header.style.transform = 'translateY(0)';
            
            // Hide sidebar when close to top
            if (currentScroll < this.scrollThreshold && sidebarVisible) {
              document.dispatchEvent(new CustomEvent('hideSidebarOnScroll'));
            }
          }
        } else {
          // Always show header at top
          this.header.style.transform = 'translateY(0)';
          
          // Hide sidebar when at top
          if (sidebarVisible) {
            document.dispatchEvent(new CustomEvent('hideSidebarOnScroll'));
          }
        }
      }
      
      // Close dropdowns on scroll (desktop only)
      if (!this.isMobile) {
        this.closeAllDropdowns();
      }
      
      this.lastScrollTop = currentScroll;
    });
  }

  closeAllDropdowns() {
    if (this.hoverTimeout) clearTimeout(this.hoverTimeout);
    if (this.leaveTimeout) clearTimeout(this.leaveTimeout);
    
    if (!this.isMobile) {
      this.dropdowns.forEach(dropdown => {
        this.closeDropdown(dropdown);
      });
    }
  }
}

// Initialize when DOM is ready
document.addEventListener('DOMContentLoaded', () => {
  setTimeout(() => {
    const header = new HeaderWithDropdowns();
    window.headerInstance = header;
  }, 100);
});
