<style>
  .header {
    background: transparent;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    transition: all 0.3s ease;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  }

  /* Adjust header position based on announcement bar */
  {% if section.settings.show_announcement_bar %}
  .header {
    top: 40px !important; /* Use !important to ensure it overrides */
  }
  {% endif %}

  .header.scrolled {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  }

  .header-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 80px;
  }

  /* Logo */
  .logo {
    flex-shrink: 0;
    z-index: 1002;
  }

  .logo a {
    display: block;
  }

  .logo img {
    height: 40px;
    width: auto;
    max-width: 120px;
    object-fit: contain;
  }

  /* Main Navigation */
  .nav-main {
    display: flex;
    gap: 40px;
    align-items: center;
    position: relative;
  }

  /* Navigation Item */
  .nav-item {
    position: relative;
  }

  /* Navigation Link */
  .nav-link {
    text-decoration: none;
    color: #2D2D2D;
    font-weight: 500;
    font-size: 14px;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    padding: 8px 0;
    transition: color 0.3s ease;
    position: relative;
    display: flex;
    align-items: center;
    gap: 6px;
    cursor: pointer;
  }

  .header.scrolled .nav-link {
    color: #2D2D2D;
  }

  /* Hover effect for nav links */
  .nav-link.has-dropdown::after {
    content: '›';
    font-size: 16px;
    transform: rotate(90deg);
    transition: transform 0.3s ease;
    display: inline-block;
  }

  .nav-item:hover .nav-link.has-dropdown::after {
    transform: rotate(-90deg);
  }

  .nav-link:hover {
    color: #E8C4B8;
  }

  /* Active state for mobile */
  .nav-link.active::after {
    transform: rotate(-90deg);
  }

  /* Mega Dropdown Styles - FIXED TRANSITIONS */
  .mega-dropdown {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(10px);
    width: 800px;
    background: white;
    border-radius: 16px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    opacity: 0;
    visibility: hidden;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    z-index: 1001;
    padding: 40px;
    pointer-events: none;
  }

  /* Show dropdown on hover - FIXED TRANSITION */
  .nav-item:hover .mega-dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
    pointer-events: auto;
    transition-delay: 0s;
  }

  /* Keep dropdown visible when hovering over it */
  .mega-dropdown:hover {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
    pointer-events: auto;
  }

  /* Dropdown Grid Layout */
  .dropdown-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
  }

  /* ALL DROPDOWN CONTENT - SAME FONT COLOR (BLACK) */
  .mega-dropdown * {
    color: #000000 !important; /* Force black color for ALL elements inside dropdown */
  }

  .dropdown-column h4 {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: #000000 !important;
  }

  .dropdown-links {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .dropdown-link {
    text-decoration: none;
    font-size: 14px;
    transition: all 0.3s ease;
    padding: 8px 0;
    border-bottom: 1px solid transparent;
    display: block;
    color: #000000 !important; /* Force black color */
  }

  /* Hover effect for all dropdown links */
  .dropdown-link:hover {
    color: #E8C4B8 !important;
    border-bottom-color: #E8C4B8;
    transform: translateX(8px);
  }

  .dropdown-image {
    border-radius: 12px;
    overflow: hidden;
    margin-top: 20px;
  }

  .dropdown-image img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .dropdown-image:hover img {
    transform: scale(1.05);
  }

  /* Header Actions */
  .header-actions {
    display: flex;
    align-items: center;
    gap: 16px;
    z-index: 1002;
  }

  .header-action {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    text-decoration: none;
    color: #2D2D2D;
    transition: all 0.3s ease;
    position: relative;
  }

  .header-action:hover {
    background: rgba(232, 196, 184, 0.1);
    color: #E8C4B8;
  }

  .cart-count {
    background: #E8C4B8;
    color: white;
    border-radius: 50%;
    width: 18px;
    height: 18px;
    font-size: 11px;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: -2px;
    right: -2px;
  }

  /* Mobile Menu Button */
  .mobile-menu-btn {
    display: none;
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    padding: 8px;
    border-radius: 8px;
    transition: background 0.3s ease;
    color: #2D2D2D;
    z-index: 1002;
  }

  .mobile-menu-btn:hover {
    background: rgba(232, 196, 184, 0.1);
  }

  /* Mobile Menu Styles - RESPONSIVE FIXES */
  @media (max-width: 1100px) {
    /* Tablet size adjustments */
    .mega-dropdown {
      width: 700px;
      padding: 30px;
    }
    
    .nav-main {
      gap: 25px;
    }
  }

  @media (max-width: 900px) {
    /* Smaller tablet adjustments */
    .mega-dropdown {
      width: 600px;
      padding: 25px;
    }
    
    .dropdown-grid {
      gap: 30px;
    }
  }

  @media (max-width: 768px) {
    /* MOBILE RESPONSIVE FIXES */
    .header {
      background: white !important;
      backdrop-filter: none !important;
      -webkit-backdrop-filter: none !important;
      border-bottom: 1px solid rgba(0, 0, 0, 0.08);
      top: 0 !important; /* Reset top on mobile */
    }

    {% if section.settings.show_announcement_bar %}
    /* Adjust content spacing on mobile with announcement bar */
    body {
      padding-top: 40px;
    }
    {% endif %}

    .mobile-menu-btn {
      display: block;
    }

    .nav-main {
      display: none;
      position: fixed;
      top: 80px;
      left: 0;
      right: 0;
      bottom: 0;
      background: white;
      flex-direction: column;
      padding: 20px;
      gap: 0;
      overflow-y: auto;
      z-index: 1001;
    }

    .nav-main.active {
      display: flex;
    }

    .nav-item {
      width: 100%;
    }

    .nav-link {
      display: flex;
      justify-content: space-between;
      padding: 16px 0;
      border-bottom: 1px solid rgba(0, 0, 0, 0.08);
      font-size: 16px;
      text-transform: none;
      width: 100%;
      color: #2D2D2D !important;
    }

    .nav-link.has-dropdown::after {
      transform: rotate(0deg);
      transition: transform 0.3s ease;
    }

    .nav-link.active::after {
      transform: rotate(180deg);
    }

    /* MOBILE DROPDOWN FIXES */
    .mega-dropdown {
      display: none;
      position: static !important;
      width: 100% !important;
      box-shadow: none !important;
      padding: 20px !important;
      opacity: 1 !important;
      visibility: visible !important;
      transform: none !important;
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.4s cubic-bezier(0.165, 0.84, 0.44, 1) !important;
      background: #f9f9f9 !important;
      border-radius: 8px !important;
      margin-top: 10px !important;
      pointer-events: auto !important;
      left: auto !important;
    }

    /* Force black text on mobile too */
    .mega-dropdown * {
      color: #000000 !important;
    }

    .nav-link.active + .mega-dropdown {
      display: block !important;
      max-height: 800px !important; /* Increased for mobile */
      overflow-y: auto !important;
    }

    .dropdown-grid {
      grid-template-columns: 1fr !important;
      gap: 20px !important;
    }

    /* Mobile dropdown text - ALL BLACK */
    .dropdown-column h4,
    .dropdown-link {
      color: #000000 !important;
    }

    .header-actions {
      gap: 12px;
    }
    
    /* Push content down for fixed header on mobile */
    main {
      padding-top: 80px !important;
    }
  }

  @media (max-width: 480px) {
    /* Small mobile adjustments */
    .dropdown-grid {
      gap: 15px !important;
    }
    
    .dropdown-column h4 {
      font-size: 14px;
      margin-bottom: 15px;
    }
    
    .dropdown-link {
      font-size: 13px;
      padding: 6px 0;
    }
    
    .mega-dropdown {
      padding: 15px !important;
    }
  }

  /* Services by Concern Link Styling */
  .nav-item .nav-link[href="#services-by-concern"]::after {
    display: none !important;
  }

  /* Hide scrollbar for clean look */
  .nav-main::-webkit-scrollbar {
    width: 0;
    background: transparent;
  }

  .nav-main {
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  /* Dropdown Images */
  .dropdown-image-link {
    display: block;
    text-decoration: none;
  }

  .dropdown-image-content {
    background: linear-gradient(135deg, #E8C4B8, #D4A59A);
    height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.2rem;
    font-weight: 600;
    border-radius: 12px;
    transition: transform 0.3s ease;
  }

  .dropdown-image-content:hover {
    transform: scale(1.02);
  }
</style>

