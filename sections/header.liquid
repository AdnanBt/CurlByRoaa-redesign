document.addEventListener('DOMContentLoaded', function() {
  // Elements
  const header = document.getElementById('main-header');
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mainNav = document.getElementById('main-nav');
  const navItems = document.querySelectorAll('.nav-item');
  const navLinks = document.querySelectorAll('.nav-link');
  
  // State
  let isMobile = window.innerWidth <= 768;
  
  // Initialize
  initHeader();
  
  function initHeader() {
    // Setup mobile menu toggle
    if (mobileMenuBtn && mainNav) {
      mobileMenuBtn.addEventListener('click', toggleMobileMenu);
      
      // Close menu when clicking outside
      document.addEventListener('click', (e) => {
        if (!e.target.closest('.header') && mainNav.classList.contains('active')) {
          closeMobileMenu();
        }
      });
    }
    
    // Setup dropdowns
    setupDropdowns();
    
    // Setup scroll effect
    window.addEventListener('scroll', handleScroll);
    
    // Setup resize handler
    window.addEventListener('resize', handleResize);
    
    // Setup scroll to sections
    setupScrollToSections();
    
    // Force black text in dropdowns
    forceBlackText();
  }
  
  // Mobile Menu Functions
  function toggleMobileMenu() {
    const isOpening = !mainNav.classList.contains('active');
    mainNav.classList.toggle('active');
    mobileMenuBtn.textContent = mainNav.classList.contains('active') ? '✕' : '☰';
    
    // Toggle body scroll
    document.body.style.overflow = isOpening ? 'hidden' : '';
    
    if (!isOpening) {
      closeAllMobileDropdowns();
    }
  }
  
  function closeMobileMenu() {
    if (mainNav.classList.contains('active')) {
      mainNav.classList.remove('active');
      mobileMenuBtn.textContent = '☰';
      document.body.style.overflow = '';
      closeAllMobileDropdowns();
    }
  }
  
  // Dropdown Functions
  function setupDropdowns() {
    if (isMobile) {
      // Mobile dropdowns
      navItems.forEach(item => {
        const link = item.querySelector('.nav-link.has-dropdown');
        const dropdown = item.querySelector('.mega-dropdown');
        
        if (link && dropdown) {
          // Remove existing listeners
          link.removeEventListener('click', handleMobileDropdownClick);
          link.addEventListener('click', handleMobileDropdownClick);
        }
      });
      
      // Close dropdowns when clicking non-dropdown links
      document.querySelectorAll('.nav-link:not(.has-dropdown)').forEach(link => {
        link.addEventListener('click', closeAllMobileDropdowns);
      });
    } else {
      // Desktop dropdowns
      navItems.forEach(item => {
        const dropdown = item.querySelector('.mega-dropdown');
        if (!dropdown) return;
        
        item.addEventListener('mouseenter', () => openDropdown(dropdown));
        item.addEventListener('mouseleave', () => closeDropdown(dropdown));
        dropdown.addEventListener('mouseenter', () => openDropdown(dropdown));
        dropdown.addEventListener('mouseleave', () => closeDropdown(dropdown));
      });
    }
  }
  
  function handleMobileDropdownClick(e) {
    e.preventDefault();
    e.stopPropagation();
    
    const link = this;
    const dropdown = link.nextElementSibling;
    const isActive = link.classList.contains('active');
    
    // Close other dropdowns
    navItems.forEach(otherItem => {
      if (otherItem !== link.parentElement) {
        const otherLink = otherItem.querySelector('.nav-link.has-dropdown');
        const otherDropdown = otherItem.querySelector('.mega-dropdown');
        if (otherLink) otherLink.classList.remove('active');
        if (otherDropdown) otherDropdown.style.maxHeight = '0';
      }
    });
    
    // Toggle current dropdown
    link.classList.toggle('active');
    
    if (!isActive) {
      dropdown.style.maxHeight = dropdown.scrollHeight + 'px';
    } else {
      dropdown.style.maxHeight = '0';
    }
  }
  
  function openDropdown(dropdown) {
    if (isMobile) return;
    
    dropdown.style.opacity = '1';
    dropdown.style.visibility = 'visible';
    dropdown.style.transform = 'translateX(-50%) translateY(0)';
    dropdown.style.pointerEvents = 'auto';
  }
  
  function closeDropdown(dropdown) {
    if (isMobile) return;
    
    dropdown.style.opacity = '0';
    dropdown.style.visibility = 'hidden';
    dropdown.style.transform = 'translateX(-50%) translateY(10px)';
    dropdown.style.pointerEvents = 'none';
  }
  
  function closeAllMobileDropdowns() {
    navLinks.forEach(link => link.classList.remove('active'));
    document.querySelectorAll('.mega-dropdown').forEach(dropdown => {
      dropdown.style.maxHeight = '0';
    });
  }
  
  function closeAllDropdowns() {
    if (!isMobile) {
      document.querySelectorAll('.mega-dropdown').forEach(closeDropdown);
    }
  }
  
  // Scroll Functions
  function handleScroll() {
    if (window.pageYOffset > 50) {
      header.classList.add('scrolled');
    } else {
      header.classList.remove('scrolled');
    }
    
    // Close dropdowns on scroll (desktop only)
    if (!isMobile) {
      closeAllDropdowns();
    }
  }
  
  function setupScrollToSections() {
    navLinks.forEach(link => {
      link.addEventListener('click', function(e) {
        const href = this.getAttribute('href');
        
        if (href && href.startsWith('#')) {
          e.preventDefault();
          const targetId = href.substring(1);
          const targetElement = document.getElementById(targetId);
          
          if (targetElement) {
            // Close mobile menu if open
            if (isMobile) {
              closeMobileMenu();
            }
            
            // Close dropdowns
            closeAllDropdowns();
            
            // Calculate scroll position
            let headerHeight = header.offsetHeight;
            const announcementBar = document.querySelector('.announcement-bar');
            if (announcementBar && !isMobile) {
              headerHeight += announcementBar.offsetHeight;
            }
            
            const targetPosition = targetElement.getBoundingClientRect().top + window.pageYOffset;
            const offsetPosition = Math.max(0, targetPosition - headerHeight);
            
            window.scrollTo({
              top: offsetPosition,
              behavior: 'smooth'
            });
          }
        }
      });
    });
  }
  
  // Utility Functions
  function handleResize() {
    const wasMobile = isMobile;
    isMobile = window.innerWidth <= 768;
    
    if (wasMobile !== isMobile) {
      // Reset states
      closeMobileMenu();
      closeAllDropdowns();
      
      // Re-setup dropdowns for new screen size
      setupDropdowns();
      
      // Force black text again
      forceBlackText();
    }
  }
  
  function forceBlackText() {
    // Force black text in all dropdowns
    document.querySelectorAll('.mega-dropdown, .mega-dropdown *').forEach(el => {
      if (el.tagName !== 'IMG' && el.tagName !== 'SVG' && el.tagName !== 'PATH') {
        el.style.color = '#000000';
      }
    });
  }
  
  // Initial black text enforcement
  setTimeout(forceBlackText, 100);
});
