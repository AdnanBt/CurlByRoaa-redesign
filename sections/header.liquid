document.addEventListener('DOMContentLoaded', () => {
  // Wait a bit for announcement bar to load
  setTimeout(() => {
    const header = new HeaderWithDropdowns();
    window.headerInstance = header;
    
    // Re-adjust after all images load
    window.addEventListener('load', () => {
      header.adjustForAnnouncementBar();
    });
  }, 500);
});
