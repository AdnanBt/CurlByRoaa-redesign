<script>
class HeaderWithDropdowns {
  constructor() {
    this.header = document.getElementById('main-header');
    this.sidebarToggle = document.getElementById('sidebarToggle');
    this.desktopSidebar = document.getElementById('desktopSidebar');
    this.desktopSidebarClose = document.getElementById('desktopSidebarClose');
    this.mainNav = document.getElementById('main-nav');
    this.navItems = document.querySelectorAll('.nav-item');
    this.navLinks = document.querySelectorAll('.nav-link');
    this.dropdowns = document.querySelectorAll('.mega-dropdown');
    
    this.hoverTimeout = null;
    this.leaveTimeout = null;
    this.isMobile = window.innerWidth <= 1024;
    this.scrollThreshold = window.innerHeight;
    this.lastScrollTop = 0;
    this.desktopSidebarActive = false;
    
    this.init();
  }

  init() {
    this.bindEvents();
    this.setupScrollEffect();
    this.setupDropdowns();
    this.setupNavigation();
    this.handleResize();
    this.checkAnnouncementBar();
    this.setupSidebarToggle();
    this.setupDesktopSidebar();
  }

  setupDesktopSidebar() {
    if (this.desktopSidebarClose) {
      this.desktopSidebarClose.addEventListener('click', () => {
        this.closeDesktopSidebar();
      });
    }

    // Close sidebar when clicking outside (desktop only)
    document.addEventListener('click', (e) => {
      if (this.desktopSidebarActive && !this.isMobile) {
        const isClickInsideSidebar = this.desktopSidebar.contains(e.target);
        const isClickOnToggle = e.target.closest('.sidebar-toggle');
        
        if (!isClickInsideSidebar && !isClickOnToggle) {
          this.closeDesktopSidebar();
        }
      }
    });

    // Escape key to close sidebar
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && this.desktopSidebarActive) {
        this.closeDesktopSidebar();
      }
    });

    // Mark active links in sidebar
    this.setupSidebarActiveLinks();
  }

  setupSidebarActiveLinks() {
    const currentUrl = window.location.pathname;
    const sidebarLinks = this.desktopSidebar?.querySelectorAll('.sidebar-menu-link');
    
    if (sidebarLinks) {
      sidebarLinks.forEach(link => {
        const href = link.getAttribute('href');
        if (href && currentUrl.includes(href.replace(/^\//, '').split('?')[0])) {
          link.classList.add('active');
        }
        
        // Remove active class from other links
        link.addEventListener('click', () => {
          sidebarLinks.forEach(l => l.classList.remove('active'));
          link.classList.add('active');
        });
      });
    }
  }

  setupSidebarToggle() {
    if (this.sidebarToggle) {
      this.sidebarToggle.addEventListener('click', () => {
        if (this.isMobile) {
          // Mobile behavior - use existing mobile sidebar
          document.dispatchEvent(new CustomEvent('toggleSidebar'));
        } else {
          // Desktop behavior - toggle desktop sidebar
          if (this.desktopSidebarActive) {
            this.closeDesktopSidebar();
          } else {
            this.openDesktopSidebar();
          }
        }
      });
    }
  }

  openDesktopSidebar() {
    if (this.desktopSidebar) {
      this.desktopSidebar.classList.add('active');
      document.body.classList.add('desktop-sidebar-active');
      this.desktopSidebarActive = true;
      
      // Adjust content containers
      this.adjustContentContainers();
    }
  }

  closeDesktopSidebar() {
    if (this.desktopSidebar) {
      this.desktopSidebar.classList.remove('active');
      document.body.classList.remove('desktop-sidebar-active');
      this.desktopSidebarActive = false;
      
      // Reset content containers
      this.resetContentContainers();
    }
  }

  adjustContentContainers() {
    // Find and adjust all content containers
    const containerSelectors = [
      '.page-width',
      '.container',
      '.shopify-section > div[class*="container"]',
      '.shopify-section > .section',
      '[class*="__container"]'
    ];
    
    containerSelectors.forEach(selector => {
      const containers = document.querySelectorAll(selector);
      containers.forEach(container => {
        if (!container.hasAttribute('data-original-margin')) {
          container.setAttribute('data-original-margin', container.style.marginLeft || '');
        }
        if (!container.hasAttribute('data-original-max-width')) {
          container.setAttribute('data-original-max-width', container.style.maxWidth || '');
        }
        
        container.style.marginLeft = '280px';
        container.style.maxWidth = 'calc(100% - 280px)';
        container.style.transition = 'margin-left 0.3s ease, max-width 0.3s ease';
      });
    });
  }

  resetContentContainers() {
    const containerSelectors = [
      '.page-width',
      '.container',
      '.shopify-section > div[class*="container"]',
      '.shopify-section > .section',
      '[class*="__container"]'
    ];
    
    containerSelectors.forEach(selector => {
      const containers = document.querySelectorAll(selector);
      containers.forEach(container => {
        const originalMargin = container.getAttribute('data-original-margin');
        const originalMaxWidth = container.getAttribute('data-original-max-width');
        
        container.style.marginLeft = originalMargin || '';
        container.style.maxWidth = originalMaxWidth || '';
      });
    });
  }

  checkAnnouncementBar() {
    const announcementBar = document.querySelector('.announcement-bar');
    if (announcementBar) {
      document.body.classList.add('has-announcement');
    } else {
      document.body.classList.remove('has-announcement');
    }
  }

  bindEvents() {
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        this.closeAllDropdowns();
      }
    });

    window.addEventListener('resize', () => {
      this.handleResize();
    });
  }

  handleResize() {
    const wasMobile = this.isMobile;
    this.isMobile = window.innerWidth <= 1024;
    this.scrollThreshold = window.innerHeight;
    
    if (wasMobile !== this.isMobile) {
      this.closeAllDropdowns();
      this.setupDropdowns();
      
      // Close desktop sidebar on mobile
      if (this.isMobile && this.desktopSidebarActive) {
        this.closeDesktopSidebar();
      }
      
      // Reset header for desktop
      if (!this.isMobile) {
        this.resetHeader();
      }
    }
  }

  setupDropdowns() {
    if (this.isMobile) {
      // Remove desktop event listeners for mobile
      this.navItems.forEach(item => {
        const link = item.querySelector('.nav-link.has-dropdown');
        if (link) {
          link.removeEventListener('mouseenter', this.handleDesktopEnter);
          link.removeEventListener('mouseleave', this.handleDesktopLeave);
        }
      });
    } else {
      // Desktop dropdown handling
      this.navItems.forEach(item => {
        const dropdown = item.querySelector('.mega-dropdown');
        if (!dropdown) return;

        item.addEventListener('mouseenter', () => {
          if (this.leaveTimeout) clearTimeout(this.leaveTimeout);
          
          this.hoverTimeout = setTimeout(() => {
            this.closeAllDropdowns();
            
            dropdown.style.transition = 'all 0.25s ease';
            dropdown.style.opacity = '1';
            dropdown.style.visibility = 'visible';
            dropdown.style.pointerEvents = 'auto';
            
            if (item === this.navItems[0]) {
              dropdown.style.transform = 'translateX(0) translateY(0)';
            } else if (item === this.navItems[this.navItems.length - 1] || 
                       item === this.navItems[this.navItems.length - 2]) {
              dropdown.style.transform = 'translateX(0) translateY(0)';
            } else {
              dropdown.style.transform = 'translateX(-50%) translateY(0)';
            }
          }, 100);
        });

        item.addEventListener('mouseleave', () => {
          if (this.hoverTimeout) clearTimeout(this.hoverTimeout);
          
          this.leaveTimeout = setTimeout(() => {
            if (!dropdown.matches(':hover')) {
              this.closeDropdown(dropdown);
            }
          }, 150);
        });

        dropdown.addEventListener('mouseenter', () => {
          if (this.leaveTimeout) clearTimeout(this.leaveTimeout);
          if (this.hoverTimeout) clearTimeout(this.hoverTimeout);
        });

        dropdown.addEventListener('mouseleave', () => {
          this.leaveTimeout = setTimeout(() => {
            this.closeDropdown(dropdown);
          }, 100);
        });
      });
    }
  }

  closeDropdown(dropdown) {
    dropdown.style.opacity = '0';
    dropdown.style.pointerEvents = 'none';
    
    const item = dropdown.parentElement;
    const navItems = this.navItems;
    
    if (item === navItems[0]) {
      dropdown.style.transform = 'translateX(0) translateY(12px)';
    } else if (item === navItems[navItems.length - 1] || 
               item === navItems[navItems.length - 2]) {
      dropdown.style.transform = 'translateX(0) translateY(12px)';
    } else {
      dropdown.style.transform = 'translateX(-50%) translateY(12px)';
    }
    
    setTimeout(() => {
      if (parseFloat(dropdown.style.opacity) === 0) {
        dropdown.style.visibility = 'hidden';
      }
    }, 300);
  }

  setupNavigation() {
    this.navLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        const href = link.getAttribute('href');
        
        if (href && href.startsWith('#')) {
          e.preventDefault();
          const targetId = href.substring(1);
          const targetElement = document.getElementById(targetId);
          
          if (targetElement) {
            this.closeAllDropdowns();
            
            // Close desktop sidebar before scrolling
            if (this.desktopSidebarActive && !this.isMobile) {
              this.closeDesktopSidebar();
              
              // Wait for sidebar to close before scrolling
              setTimeout(() => {
                this.scrollToElement(targetElement);
              }, 300);
            } else {
              this.scrollToElement(targetElement);
            }
          }
        }
      });
    });
  }

  scrollToElement(element) {
    const headerHeight = this.header.offsetHeight;
    const announcementBar = document.querySelector('.announcement-bar');
    const announcementHeight = announcementBar ? announcementBar.offsetHeight : 0;
    const totalOffset = headerHeight + announcementHeight;
    
    const targetPosition = element.getBoundingClientRect().top + window.pageYOffset;
    const offsetPosition = Math.max(0, targetPosition - totalOffset);
    
    window.scrollTo({
      top: offsetPosition,
      behavior: 'smooth'
    });
  }

  setupScrollEffect() {
    window.addEventListener('scroll', () => {
      const currentScroll = window.pageYOffset;
      const isDesktop = window.innerWidth > 1024;
      const scrollDirection = currentScroll > this.lastScrollTop ? 'down' : 'up';
      
      // Add/remove scrolled class
      if (currentScroll > 50) {
        this.header.classList.add('scrolled');
      } else {
        this.header.classList.remove('scrolled');
      }
      
      // Desktop behavior - show sidebar on scroll
      if (isDesktop) {
        // Show sidebar when scrolling down past threshold
        if (currentScroll > this.scrollThreshold && 
            scrollDirection === 'down' && 
            !this.desktopSidebarActive) {
          this.openDesktopSidebar();
        }
        
        // Hide sidebar when scrolling up near top
        if (currentScroll < (this.scrollThreshold / 2) && 
            scrollDirection === 'up' && 
            this.desktopSidebarActive) {
          this.closeDesktopSidebar();
        }
      }
      
      // Close dropdowns on scroll (desktop only)
      if (!this.isMobile) {
        this.closeAllDropdowns();
      }
      
      this.lastScrollTop = currentScroll;
    });
  }

  resetHeader() {
    this.header.style.transform = 'translateY(0)';
    this.header.style.opacity = '1';
    this.header.style.visibility = 'visible';
  }

  closeAllDropdowns() {
    if (this.hoverTimeout) clearTimeout(this.hoverTimeout);
    if (this.leaveTimeout) clearTimeout(this.leaveTimeout);
    
    if (!this.isMobile) {
      this.dropdowns.forEach(dropdown => {
        this.closeDropdown(dropdown);
      });
    }
  }
}

// Initialize when DOM is ready
document.addEventListener('DOMContentLoaded', () => {
  setTimeout(() => {
    const header = new HeaderWithDropdowns();
    window.headerInstance = header;
  }, 100);
});
</script>