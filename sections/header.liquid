<style>
  /* Reset and Base Styles */
  :root {
    --header-height: 80px;
    --announcement-height: 40px;
    --primary-color: #E8C4B8;
    --text-dark: #2D2D2D;
    --text-light: #666666;
    --text-black: #000000;
    --white: #FFFFFF;
    --gray-light: #f9f9f9;
  }

  .header {
    background: transparent;
    position: fixed;
    top: 100px;
    left: 0;
    right: 0;
    z-index: 1000;
    transition: all 0.3s ease;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  }

 
  .header-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: var(--header-height);
  }

  /* Logo */
  .logo {
    flex-shrink: 0;
    z-index: 1002;
  }

  .logo img {
    height: 40px;
    width: auto;
    max-width: 120px;
    object-fit: contain;
  }

  /* Main Navigation - DESKTOP */
  .nav-main {
    display: flex;
    gap: 40px;
    align-items: center;
  }

  .nav-item {
    position: relative;
  }

  .nav-link {
    text-decoration: none;
    color: var(--text-dark);
    font-weight: 500;
    font-size: 14px;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    padding: 8px 0;
    transition: color 0.3s ease;
    display: flex;
    align-items: center;
    gap: 6px;
    cursor: pointer;
  }

  .nav-link.has-dropdown::after {
    content: '›';
    font-size: 16px;
    transform: rotate(90deg);
    transition: transform 0.3s ease;
  }

  .nav-item:hover .nav-link.has-dropdown::after {
    transform: rotate(-90deg);
  }

  .nav-link:hover {
    color: var(--primary-color);
  }

  /* Mega Dropdown - DESKTOP */
  .mega-dropdown {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(10px);
    width: 800px;
    background: var(--white);
    border-radius: 16px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    z-index: 1001;
    padding: 40px;
    pointer-events: none;
  }

  .nav-item:hover .mega-dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
    pointer-events: auto;
  }

  .mega-dropdown:hover {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
    pointer-events: auto;
  }

  /* Dropdown Content - BLACK TEXT FOR ALL */
  .dropdown-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
  }

  .dropdown-column h4 {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--text-black) !important;
  }

  .dropdown-links {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .dropdown-link {
    text-decoration: none;
    font-size: 14px;
    color: var(--text-black) !important;
    transition: all 0.3s ease;
    padding: 8px 0;
    border-bottom: 1px solid transparent;
  }

  .dropdown-link:hover {
    color: var(--primary-color) !important;
    border-bottom-color: var(--primary-color);
    transform: translateX(8px);
  }

  .dropdown-image {
    border-radius: 12px;
    overflow: hidden;
    margin-top: 20px;
  }

  .dropdown-image-content {
    background: linear-gradient(135deg, var(--primary-color), #D4A59A);
    height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--white);
    font-size: 1.2rem;
    font-weight: 600;
    border-radius: 12px;
  }

  /* Header Actions */
  .header-actions {
    display: flex;
    align-items: center;
    gap: 16px;
    z-index: 1002;
  }

  .header-action {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    text-decoration: none;
    color: var(--text-dark);
    transition: all 0.3s ease;
    position: relative;
  }

  .header-action:hover {
    background: rgba(232, 196, 184, 0.1);
    color: var(--primary-color);
  }

  .cart-count {
    background: var(--primary-color);
    color: var(--white);
    border-radius: 50%;
    width: 18px;
    height: 18px;
    font-size: 11px;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: -2px;
    right: -2px;
  }

  /* Mobile Menu Button */
  .mobile-menu-btn {
    display: none;
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    padding: 8px;
    color: var(--text-dark);
    z-index: 1002;
  }

  /* ==================== */
  /* RESPONSIVE STYLES */
  /* ==================== */

  /* Tablet */
  @media (max-width: 1024px) {
    .mega-dropdown {
      width: 700px;
      padding: 30px;
    }
    
    .nav-main {
      gap: 25px;
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .header {
      background: var(--white) !important;
      backdrop-filter: none !important;
      border-bottom: 1px solid rgba(0, 0, 0, 0.08);
      top: 0 !important;
    }

    {% if section.settings.show_announcement_bar %}
    .header {
      top: 0 !important;
    }
    
    body {
      padding-top: calc(var(--header-height) + var(--announcement-height));
    }
    {% endif %}

    .mobile-menu-btn {
      display: block;
    }

    /* Mobile Navigation */
    .nav-main {
      display: none;
      position: fixed;
      top: var(--header-height);
      left: 0;
      right: 0;
      bottom: 0;
      background: var(--white);
      flex-direction: column;
      padding: 20px;
      gap: 0;
      overflow-y: auto;
      z-index: 1001;
    }

    .nav-main.active {
      display: flex;
    }

    .nav-item {
      width: 100%;
    }

    .nav-link {
      justify-content: space-between;
      padding: 16px 0;
      border-bottom: 1px solid rgba(0, 0, 0, 0.08);
      font-size: 16px;
      text-transform: none;
      width: 100%;
      color: var(--text-dark) !important;
    }

    .nav-link.has-dropdown::after {
      transform: rotate(0deg);
    }

    .nav-link.active::after {
      transform: rotate(180deg);
    }

    /* Mobile Dropdown */
    .mega-dropdown {
      position: static;
      width: 100% !important;
      box-shadow: none !important;
      padding: 20px !important;
      opacity: 1 !important;
      visibility: visible !important;
      transform: none !important;
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease !important;
      background: var(--gray-light) !important;
      border-radius: 8px !important;
      margin-top: 10px !important;
      pointer-events: auto !important;
    }

    .nav-link.active + .mega-dropdown {
      display: block !important;
      max-height: 600px !important;
      overflow-y: auto !important;
    }

    .dropdown-grid {
      grid-template-columns: 1fr !important;
      gap: 20px !important;
    }

    /* Mobile dropdown text - Force black */
    .mega-dropdown,
    .mega-dropdown * {
      color: var(--text-black) !important;
    }

    .dropdown-column h4,
    .dropdown-link {
      color: var(--text-black) !important;
    }

    .header-actions {
      gap: 12px;
    }
  }

  /* Small Mobile */
  @media (max-width: 480px) {
    .header-inner {
      height: 70px;
    }
    
    .logo img {
      height: 35px;
    }
    
    .dropdown-grid {
      gap: 15px;
    }
    
    .dropdown-column h4 {
      font-size: 14px;
      margin-bottom: 15px;
    }
    
    .dropdown-link {
      font-size: 13px;
      padding: 6px 0;
    }
    
    .mega-dropdown {
      padding: 15px !important;
    }
  }

  /* Services by Concern Link - No dropdown arrow */
  .nav-item .nav-link[href="#services-by-concern"]::after {
    display: none !important;
  }

  /* Hide scrollbar for clean look */
  .nav-main::-webkit-scrollbar {
    width: 0;
    background: transparent;
  }

  .nav-main {
    scrollbar-width: none;
    -ms-overflow-style: none;
  }
</style>

