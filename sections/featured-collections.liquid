<style>
  .featured-collections {
    padding: 80px 0;
    background: #FAF8F6;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 60px;
    padding: 0 20px;
  }
  
  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 16px;
    color: #2D2D2D;
  }
  
  .section-description {
    font-size: 1.1rem;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }
  
  .collections-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .collections-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 30px;
  }
  
  .collection-card {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    aspect-ratio: 3/4;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    background: white;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }
  
  .collection-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
  }
  
  .collection-image-container {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
  }
  
  .collection-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .collection-card:hover .collection-image {
    transform: scale(1.08);
  }
  
  .collection-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 30px;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.85));
    color: white;
    z-index: 2;
  }
  
  .collection-title {
    font-size: 1.4rem;
    font-weight: 600;
    margin-bottom: 12px;
    color: white;
  }
  
  .collection-product-count {
    font-size: 0.9rem;
    opacity: 0.9;
    margin-bottom: 20px;
    display: block;
  }
  
  .collection-link {
    display: inline-block;
    padding: 10px 24px;
    background: white;
    color: #2D2D2D;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    border: 2px solid white;
  }
  
  .collection-link:hover {
    background: transparent;
    color: white;
  }
  
  /* Placeholder for collections without images */
  .collection-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #E8C4B8, #D4A59A);
    color: white;
    padding: 20px;
    text-align: center;
  }
  
  .placeholder-icon {
    font-size: 3rem;
    margin-bottom: 20px;
  }
  
  .placeholder-text {
    font-size: 1.1rem;
    font-weight: 500;
  }
  
  /* Mobile Responsiveness */
  @media (max-width: 1024px) {
    .collections-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 25px;
    }
  }
  
  @media (max-width: 768px) {
    .featured-collections {
      padding: 60px 0;
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .collections-grid {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 20px;
    }
    
    .collection-content {
      padding: 20px;
    }
    
    .collection-title {
      font-size: 1.2rem;
    }
  }
  
  @media (max-width: 480px) {
    .collections-grid {
      grid-template-columns: 1fr;
      max-width: 350px;
      margin: 0 auto;
    }
    
    .collection-card {
      aspect-ratio: 4/5;
    }
  }
</style>

<section class="featured-collections">
  <div class="section-header">
    <h2 class="section-title">Shop By Collection</h2>
    <p class="section-description">Find the perfect products for your unique curl pattern</p>
  </div>

  <div class="collections-container">
    <div class="collections-grid">
      {% comment %} Option 1: Show ALL collections (uncomment if you want all) {% endcomment %}
      {% assign all_collections = collections | sort: 'products_count' | reverse %}
      
      {% comment %} Option 2: Show specific collections (edit this array) {% endcomment %}
      {% assign featured_collections_handles = 'absolut-repair,hair-masks,shampoo,conditioner,styling,repair,keratin,color-care' | split: ',' %}
      
      {% comment %} Choose which method to use - Option 1 shows ALL, Option 2 shows specific {% endcomment %}
      {% for collection in all_collections %}
        {% comment %} Skip the "All" collection and empty collections {% endcomment %}
        {% if collection.handle != 'all' and collection.products_count > 0 %}
          <div class="collection-card">
            <div class="collection-image-container">
              {% if collection.image %}
                {% comment %} Collection has a dedicated image {% endcomment %}
                <img 
                  src="{{ collection.image | image_url: width: 600, height: 800, crop: 'center' }}" 
                  alt="{{ collection.title | escape }}" 
                  class="collection-image" 
                  loading="lazy"
                  width="600"
                  height="800"
                  onerror="this.style.display='none'; this.parentElement.innerHTML='<div class=\"collection-placeholder\"><div class=\"placeholder-icon">ðŸ“¦</div><div class=\"placeholder-text\">{{ collection.title }}</div></div>';"
                >
              {% elsif collection.products.first.featured_image %}
                {% comment %} Use first product's image as fallback {% endcomment %}
                <img 
                  src="{{ collection.products.first.featured_image | image_url: width: 600, height: 800, crop: 'center' }}" 
                  alt="{{ collection.title | escape }}" 
                  class="collection-image" 
                  loading="lazy"
                  width="600"
                  height="800"
                  onerror="this.style.display='none'; this.parentElement.innerHTML='<div class=\"collection-placeholder\"><div class=\"placeholder-icon">ðŸ“¦</div><div class=\"placeholder-text\">{{ collection.title }}</div></div>';"
                >
              {% else %}
                {% comment %} Show placeholder if no images {% endcomment %}
                <div class="collection-placeholder">
                  <div class="placeholder-icon">ðŸ“¦</div>
                  <div class="placeholder-text">{{ collection.title }}</div>
                </div>
              {% endif %}
            </div>
            
            <div class="collection-content">
              <h3 class="collection-title">{{ collection.title }}</h3>
              <span class="collection-product-count">{{ collection.products_count }} {{ collection.products_count | pluralize: 'product', 'products' }}</span>
              <a href="{{ collection.url }}" class="collection-link">Shop Now</a>
            </div>
          </div>
        {% endif %}
      {% endfor %}
      
      {% comment %} Fallback if no collections exist {% endcomment %}
      {% if collections.size == 0 or collections.size == 1 %}
        {% for i in (1..8) %}
          <div class="collection-card">
            <div class="collection-placeholder">
              <div class="placeholder-icon">âœ¨</div>
              <div class="placeholder-text">Collection {{ i }}</div>
            </div>
            <div class="collection-content">
              <h3 class="collection-title">Featured Collection {{ i }}</h3>
              <span class="collection-product-count">{{ i | times: 5 }} products</span>
              <a href="{{ routes.collections_url }}" class="collection-link">Shop Now</a>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Collections",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Shop By Collection"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Find the perfect products for your unique curl pattern"
    },
    {
      "type": "range",
      "id": "collections_limit",
      "label": "Number of collections to show",
      "min": 4,
      "max": 12,
      "step": 2,
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "Featured Collections Grid",
      "category": "Collections"
    }
  ]
}
{% endschema %}