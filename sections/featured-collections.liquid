<script>
class CollectionsCarousel {
  constructor() {
    this.carousel = document.getElementById('collections-carousel');
    this.prevBtn = document.getElementById('collections-prev');
    this.nextBtn = document.getElementById('collections-next');
    this.carouselWrapper = document.querySelector('.collections-carousel-wrapper');
    this.cards = document.querySelectorAll('.collection-card');
    
    if (this.carousel) {
      this.init();
    }
  }

  init() {
    this.bindEvents();
    this.setupAutoScroll();
  }

  bindEvents() {
    // Navigation buttons
    if (this.prevBtn && this.nextBtn) {
      this.prevBtn.addEventListener('click', () => this.scrollBy(-1));
      this.nextBtn.addEventListener('click', () => this.scrollBy(1));
    }

    // Touch/swipe for mobile
    if (this.carouselWrapper) {
      let touchStartX = 0;
      let touchEndX = 0;
      
      this.carouselWrapper.addEventListener('touchstart', (e) => {
        touchStartX = e.changedTouches[0].screenX;
        this.pauseAutoScroll();
      });
      
      this.carouselWrapper.addEventListener('touchend', (e) => {
        touchEndX = e.changedTouches[0].screenX;
        this.handleSwipe(touchStartX, touchEndX);
        this.resumeAutoScroll();
      });
    }

    // Pause auto-scroll on hover
    if (this.carousel) {
      this.carousel.addEventListener('mouseenter', () => this.pauseAutoScroll());
      this.carousel.addEventListener('mouseleave', () => this.resumeAutoScroll());
    }
  }

  handleSwipe(startX, endX) {
    const swipeThreshold = 50;
    const swipeDistance = startX - endX;
    
    if (Math.abs(swipeDistance) > swipeThreshold) {
      if (swipeDistance > 0) {
        this.scrollBy(1); // Swipe left - next
      } else {
        this.scrollBy(-1); // Swipe right - previous
      }
    }
  }

  scrollBy(direction) {
    if (!this.carouselWrapper) return;
    
    const cardWidth = 280; // Match CSS card width
    const gap = 25; // Match CSS gap
    const scrollAmount = (cardWidth + gap) * direction;
    
    this.carouselWrapper.scrollBy({
      left: scrollAmount,
      behavior: 'smooth'
    });
  }

  setupAutoScroll() {
    // Auto-scroll is handled by CSS animation
    // This just controls pausing/resuming
    this.autoScrollPaused = false;
  }

  pauseAutoScroll() {
    if (this.carousel && !this.autoScrollPaused) {
      this.carousel.style.animationPlayState = 'paused';
      this.autoScrollPaused = true;
    }
  }

  resumeAutoScroll() {
    if (this.carousel && this.autoScrollPaused) {
      this.carousel.style.animationPlayState = 'running';
      this.autoScrollPaused = false;
    }
  }
}

// Initialize carousel
document.addEventListener('DOMContentLoaded', () => {
  new CollectionsCarousel();
});
</script>

