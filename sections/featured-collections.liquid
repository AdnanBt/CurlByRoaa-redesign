<style>
  .featured-collections {
    padding: var(--spacing-xl) 0;
  }
  .section-header {
    text-align: center;
    margin-bottom: var(--spacing-lg);
  }
  .section-title {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-sm);
  }
  .collections-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-md);
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-sm);
  }
  .collection-card {
    position: relative;
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    aspect-ratio: 3/4;
    transition: transform 0.3s ease;
  }
  .collection-card:hover {
    transform: translateY(-5px);
  }
  .collection-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }
  .collection-card:hover .collection-image {
    transform: scale(1.05);
  }
  .collection-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: var(--spacing-lg);
    background: linear-gradient(transparent, rgba(0,0,0,0.8));
    color: white;
  }
</style>

<section class="featured-collections">
  <div class="section-header">
    <h2 class="section-title">Shop By Collection</h2>
    <p class="section-description">Find the perfect products for your unique curl pattern</p>
  </div>

  <div class="collections-grid">
    {% if section.blocks.size > 0 %}
      {% for block in section.blocks limit: 3 %}
        {% assign collection = collections[block.settings.collection] %}
        <div class="collection-card">
          {% if collection.image %}
            <img src="{{ collection.image | img_url: '600x800', crop: 'center' }}" alt="{{ collection.title }}" class="collection-image" loading="lazy">
          {% else %}
            <div class="collection-image" style="background: var(--color-secondary); display: flex; align-items: center; justify-content: center; color: white; font-size: 1.2rem;">
              {{ collection.title | default: 'Collection' }}
            </div>
          {% endif %}
          <div class="collection-content">
            <h3 class="collection-title" style="margin-bottom: 10px; font-size: 1.4rem;">{{ collection.title | default: 'Collection' }}</h3>
            <a href="{{ collection.url }}" class="btn btn-outline" style="color: white; border-color: white;">Shop Now</a>
          </div>
        </div>
      {% endfor %}
    {% else %}
      <!-- Fallback: Show 3 placeholder collections -->
      {% for i in (1..3) %}
        <div class="collection-card">
          <div class="collection-image" style="background: linear-gradient(135deg, #E8C4B8, #D4A59A); display: flex; align-items: center; justify-content: center; color: white; font-size: 1.2rem;">
            Add Collection {{ i }}
          </div>
          <div class="collection-content">
            <h3 class="collection-title" style="margin-bottom: 10px; font-size: 1.4rem;">Featured Collection</h3>
            <a href="/collections" class="btn btn-outline" style="color: white; border-color: white;">Shop Now</a>
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Featured Collections",
  "max_blocks": 3,
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Collections",
      "blocks": [
        { "type": "collection" },
        { "type": "collection" },
        { "type": "collection" }
      ]
    }
  ]
}
{% endschema %}