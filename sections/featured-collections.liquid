{% comment %}
Featured Collections – Auto-Scrolling + Inner Auto Image Rotation
No external libraries. Shopify safe.
{% endcomment %}

<style>
.featured-collections-wrapper {
  overflow: hidden;
  padding: 20px 0;
}

.fc-track {
  display: flex;
  gap: 20px;
  animation: scroll-left 22s linear infinite;
}

.fc-item {
  min-width: 240px;
  flex-shrink: 0;
  background: #fff;
  border-radius: 14px;
  padding: 16px;
  box-shadow: 0px 4px 12px rgba(0,0,0,0.06);
  text-align: center;
  position: relative;
}

.fc-img-box {
  width: 100%;
  height: 260px;
  border-radius: 10px;
  overflow: hidden;
  position: relative;
}

.fc-img-box img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  position: absolute;
  inset: 0;
  opacity: 0;
  transition: opacity 0.6s ease;
}

.fc-img-box img.active {
  opacity: 1;
}

.fc-collection-title {
  font-size: 16px;
  font-weight: 700;
  margin-top: 10px;
}

.fc-count {
  font-size: 13px;
  opacity: 0.7;
  margin-bottom: 10px;
}

.fc-btn {
  display: inline-block;
  padding: 10px 16px;
  background: #c89b72;
  color: #fff;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 600;
}

@keyframes scroll-left {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}

@media (max-width: 768px) {
  .fc-item { min-width: 200px; }
  .fc-track { gap: 14px; }
  .fc-img-box { height: 200px; }
}
</style>

<div class="featured-collections-wrapper">
  <h2 style="padding-left:15px; font-size:22px; font-weight:700;">{{ section.settings.heading }}</h2>

  <div class="fc-track">

    {% for col in section.settings.collections %}
      {% assign first_products = col.products | slice: 0, 5 %}
      
      <div class="fc-item">

        <div class="fc-img-box" data-rotate="true">
          {% for product in first_products %}
            {% if product.featured_image %}
              <img 
                src="{{ product.featured_image | image_url: width: 400 }}"
                width="400"
                height="{{ product.featured_image.height | default: 400 }}"
                alt="{{ product.title }}"
                class="{% if forloop.first %}active{% endif %}"
                loading="lazy"
              >
            {% endif %}
          {% endfor %}
        </div>

        <div class="fc-collection-title">{{ col.title }}</div>
        <div class="fc-count">{{ col.all_products_count }} products</div>
        <a href="{{ col.url }}" class="fc-btn">Shop Now</a>

      </div>
    {% endfor %}

    {# Duplicate for infinite marquee #}
    {% for col in section.settings.collections %}
      {% assign first_products = col.products | slice: 0, 5 %}
      
      <div class="fc-item">

        <div class="fc-img-box" data-rotate="true">
          {% for product in first_products %}
            {% if product.featured_image %}
              <img 
                src="{{ product.featured_image | image_url: width: 400 }}"
                width="400"
                height="{{ product.featured_image.height | default: 400 }}"
                alt="{{ product.title }}"
                class="{% if forloop.first %}active{% endif %}"
                loading="lazy"
              >
            {% endif %}
          {% endfor %}
        </div>

        <div class="fc-collection-title">{{ col.title }}</div>
        <div class="fc-count">{{ col.all_products_count }} products</div>
        <a href="{{ col.url }}" class="fc-btn">Shop Now</a>

      </div>
    {% endfor %}

  </div>
</div>

<script defer>
document.addEventListener("DOMContentLoaded", () => {
  const boxes = document.querySelectorAll(".fc-img-box[data-rotate='true']");

  boxes.forEach(box => {
    const images = box.querySelectorAll("img");
    if (images.length < 2) return; // no rotation if only 1 image

    let index = 0;

    setInterval(() => {
      images[index].classList.remove("active");
      index = (index + 1) % images.length;
      images[index].classList.add("active");
    }, 2000);
  });
});
</script>

{% schema %}
{
  "name": "Featured Collections",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Collections"
    },
    {
      "type": "collection_list",
      "id": "collections",
      "label": "Select Collections",
      "limit": 10
    }
  ],
  "presets": [
    { "name": "Featured Collections – Auto Carousel + Rotating Images" }
  ]
}
{% endschema %}
