{% comment %} featured-collections.liquid - With Animation {% endcomment %}

<style>
  .featured-collections {
    padding: 80px 0;
    background: #FAF8F6;
    overflow: hidden;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 60px;
    padding: 0 20px;
  }
  
  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 16px;
    color: #2D2D2D;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s ease forwards;
  }
  
  .section-description {
    font-size: 1.1rem;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s ease 0.2s forwards;
  }
  
  .collections-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .collections-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 30px;
  }
  
  .collection-card {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    aspect-ratio: 3/4;
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    background: white;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    opacity: 0;
    transform: translateY(30px) scale(0.95);
    animation: cardSlideIn 2s cubic-bezier(0.23, 1, 0.32, 1) forwards;
  }
  
  /* Staggered animation for each card */
  .collection-card:nth-child(1) { animation-delay: 0.1s; }
  .collection-card:nth-child(2) { animation-delay: 0.2s; }
  .collection-card:nth-child(3) { animation-delay: 0.3s; }
  .collection-card:nth-child(4) { animation-delay: 0.4s; }
  .collection-card:nth-child(5) { animation-delay: 0.5s; }
  .collection-card:nth-child(6) { animation-delay: 0.6s; }
  .collection-card:nth-child(7) { animation-delay: 0.7s; }
  .collection-card:nth-child(8) { animation-delay: 0.8s; }
  
  .collection-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    z-index: 10;
  }
  
  .collection-image-container {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
  }
  
  .collection-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 1.2s cubic-bezier(0.4, 0, 0.2, 1);
    transform: scale(1.1);
    filter: brightness(0.9);
  }
  
  .collection-card:hover .collection-image {
    transform: scale(1.15);
    filter: brightness(1);
  }
  
  .collection-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 30px;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.9));
    color: white;
    z-index: 2;
    transform: translateY(20px);
    opacity: 0;
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .collection-card:hover .collection-content {
    transform: translateY(0);
    opacity: 1;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.95));
  }
  
  .collection-title {
    font-size: 1.4rem;
    font-weight: 600;
    margin-bottom: 12px;
    color: white;
    transform: translateY(10px);
    opacity: 0;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1) 0.1s;
  }
  
  .collection-card:hover .collection-title {
    transform: translateY(0);
    opacity: 1;
  }
  
  .collection-product-count {
    font-size: 0.9rem;
    opacity: 0;
    margin-bottom: 20px;
    display: block;
    transform: translateY(10px);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1) 0.2s;
  }
  
  .collection-card:hover .collection-product-count {
    transform: translateY(0);
    opacity: 0.9;
  }
  
  .collection-link {
    display: inline-block;
    padding: 10px 24px;
    background: white;
    color: #2D2D2D;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 2px solid white;
    transform: translateY(10px) scale(0.95);
    opacity: 0;
  }
  
  .collection-card:hover .collection-link {
    transform: translateY(0) scale(1);
    opacity: 1;
    background: white;
    color: #2D2D2D;
  }
  
  .collection-link:hover {
    background: transparent !important;
    color: white !important;
    transform: translateY(-2px) scale(1.05) !important;
    box-shadow: 0 8px 20px rgba(255, 255, 255, 0.2);
  }
  
  /* Placeholder for collections without images */
  .collection-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #E8C4B8, #D4A59A);
    color: white;
    padding: 20px;
    text-align: center;
    animation: placeholderPulse 2s ease-in-out infinite;
  }
  
  .placeholder-icon {
    font-size: 3rem;
    margin-bottom: 20px;
    animation: iconFloat 3s ease-in-out infinite;
  }
  
  .placeholder-text {
    font-size: 1.1rem;
    font-weight: 500;
  }
  
  /* ANIMATIONS */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes cardSlideIn {
    0% {
      opacity: 0;
      transform: translateY(50px) scale(0.9);
    }
    40% {
      opacity: 0.5;
      transform: translateY(10px) scale(0.98);
    }
    70% {
      opacity: 0.8;
      transform: translateY(-5px) scale(1.02);
    }
    100% {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }
  
  @keyframes placeholderPulse {
    0%, 100% {
      opacity: 0.9;
      transform: scale(1);
    }
    50% {
      opacity: 1;
      transform: scale(1.02);
    }
  }
  
  @keyframes iconFloat {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    33% {
      transform: translateY(-5px) rotate(5deg);
    }
    66% {
      transform: translateY(5px) rotate(-5deg);
    }
  }
  
  /* Mobile Responsiveness */
  @media (max-width: 1200px) {
    .collections-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 25px;
    }
  }
  
  @media (max-width: 768px) {
    .featured-collections {
      padding: 60px 0;
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .collections-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }
    
    .collection-content {
      padding: 20px;
    }
    
    .collection-title {
      font-size: 1.2rem;
    }
    
    /* Faster animations on mobile */
    .collection-card {
      animation-duration: 1.5s;
    }
  }
  
  @media (max-width: 480px) {
    .collections-grid {
      grid-template-columns: 1fr;
      max-width: 350px;
      margin: 0 auto;
      gap: 15px;
    }
    
    .collection-card {
      aspect-ratio: 4/5;
      animation-duration: 1.2s;
    }
  }
</style>

<section class="featured-collections">
  <div class="section-header">
    <h2 class="section-title">{{ section.settings.title | default: 'Shop By Collection' }}</h2>
    <p class="section-description">{{ section.settings.description | default: 'Find the perfect products for your unique curl pattern' }}</p>
  </div>

  <div class="collections-container">
    <div class="collections-grid">
      {% comment %} DEBUG: Check what collections exist {% endcomment %}
      {% assign debug_mode = false %}
      
      {% if debug_mode %}
        <div style="display: none;">
          <h3>Debug - All Collections:</h3>
          {% for collection in collections %}
            <p>{{ collection.handle }} - {{ collection.title }} ({{ collection.products_count }} products) - Has image: {{ collection.image | default: 'NO' }}</p>
          {% endfor %}
        </div>
      {% endif %}
      
      {% comment %} OPTION 1: Use blocks if configured {% endcomment %}
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          {% assign collection = collections[block.settings.collection] %}
          {% if collection %}
            <div class="collection-card" data-animation-delay="{{ forloop.index | times: 0.1 }}">
              <div class="collection-image-container">
                {% if collection.image %}
                  <img 
                    src="{{ collection.image | image_url: width: 600, height: 800, crop: 'center' }}" 
                    alt="{{ collection.title | escape }}" 
                    class="collection-image" 
                    loading="lazy"
                    width="600"
                    height="800"
                    onerror="this.onerror=null; this.style.display='none'; this.parentElement.innerHTML='<div class=\"collection-placeholder\"><div class=\"placeholder-icon\">üì¶</div><div class=\"placeholder-text\">{{ collection.title }}</div></div>';"
                  >
                {% elsif collection.products_count > 0 and collection.products.first.featured_image %}
                  <img 
                    src="{{ collection.products.first.featured_image | image_url: width: 600, height: 800, crop: 'center' }}" 
                    alt="{{ collection.title | escape }}" 
                    class="collection-image" 
                    loading="lazy"
                    width="600"
                    height="800"
                    onerror="this.onerror=null; this.style.display='none'; this.parentElement.innerHTML='<div class=\"collection-placeholder\"><div class=\"placeholder-icon\">üì¶</div><div class=\"placeholder-text\">{{ collection.title }}</div></div>';"
                  >
                {% else %}
                  <div class="collection-placeholder">
                    <div class="placeholder-icon">üì¶</div>
                    <div class="placeholder-text">{{ collection.title }}</div>
                  </div>
                {% endif %}
              </div>
              
              <div class="collection-content">
                <h3 class="collection-title">{{ collection.title }}</h3>
                <span class="collection-product-count">{{ collection.products_count }} {{ collection.products_count | pluralize: 'product', 'products' }}</span>
                <a href="{{ collection.url }}" class="collection-link">Shop Now</a>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      
      {% comment %} OPTION 2: Show specific collections automatically {% endcomment %}
      {% else %}
        {% comment %} List of collections to show - UPDATE THESE HANDLES {% endcomment %}
        {% assign collection_handles_to_show = 'browsbylush,authentic-beauty-concept,alterna,schwarzkopf,keune,k18,hair-accessories,absolut-repair' | split: ',' %}
        
        {% assign displayed_count = 0 %}
        
        {% for handle in collection_handles_to_show %}
          {% assign collection = collections[handle] %}
          
          {% if collection %}
            {% assign displayed_count = displayed_count | plus: 1 %}
            
            <div class="collection-card" data-animation-delay="{{ forloop.index | times: 0.1 }}">
              <div class="collection-image-container">
                {% comment %} TRY 1: Collection's own image {% endcomment %}
                {% if collection.image %}
                  <img 
                    src="{{ collection.image | image_url: width: 600, height: 800, crop: 'center' }}" 
                    alt="{{ collection.title | escape }}" 
                    class="collection-image" 
                    loading="lazy"
                    width="600"
                    height="800"
                    onerror="this.onerror=null; this.style.display='none'; this.parentElement.innerHTML='<div class=\"collection-placeholder\"><div class=\"placeholder-icon\">üì¶</div><div class=\"placeholder-text\">{{ collection.title }}</div></div>';"
                  >
                
                {% comment %} TRY 2: First product's image {% endcomment %}
                {% elsif collection.products_count > 0 and collection.products.first.featured_image %}
                  <img 
                    src="{{ collection.products.first.featured_image | image_url: width: 600, height: 800, crop: 'center' }}" 
                    alt="{{ collection.title | escape }}" 
                    class="collection-image" 
                    loading="lazy"
                    width="600"
                    height="800"
                    onerror="this.onerror=null; this.style.display='none'; this.parentElement.innerHTML='<div class=\"collection-placeholder\"><div class=\"placeholder-icon\">üì¶</div><div class=\"placeholder-text\">{{ collection.title }}</div></div>';"
                  >
                
                {% comment %} TRY 3: Placeholder with collection name {% endcomment %}
                {% else %}
                  <div class="collection-placeholder">
                    <div class="placeholder-icon">üì¶</div>
                    <div class="placeholder-text">{{ collection.title }}</div>
                  </div>
                {% endif %}
              </div>
              
              <div class="collection-content">
                <h3 class="collection-title">{{ collection.title }}</h3>
                <span class="collection-product-count">{{ collection.products_count }} {{ collection.products_count | pluralize: 'product', 'products' }}</span>
                <a href="{{ collection.url }}" class="collection-link">Shop Now</a>
              </div>
            </div>
          
          {% comment %} Collection doesn't exist - show placeholder {% endcomment %}
          {% else %}
            <div class="collection-card" data-animation-delay="{{ forloop.index | times: 0.1 }}">
              <div class="collection-placeholder">
                <div class="placeholder-icon">‚ùì</div>
                <div class="placeholder-text">{{ handle | replace: '-', ' ' | capitalize }}</div>
              </div>
              <div class="collection-content">
                <h3 class="collection-title">{{ handle | replace: '-', ' ' | capitalize }}</h3>
                <span class="collection-product-count">0 products</span>
                <a href="{{ routes.collections_url }}" class="collection-link">Coming Soon</a>
              </div>
            </div>
          {% endif %}
        {% endfor %}
        
        {% comment %} If NO collections were found at all {% endcomment %}
        {% if displayed_count == 0 %}
          <div style="grid-column: 1 / -1; text-align: center; padding: 40px; animation: fadeInUp 1s ease forwards;">
            <p>No collections found. Please:</p>
            <ol style="text-align: left; display: inline-block; margin: 20px auto;">
              <li>Create collections in Shopify Admin</li>
              <li>Add products to collections</li>
              <li>Set collection images or add product images</li>
              <li>Update collection handles in this section's code</li>
            </ol>
          </div>
        {% endif %}
      {% endif %}
    </div>
  </div>
</section>

<script>
// Add enhanced animations
document.addEventListener('DOMContentLoaded', function() {
  // Check if user prefers reduced motion
  const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
  
  if (!prefersReducedMotion) {
    // Add scroll-based animations
    const collectionCards = document.querySelectorAll('.collection-card');
    
    // Create Intersection Observer for scroll animations
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.animationPlayState = 'running';
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    });
    
    // Observe each card
    collectionCards.forEach(card => {
      observer.observe(card);
      
      // Add hover effect with GSAP-like smoothness
      card.addEventListener('mouseenter', function() {
        this.style.transition = 'all 0.6s cubic-bezier(0.23, 1, 0.32, 1)';
      });
      
      card.addEventListener('mouseleave', function() {
        this.style.transition = 'all 0.8s cubic-bezier(0.23, 1, 0.32, 1)';
      });
    });
    
    // Image load effects
    const collectionImages = document.querySelectorAll('.collection-image');
    collectionImages.forEach(img => {
      img.addEventListener('load', function() {
        this.style.transition = 'transform 1.2s cubic-bezier(0.23, 1, 0.32, 1), filter 1.2s ease';
      });
    });
  } else {
    // Disable animations for users who prefer reduced motion
    document.querySelectorAll('.collection-card').forEach(card => {
      card.style.animation = 'none';
      card.style.opacity = '1';
      card.style.transform = 'none';
    });
  }
});
</script>

