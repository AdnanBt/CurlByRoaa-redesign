{% comment %}
Featured Collections – Auto-Scrolling Carousel
No Swiper. No external libraries. Shopify-safe.
{% endcomment %}

<style>
.featured-collections-wrapper {
  overflow: hidden;
  padding: 20px 0;
}

.fc-track {
  display: flex;
  gap: 20px;
  animation: scroll-left 20s linear infinite;
}

.fc-item {
  min-width: 240px;
  flex-shrink: 0;
  background: #fff;
  border-radius: 14px;
  padding: 16px;
  box-shadow: 0px 4px 12px rgba(0,0,0,0.06);
  text-align: center;
}

.fc-item img {
  width: 100%;
  height: auto;
  border-radius: 10px;
}

.fc-collection-title {
  font-size: 16px;
  font-weight: 700;
  margin-top: 10px;
}

.fc-count {
  font-size: 13px;
  opacity: 0.7;
  margin-bottom: 10px;
}

.fc-btn {
  display: inline-block;
  padding: 10px 16px;
  background: #c89b72;
  color: #fff;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 600;
}

@keyframes scroll-left {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}

@media (max-width: 768px) {
  .fc-item { min-width: 200px; }
  .fc-track { gap: 14px; }
}
</style>

<div class="featured-collections-wrapper">
  <h2 style="padding-left:15px; font-size:22px; font-weight:700;">{{ section.settings.heading }}</h2>

  <div class="fc-track">
    {% for col in section.settings.collections %}
      {% assign img = col.image | default: col.products.first.featured_image %}

      <div class="fc-item">
        {% if img %}
          <img 
            src="{{ img | image_url: width: 400 }}"
            width="400"
            height="{{ img.height | default: 400 }}"
            alt="{{ col.title }}"
            loading="lazy"
          >
        {% endif %}

        <div class="fc-collection-title">{{ col.title }}</div>
        <div class="fc-count">{{ col.all_products_count }} products</div>

        <a href="{{ col.url }}" class="fc-btn">Shop Now</a>
      </div>
    {% endfor %}

    {# Duplicate items for infinite loop #}
    {% for col in section.settings.collections %}
      {% assign img = col.image | default: col.products.first.featured_image %}

      <div class="fc-item">
        {% if img %}
          <img 
            src="{{ img | image_url: width: 400 }}"
            width="400"
            height="{{ img.height | default: 400 }}"
            alt="{{ col.title }}"
            loading="lazy"
          >
        {% endif %}

        <div class="fc-collection-title">{{ col.title }}</div>
        <div class="fc-count">{{ col.all_products_count }} products</div>

        <a href="{{ col.url }}" class="fc-btn">Shop Now</a>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Featured Collections",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Collections"
    },
    {
      "type": "collection_list",
      "id": "collections",
      "label": "Select Collections",
      "limit": 10
    }
  ],
  "presets": [
    { "name": "Featured Collections – Auto Carousel" }
  ]
}
{% endschema %}
