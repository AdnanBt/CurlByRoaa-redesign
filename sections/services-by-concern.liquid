{%- comment -%}
  services-by-concern.liquid
  Professional booking with auto-sliding carousel for ALL devices
{%- endcomment -%}

<style>
  .concern-services-section {
    padding: var(--section-padding) 0;
    background: linear-gradient(135deg, #FAF8F6 0%, #FFFFFF 100%);
    position: relative;
    overflow: hidden;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }
  
  .section-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 800;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #2D2D2D 0%, #666666 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.1;
    letter-spacing: -0.5px;
  }
  
  .section-description {
    font-size: clamp(1.1rem, 2vw, 1.3rem);
    color: #666;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
    font-weight: 400;
  }
  
  /* Carousel Container */
  .concern-carousel-container {
    position: relative;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    overflow: hidden;
  }
  
  @media (max-width: 768px) {
    .concern-carousel-container {
      padding: 0 15px;
    }
  }
  
  @media (max-width: 480px) {
    .concern-carousel-container {
      padding: 0 10px;
    }
  }
  
  /* CAROUSEL FOR ALL DEVICES - AUTO SLIDE */
  .concern-carousel {
    display: flex;
    gap: 30px;
    padding: 20px 0;
    width: max-content;
  }
  
  /* Desktop animation */
  @media (min-width: 1024px) {
    .concern-carousel {
      animation: concernCarouselScrollDesktop 80s linear infinite;
    }
  }
  
  /* Tablet animation */
  @media (max-width: 1023px) and (min-width: 769px) {
    .concern-carousel {
      animation: concernCarouselScrollTablet 70s linear infinite;
    }
  }
  
  /* Mobile animation */
  @media (max-width: 768px) {
    .concern-carousel {
      animation: concernCarouselScrollMobile 60s linear infinite;
    }
  }
  
  /* Small mobile animation */
  @media (max-width: 480px) {
    .concern-carousel {
      animation: concernCarouselScrollSmallMobile 50s linear infinite;
    }
  }
  
  /* Pause on hover for devices with mouse */
  @media (hover: hover) and (pointer: fine) {
    .concern-carousel:hover {
      animation-play-state: paused;
    }
  }
  
  /* PROFESSIONAL CONCERN CARD DESIGN */
  .concern-card {
    flex: 0 0 380px;
    background: white;
    border-radius: 24px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.08);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    border: 1px solid rgba(232, 196, 184, 0.15);
  }
  
  /* Tablet card size */
  @media (max-width: 1023px) and (min-width: 769px) {
    .concern-card {
      flex: 0 0 340px;
    }
  }
  
  /* Mobile card size */
  @media (max-width: 768px) {
    .concern-card {
      flex: 0 0 300px;
    }
  }
  
  /* Small mobile card size */
  @media (max-width: 480px) {
    .concern-card {
      flex: 0 0 280px;
    }
  }
  
  .concern-card:hover {
    transform: translateY(-15px) scale(1.02);
    box-shadow: 0 30px 80px rgba(232, 196, 184, 0.2);
    border-color: rgba(232, 196, 184, 0.3);
  }
  
  /* Card Header */
  .concern-card-header {
    background: linear-gradient(135deg, var(--color-accent) 0%, #D4A59A 100%);
    color: white;
    padding: 35px 30px;
    position: relative;
    min-height: 220px;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    overflow: hidden;
  }
  
  @media (max-width: 768px) {
    .concern-card-header {
      padding: 30px 25px;
      min-height: 200px;
    }
  }
  
  @media (max-width: 480px) {
    .concern-card-header {
      padding: 25px 20px;
      min-height: 180px;
    }
  }
  
  .concern-card-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 100%);
    pointer-events: none;
  }
  
  .concern-number {
    position: absolute;
    top: 24px;
    right: 24px;
    width: 48px;
    height: 48px;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 800;
    font-size: 1.3rem;
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.3);
  }
  
  .concern-icon-wrapper {
    width: 70px;
    height: 70px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 24px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }
  
  .concern-icon {
    width: 36px;
    height: 36px;
    color: white;
  }
  
  .concern-title {
    font-size: 1.6rem;
    font-weight: 800;
    margin-bottom: 10px;
    line-height: 1.2;
    letter-spacing: -0.5px;
  }
  
  .concern-symptoms {
    font-size: 0.95rem;
    opacity: 0.9;
    line-height: 1.5;
    margin-bottom: 0;
    font-weight: 400;
  }
  
  /* Card Content */
  .concern-card-content {
    padding: 35px 30px;
    background: white;
  }
  
  .services-list {
    margin-bottom: 35px;
  }
  
  .service-item {
    display: flex;
    align-items: flex-start;
    gap: 14px;
    margin-bottom: 20px;
    padding: 20px;
    background: linear-gradient(135deg, #FAF8F6 0%, #FFFFFF 100%);
    border-radius: 16px;
    transition: all 0.3s ease;
    border: 1px solid rgba(232, 196, 184, 0.1);
  }
  
  .service-item:hover {
    background: white;
    border-color: var(--color-accent);
    transform: translateX(8px);
    box-shadow: 0 8px 25px rgba(232, 196, 184, 0.15);
  }
  
  .service-icon {
    width: 28px;
    height: 28px;
    color: var(--color-accent);
    flex-shrink: 0;
    margin-top: 2px;
  }
  
  .service-info {
    flex: 1;
  }
  
  .service-name {
    font-weight: 700;
    color: #2D2D2D;
    margin-bottom: 6px;
    font-size: 1.05rem;
    letter-spacing: -0.3px;
  }
  
  .service-description {
    font-size: 0.92rem;
    color: #666;
    line-height: 1.5;
    margin-bottom: 8px;
    font-weight: 400;
  }
  
  /* Service Duration */
  .service-duration {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 0.85rem;
    color: var(--color-accent);
    font-weight: 600;
  }
  
  .service-duration svg {
    width: 16px;
    height: 16px;
  }
  
  /* Related Products */
  .related-products {
    border-top: 1px solid rgba(232, 196, 184, 0.15);
    padding-top: 28px;
    margin-top: 28px;
  }
  
  .products-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }
  
  .products-title {
    font-size: 1rem;
    font-weight: 700;
    color: #2D2D2D;
    display: flex;
    align-items: center;
    gap: 10px;
    letter-spacing: -0.3px;
  }
  
  .products-title svg {
    color: var(--color-accent);
  }
  
  .products-carousel {
    display: flex;
    gap: 12px;
    overflow-x: auto;
    padding: 10px 0;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }
  
  .products-carousel::-webkit-scrollbar {
    display: none;
  }
  
  .product-mini {
    flex: 0 0 110px;
    text-align: center;
    padding: 16px;
    border-radius: 14px;
    background: white;
    border: 1px solid rgba(232, 196, 184, 0.15);
    transition: all 0.3s ease;
    text-decoration: none;
    min-height: 150px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
  }
  
  .product-mini:hover {
    border-color: var(--color-accent);
    transform: translateY(-5px);
    box-shadow: 0 12px 30px rgba(232, 196, 184, 0.2);
  }
  
  .product-mini-image-wrapper {
    width: 70px;
    height: 70px;
    margin: 0 auto 12px;
    position: relative;
    border-radius: 10px;
    overflow: hidden;
    background: #FAF8F6;
  }
  
  .product-mini-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .product-mini:hover .product-mini-image {
    transform: scale(1.05);
  }
  
  .product-mini-name {
    font-size: 0.8rem;
    color: #2D2D2D;
    line-height: 1.2;
    font-weight: 600;
    margin-bottom: 6px;
  }
  
  .product-mini-price {
    font-size: 0.8rem;
    color: var(--color-accent);
    font-weight: 700;
  }
  
  /* Card Actions */
  .concern-card-actions {
    display: flex;
    gap: 15px;
    margin-top: 30px;
  }
  
  @media (max-width: 768px) {
    .concern-card-actions {
      flex-direction: column;
      gap: 12px;
    }
  }
  
  .book-btn {
    flex: 1;
    background: linear-gradient(135deg, #2D2D2D 0%, #444444 100%);
    color: white;
    border: none;
    padding: 18px 28px;
    border-radius: 14px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    letter-spacing: 0.5px;
    font-size: 0.95rem;
    min-height: 54px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }
  
  .book-btn:hover {
    background: linear-gradient(135deg, var(--color-accent) 0%, #D4A59A 100%);
    transform: translateY(-3px);
    box-shadow: 0 12px 30px rgba(232, 196, 184, 0.4);
  }
  
  .products-btn {
    background: white;
    color: #2D2D2D;
    border: 2px solid rgba(232, 196, 184, 0.3);
    padding: 18px 28px;
    border-radius: 14px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    letter-spacing: 0.5px;
    font-size: 0.95rem;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 54px;
  }
  
  .products-btn:hover {
    background: rgba(232, 196, 184, 0.1);
    border-color: var(--color-accent);
    transform: translateY(-3px);
  }
  
  /* CAROUSEL ANIMATIONS FOR DIFFERENT SCREEN SIZES */
  @keyframes concernCarouselScrollDesktop {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-380px * 7 - 30px * 7));
    }
  }
  
  @keyframes concernCarouselScrollTablet {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-340px * 7 - 30px * 7));
    }
  }
  
  @keyframes concernCarouselScrollMobile {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-300px * 7 - 30px * 7));
    }
  }
  
  @keyframes concernCarouselScrollSmallMobile {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-280px * 7 - 30px * 7));
    }
  }
  
  /* Carousel Controls */
  .carousel-controls {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-top: 30px;
  }
  
  .carousel-control-btn {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: var(--color-accent);
    color: white;
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(232, 196, 184, 0.3);
  }
  
  .carousel-control-btn:hover {
    background: #D4A59A;
    transform: translateY(-2px);
  }
  
  .carousel-control-btn svg {
    width: 24px;
    height: 24px;
  }
  
  /* Booking Modal styles remain the same... */
  /* ... [All your existing booking modal styles stay exactly the same] ... */
  
  /* REMOVE View All Button styles */
  .view-all-container {
    display: none;
  }
</style>

<section class="concern-services-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">{{ section.settings.title | default: "Services By Concern" }}</h2>
      <p class="section-description">{{ section.settings.subtitle | default: "Expert treatments tailored to your specific hair concerns" }}</p>
    </div>
    
    <div class="concern-carousel-container">
      <div class="concern-carousel" id="concern-carousel">
        <!-- All 7 concern cards remain exactly the same as before -->
        <!-- Concern 1: Dry / Frizzy / Dull Hair -->
        <div class="concern-card">
          <div class="concern-card-header">
            <div class="concern-number">1</div>
            <div class="concern-icon-wrapper">
              <svg class="concern-icon" viewBox="0 0 24 24" fill="currentColor" width="36" height="36">
                <path d="M8.464 15.536A5 5 0 1117.657 6.343 5 5 0 016.343 17.657L2.929 21.07a1 1 0 11-1.414-1.414l3.414-3.414a5 5 0 013.535-1.716zm0 0L15.536 8.464"/>
              </svg>
            </div>
            <div>
              <h3 class="concern-title">Dry & Frizzy Hair</h3>
              <p class="concern-symptoms">Moisture deficiency, rough texture, lack of shine</p>
            </div>
          </div>
          
          <div class="concern-card-content">
            <div class="services-list">
              <div class="service-item">
                <svg class="service-icon" viewBox="0 0 24 24" fill="currentColor" width="28" height="28">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div class="service-info">
                  <div class="service-name">ABC Replenish Ritual</div>
                  <div class="service-description">Deep hydration treatment for extremely dry hair</div>
                  <div class="service-duration">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10 10-4.5 10-10S17.5 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.5-13H11v6l5.2 3.2.8-1.3-4.5-2.7V7z"/>
                    </svg>
                    <span>90 min</span>
                  </div>
                </div>
              </div>
              
              <div class="service-item">
                <svg class="service-icon" viewBox="0 0 24 24" fill="currentColor" width="28" height="28">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div class="service-info">
                  <div class="service-name">ABC Hydrate Ritual</div>
                  <div class="service-description">Moisture infusion for frizzy, dull hair</div>
                  <div class="service-duration">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10 10-4.5 10-10S17.5 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.5-13H11v6l5.2 3.2.8-1.3-4.5-2.7V7z"/>
                    </svg>
                    <span>60 min</span>
                  </div>
                </div>
              </div>
            </div>
            
            {% assign abc_collection = collections['authentic-beauty-concept'] %}
            {% if abc_collection and abc_collection.products.size > 0 %}
            <div class="related-products">
              <div class="products-header">
                <div class="products-title">
                  <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                  </svg>
                  Recommended Products
                </div>
              </div>
              
              <div class="products-carousel">
                {% for product in abc_collection.products limit: 5 %}
                  {% if product.tags contains 'hydrate' or product.tags contains 'moisture' %}
                    <a href="{{ product.url }}" class="product-mini">
                      <div class="product-mini-image-wrapper">
                        {% if product.featured_image %}
                          <img 
                            src="{{ product.featured_image | image_url: width: 120, height: 120, crop: 'center' }}" 
                            alt="{{ product.title | escape }}"
                            class="product-mini-image"
                            width="120"
                            height="120"
                            loading="lazy"
                          >
                        {% else %}
                          <div class="product-mini-image" style="background: #f8f8f8; display: flex; align-items: center; justify-content: center; color: #666; font-size: 12px;">
                            ABC
                          </div>
                        {% endif %}
                      </div>
                      <div class="product-mini-name">{{ product.title | truncate: 15 }}</div>
                      <div class="product-mini-price">{{ product.price | money }}</div>
                    </a>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
            {% endif %}
            
            <div class="concern-card-actions">
              <button class="book-btn" data-concern="Dry & Frizzy Hair" data-service="ABC Replenish Ritual" data-price="89">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
                Book Appointment
              </button>
              <a href="{{ collections['authentic-beauty-concept'].url | default: routes.all_products_collection_url }}" class="products-btn">
                View Products
              </a>
            </div>
          </div>
        </div>
        
        <!-- Concern 2: Damaged or Weak Hair -->
        <div class="concern-card">
          <div class="concern-card-header">
            <div class="concern-number">2</div>
            <div class="concern-icon-wrapper">
              <svg class="concern-icon" viewBox="0 0 24 24" fill="currentColor" width="36" height="36">
                <path d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <div>
              <h3 class="concern-title">Damaged Hair</h3>
              <p class="concern-symptoms">Breakage, split ends, chemical damage</p>
            </div>
          </div>
          
          <div class="concern-card-content">
            <div class="services-list">
              <div class="service-item">
                <svg class="service-icon" viewBox="0 0 24 24" fill="currentColor" width="28" height="28">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div class="service-info">
                  <div class="service-name">Fiber Clinix Bond Builder</div>
                  <div class="service-description">Repairs internal hair bonds, strengthens structure</div>
                  <div class="service-duration">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10 10-4.5 10-10S17.5 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.5-13H11v6l5.2 3.2.8-1.3-4.5-2.7V7z"/>
                    </svg>
                    <span>120 min</span>
                  </div>
                </div>
              </div>
            </div>
            
            {% assign schwarzkopf_collection = collections['schwarzkopf'] %}
            {% if schwarzkopf_collection and schwarzkopf_collection.products.size > 0 %}
            <div class="related-products">
              <div class="products-header">
                <div class="products-title">
                  <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                  </svg>
                  Repair Products
                </div>
              </div>
              
              <div class="products-carousel">
                {% for product in schwarzkopf_collection.products limit: 5 %}
                  {% if product.tags contains 'repair' or product.tags contains 'bond' %}
                    <a href="{{ product.url }}" class="product-mini">
                      <div class="product-mini-image-wrapper">
                        {% if product.featured_image %}
                          <img 
                            src="{{ product.featured_image | image_url: width: 120, height: 120, crop: 'center' }}" 
                            alt="{{ product.title | escape }}"
                            class="product-mini-image"
                            width="120"
                            height="120"
                            loading="lazy"
                          >
                        {% else %}
                          <div class="product-mini-image" style="background: #f8f8f8; display: flex; align-items: center; justify-content: center; color: #666; font-size: 12px;">
                            Repair
                          </div>
                        {% endif %}
                      </div>
                      <div class="product-mini-name">{{ product.title | truncate: 15 }}</div>
                      <div class="product-mini-price">{{ product.price | money }}</div>
                    </a>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
            {% endif %}
            
            <div class="concern-card-actions">
              <button class="book-btn" data-concern="Damaged Hair" data-service="Fiber Clinix Bond Builder" data-price="99">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
                Book Appointment
              </button>
              <a href="{{ collections['schwarzkopf'].url | default: routes.all_products_collection_url }}" class="products-btn">
                View Products
              </a>
            </div>
          </div>
        </div>
        
        <!-- Concern 3: Oily / Greasy Scalp -->
        <div class="concern-card">
          <div class="concern-card-header">
