<script>
  class ProfessionalBookingSystem {
    constructor() {
      this.modal = document.getElementById('bookingModal');
      this.overlay = document.getElementById('bookingOverlay');
      this.form = document.getElementById('bookingForm');
      this.successScreen = document.getElementById('bookingSuccess');
      this.bookingTitle = document.getElementById('bookingTitle');
      this.bookingSubtitle = document.getElementById('bookingSubtitle');
      this.summaryService = document.getElementById('summaryService');
      this.summaryConcern = document.getElementById('summaryConcern');
      this.summaryPrice = document.getElementById('summaryPrice');
      this.selectedConcernInput = document.getElementById('selectedConcern');
      this.selectedServiceInput = document.getElementById('selectedService');
      this.selectedPriceInput = document.getElementById('selectedPrice');
      this.bookingTimeInput = document.getElementById('bookingTime');
      
      this.selectedConcern = null;
      this.selectedService = null;
      this.selectedPrice = null;
      
      this.init();
    }
    
    init() {
      this.bindEvents();
      this.setupTimeSlots();
      this.setupDatePicker();
    }
    
    bindEvents() {
      // Book buttons
      document.querySelectorAll('.book-btn').forEach(button => {
        button.addEventListener('click', (e) => {
          // Check if button has the correct data attributes
          if (!e.target.closest('.book-btn')) return;
          
          const btn = e.target.closest('.book-btn');
          const concern = btn.dataset.concern;
          const service = btn.dataset.service;
          const price = btn.dataset.price;
          
          if (concern && service && price) {
            this.openBookingModal(concern, service, price);
          }
        });
      });
      
      // Close modal
      document.getElementById('bookingClose').addEventListener('click', () => this.closeBookingModal());
      document.getElementById('bookingOverlay').addEventListener('click', () => this.closeBookingModal());
      document.getElementById('cancelBooking').addEventListener('click', () => this.closeBookingModal());
      document.getElementById('closeSuccess').addEventListener('click', () => this.closeBookingModal());
      
      // Escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && this.modal.classList.contains('active')) {
          this.closeBookingModal();
        }
      });
      
      // Form submission - Fixed: Using button click instead of form submit
      document.getElementById('submitBooking').addEventListener('click', (e) => this.handleSubmit(e));
      
      // Input validation on blur
      document.querySelectorAll('.form-input').forEach(input => {
        input.addEventListener('blur', () => this.validateField(input));
        input.addEventListener('input', () => this.clearFieldError(input));
      });
      
      // Date validation
      document.getElementById('bookingDate').addEventListener('change', () => {
        this.validateDate();
      });
    }
    
    setupTimeSlots() {
      const timeSlots = document.querySelectorAll('.time-slot');
      timeSlots.forEach(slot => {
        slot.addEventListener('click', () => {
          // Remove selected class from all slots
          timeSlots.forEach(s => s.classList.remove('selected'));
          
          // Add selected class to clicked slot
          slot.classList.add('selected');
          
          // Update hidden input
          this.bookingTimeInput.value = slot.dataset.time;
          
          // Clear error
          document.getElementById('timeError').classList.remove('show');
        });
      });
    }
    
    setupDatePicker() {
      const dateInput = document.getElementById('bookingDate');
      const today = new Date();
      const minDate = today.toISOString().split('T')[0];
      
      // Set min date to today
      dateInput.min = minDate;
      
      // Set max date to 90 days from now
      const maxDate = new Date();
      maxDate.setDate(today.getDate() + 90);
      dateInput.max = maxDate.toISOString().split('T')[0];
      
      // Set default date to tomorrow
      const tomorrow = new Date();
      tomorrow.setDate(today.getDate() + 1);
      dateInput.value = tomorrow.toISOString().split('T')[0];
    }
    
    openBookingModal(concern, service, price) {
      this.selectedConcern = concern;
      this.selectedService = service;
      this.selectedPrice = price;
      
      // Update modal content
      this.bookingTitle.textContent = `Book: ${service}`;
      this.bookingSubtitle.textContent = `For: ${concern}`;
      this.summaryService.textContent = service;
      this.summaryConcern.textContent = concern;
      this.summaryPrice.textContent = `$${price}`;
      
      // Update hidden inputs
      this.selectedConcernInput.value = concern;
      this.selectedServiceInput.value = service;
      this.selectedPriceInput.value = price;
      
      // Reset form
      this.form.reset();
      this.successScreen.classList.remove('active');
      this.form.style.display = 'block';
      
      // Reset time slots
      document.querySelectorAll('.time-slot').forEach(slot => {
        slot.classList.remove('selected');
      });
      this.bookingTimeInput.value = '';
      
      // Reset errors
      document.querySelectorAll('.error-message').forEach(error => {
        error.classList.remove('show');
      });
      document.querySelectorAll('.form-input').forEach(input => {
        input.classList.remove('error');
      });
      
      // Setup date picker again
      this.setupDatePicker();
      
      // Show modal
      this.modal.classList.add('active');
      this.overlay.classList.add('active');
      document.body.style.overflow = 'hidden';
    }
    
    closeBookingModal() {
      this.modal.classList.remove('active');
      this.overlay.classList.remove('active');
      document.body.style.overflow = '';
      
      // Reset after animation
      setTimeout(() => {
        this.selectedConcern = null;
        this.selectedService = null;
        this.selectedPrice = null;
      }, 300);
    }
    
    clearFieldError(field) {
      const fieldId = field.id;
      const error = document.getElementById(`${fieldId}Error`);
      
      if (field.value.trim()) {
        field.classList.remove('error');
        error.classList.remove('show');
      }
    }
    
    validateField(field) {
      const fieldId = field.id;
      const error = document.getElementById(`${fieldId}Error`);
      const value = field.value.trim();
      
      if (!value) {
        field.classList.add('error');
        error.classList.add('show');
        return false;
      }
      
      // Email validation
      if (fieldId === 'email') {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(value)) {
          field.classList.add('error');
          error.textContent = 'Please enter a valid email address';
          error.classList.add('show');
          return false;
        }
      }
      
      // Phone validation
      if (fieldId === 'phone') {
        const phoneRegex = /^[\d\s\-\+\(\)]{10,}$/;
        const digits = value.replace(/\D/g, '');
        if (digits.length < 10) {
          field.classList.add('error');
          error.textContent = 'Please enter at least 10 digits';
          error.classList.add('show');
          return false;
        }
      }
      
      field.classList.remove('error');
      error.classList.remove('show');
      return true;
    }
    
    validateDate() {
      const dateInput = document.getElementById('bookingDate');
      const error = document.getElementById('dateError');
      
      if (!dateInput.value) {
        dateInput.classList.add('error');
        error.classList.add('show');
        return false;
      }
      
      const selectedDate = new Date(dateInput.value);
      const today = new Date();
      today.setHours(0, 0, 0, 0);
      
      if (selectedDate < today) {
        dateInput.classList.add('error');
        error.textContent = 'Please select a future date';
        error.classList.add('show');
        return false;
      }
      
      dateInput.classList.remove('error');
      error.classList.remove('show');
      return true;
    }
    
    validateTimeSlot() {
      const error = document.getElementById('timeError');
      
      if (!this.bookingTimeInput.value) {
        error.classList.add('show');
        return false;
      }
      
      error.classList.remove('show');
      return true;
    }
    
    validateForm() {
      let isValid = true;
      
      // Validate all required fields
      const requiredFields = ['firstName', 'lastName', 'email', 'phone'];
      
      requiredFields.forEach(fieldId => {
        const field = document.getElementById(fieldId);
        if (!this.validateField(field)) {
          isValid = false;
        }
      });
      
      // Validate date
      if (!this.validateDate()) {
        isValid = false;
      }
      
      // Validate time slot
      if (!this.validateTimeSlot()) {
        isValid = false;
      }
      
      return isValid;
    }
    
    async handleSubmit(e) {
      e.preventDefault();
      
      console.log('Form submission started');
      
      // Validate form
      if (!this.validateForm()) {
        console.log('Form validation failed');
        return;
      }
      
      const submitButton = document.getElementById('submitBooking');
      submitButton.disabled = true;
      submitButton.innerHTML = '<span>Processing...</span>';
      
      try {
        // Collect form data
        const formData = {
          concern: this.selectedConcern,
          service: this.selectedService,
          price: this.selectedPrice,
          firstName: document.getElementById('firstName').value.trim(),
          lastName: document.getElementById('lastName').value.trim(),
          email: document.getElementById('email').value.trim(),
          phone: document.getElementById('phone').value.trim(),
          date: document.getElementById('bookingDate').value,
          time: this.bookingTimeInput.value,
          notes: document.getElementById('notes').value.trim(),
          timestamp: new Date().toISOString(),
          source: 'Services by Concern Section'
        };
        
        console.log('Form data collected:', formData);
        
        // Simulate API call (replace with real API)
        await this.simulateAPICall(formData);
        
        console.log('API call successful');
        
        // Show success screen
        this.form.style.display = 'none';
        this.successScreen.classList.add('active');
        
        // Store booking
        this.storeBooking(formData);
        
        console.log('Booking completed successfully');
        
        // Auto-close after 5 seconds
        setTimeout(() => {
          this.closeBookingModal();
        }, 5000);
        
      } catch (error) {
        console.error('Booking error:', error);
        alert('Sorry, there was an error processing your booking. Please try again.');
      } finally {
        submitButton.disabled = false;
        submitButton.innerHTML = '<span>Confirm Booking</span><svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>';
      }
    }
    
    simulateAPICall(data) {
      return new Promise((resolve, reject) => {
        setTimeout(() => {
          // Simulate random success/failure for testing
          const shouldFail = Math.random() < 0.1; // 10% chance of failure
          
          if (shouldFail) {
            reject(new Error('Simulated API failure'));
          } else {
            console.log('Booking processed:', data);
            resolve({ success: true, bookingId: 'BK' + Date.now() });
          }
        }, 1500);
      });
    }
    
    storeBooking(data) {
      try {
        // Get existing bookings from localStorage
        const existingBookings = JSON.parse(localStorage.getItem('hairSalonBookings') || '[]');
        
        // Add new booking with ID
        const bookingWithId = {
          ...data,
          id: 'BK' + Date.now(),
          status: 'pending'
        };
        
        existingBookings.push(bookingWithId);
        
        // Save back to localStorage
        localStorage.setItem('hairSalonBookings', JSON.stringify(existingBookings));
        
        console.log('Booking stored locally with ID:', bookingWithId.id);
        
        // For debugging: Show stored bookings
        console.log('All stored bookings:', existingBookings);
        
      } catch (error) {
        console.error('Error storing booking:', error);
      }
    }
