<style>
  .concern-services-section {
    padding: var(--section-padding) 0;
    background: linear-gradient(135deg, #FAF8F6 0%, #FFFFFF 100%);
    position: relative;
    overflow: hidden;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }
  
  .section-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    margin-bottom: var(--space-sm);
    color: var(--color-primary);
    line-height: 1.1;
  }
  
  .section-description {
    font-size: clamp(1rem, 2vw, 1.2rem);
    color: var(--color-text-light);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }
  
  /* Carousel Container */
  .concern-carousel-container {
    position: relative;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 60px;
  }
  
  @media (max-width: 768px) {
    .concern-carousel-container {
      padding: 0 20px;
    }
  }
  
  /* Carousel with Auto-scroll */
  .concern-carousel {
    display: flex;
    gap: 30px;
    padding: 20px 0;
    width: max-content;
    animation: concernCarouselScroll 60s linear infinite;
  }
  
  .concern-carousel:hover {
    animation-play-state: paused;
  }
  
  /* Concern Card */
  .concern-card {
    flex: 0 0 380px;
    background: white;
    border-radius: 24px;
    overflow: hidden;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.08);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    border: 1px solid rgba(232, 196, 184, 0.1);
  }
  
  .concern-card:hover {
    transform: translateY(-12px) scale(1.02);
    box-shadow: 0 25px 60px rgba(232, 196, 184, 0.2);
    border-color: var(--color-accent);
  }
  
  /* Card Header */
  .concern-card-header {
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-accent-dark) 100%);
    color: white;
    padding: 30px;
    position: relative;
    min-height: 200px;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }
  
  .concern-number {
    position: absolute;
    top: 24px;
    right: 24px;
    width: 44px;
    height: 44px;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.2rem;
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.3);
  }
  
  .concern-icon-wrapper {
    width: 64px;
    height: 64px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
    backdrop-filter: blur(10px);
  }
  
  .concern-icon {
    width: 32px;
    height: 32px;
    color: white;
  }
  
  .concern-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 8px;
    line-height: 1.2;
  }
  
  .concern-symptoms {
    font-size: 0.9rem;
    opacity: 0.9;
    line-height: 1.4;
    margin-bottom: 0;
  }
  
  /* Card Content */
  .concern-card-content {
    padding: 30px;
  }
  
  .services-list {
    margin-bottom: 30px;
  }
  
  .service-item {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    margin-bottom: 16px;
    padding: 16px;
    background: var(--color-background-alt);
    border-radius: 12px;
    transition: all 0.3s ease;
    border: 1px solid transparent;
  }
  
  .service-item:hover {
    background: white;
    border-color: var(--color-accent);
    transform: translateX(4px);
  }
  
  .service-icon {
    width: 24px;
    height: 24px;
    color: var(--color-accent);
    flex-shrink: 0;
    margin-top: 2px;
  }
  
  .service-info {
    flex: 1;
  }
  
  .service-name {
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 4px;
    font-size: 1rem;
  }
  
  .service-description {
    font-size: 0.9rem;
    color: var(--color-text-light);
    line-height: 1.5;
  }
  
  /* Related Products */
  .related-products {
    border-top: 1px solid var(--color-border);
    padding-top: 24px;
    margin-top: 24px;
  }
  
  .products-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
  }
  
  .products-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-primary);
    display: flex;
    align-items: center;
    gap: 8px;
  }
  
  .products-carousel {
    display: flex;
    gap: 12px;
    overflow-x: auto;
    padding: 10px 0;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }
  
  .products-carousel::-webkit-scrollbar {
    display: none;
  }
  
  .product-mini {
    flex: 0 0 100px;
    text-align: center;
    padding: 12px;
    border-radius: 12px;
    background: white;
    border: 1px solid var(--color-border);
    transition: all 0.3s ease;
    text-decoration: none;
    min-height: 140px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
  }
  
  .product-mini:hover {
    border-color: var(--color-accent);
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(232, 196, 184, 0.2);
  }
  
  .product-mini-image-wrapper {
    width: 60px;
    height: 60px;
    margin: 0 auto 8px;
    position: relative;
  }
  
  .product-mini-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
    background: #f8f8f8;
  }
  
  .product-mini-name {
    font-size: 0.75rem;
    color: var(--color-text);
    line-height: 1.2;
    font-weight: 500;
    margin-bottom: 4px;
  }
  
  .product-mini-price {
    font-size: 0.75rem;
    color: var(--color-accent);
    font-weight: 600;
  }
  
  /* Card Actions */
  .concern-card-actions {
    display: flex;
    gap: 12px;
    margin-top: 24px;
  }
  
  .book-btn {
    flex: 1;
    background: var(--color-primary);
    color: white;
    border: none;
    padding: 16px 24px;
    border-radius: 12px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-size: 0.9rem;
    min-height: 48px;
  }
  
  .book-btn:hover {
    background: var(--color-accent);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(232, 196, 184, 0.4);
  }
  
  .products-btn {
    background: transparent;
    color: var(--color-primary);
    border: 2px solid var(--color-primary);
    padding: 16px 24px;
    border-radius: 12px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-size: 0.9rem;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 48px;
  }
  
  .products-btn:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-2px);
  }
  
  /* Carousel Animation */
  @keyframes concernCarouselScroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-380px * 7 - 30px * 7));
    }
  }
  
  /* Mobile Styles */
  @media (max-width: 768px) {
    .concern-card {
      flex: 0 0 320px;
    }
    
    .concern-card-header {
      min-height: 180px;
      padding: 24px;
    }
    
    .concern-card-content {
      padding: 24px;
    }
    
    .concern-card-actions {
      flex-direction: column;
    }
    
    @keyframes concernCarouselScroll {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(calc(-320px * 7 - 30px * 7));
      }
    }
  }
  
  @media (max-width: 480px) {
    .concern-carousel {
      animation-duration: 90s;
    }
    
    .concern-card {
      flex: 0 0 300px;
    }
    
    .concern-card-header {
      min-height: 160px;
      padding: 20px;
    }
  }
  
  /* Touch device optimization */
  @media (hover: none) and (pointer: coarse) {
    .concern-card:hover {
      transform: none;
    }
    
    .book-btn:hover,
    .products-btn:hover {
      transform: none;
    }
  }
</style>

