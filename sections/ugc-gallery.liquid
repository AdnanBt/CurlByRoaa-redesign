<style>
.ugc-gallery {
  padding: 100px 0;
  background: linear-gradient(135deg, #FFFFFF 0%, #FAF8F6 100%);
}

.gallery-header {
  text-align: center;
  margin-bottom: 60px;
}

.gallery-title {
  font-size: 3rem;
  font-weight: 700;
  margin-bottom: 16px;
  color: #2D2D2D;
  letter-spacing: -0.02em;
}

.gallery-subtitle {
  font-size: 1.2rem;
  color: #666;
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.6;
}

.gallery-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20px;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.gallery-item {
  position: relative;
  border-radius: 16px;
  overflow: hidden;
  aspect-ratio: 1;
  cursor: pointer;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  background: #f8f8f8;
  border: 1px solid #f0f0f0;
}

.gallery-item:hover {
  transform: translateY(-8px);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
}

.gallery-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  display: block;
}

.gallery-item:hover .gallery-image {
  transform: scale(1.1);
}

.gallery-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
  color: white;
  padding: 20px;
}

.instagram-handle {
  font-weight: 600;
  margin-bottom: 8px;
  font-size: 0.9rem;
}

.instagram-caption {
  font-size: 0.8rem;
  opacity: 0.9;
  line-height: 1.4;
}

.gallery-cta {
  text-align: center;
  margin-top: 60px;
}

.gallery-hashtag {
  font-size: 1.5rem;
  font-weight: 600;
  color: #E8C4B8;
  margin-bottom: 20px;
}

.btn {
  display: inline-block;
  padding: 12px 24px;
  background: #E8C4B8;
  color: white;
  text-decoration: none;
  border-radius: 8px;
  font-weight: 600;
  transition: all 0.3s ease;
  cursor: pointer;
  border: none;
  font-family: inherit;
}

.btn:hover {
  background: #D4A59A;
  transform: translateY(-2px);
}

.upload-form {
  display: none;
  margin-top: 20px;
}

.upload-input {
  display: none;
}

.upload-preview {
  max-width: 200px;
  max-height: 200px;
  border-radius: 12px;
  margin: 20px auto;
  display: none;
}

.upload-success {
  color: #4CAF50;
  margin-top: 10px;
  display: none;
}

/* Mobile Styles */
@media (max-width: 1024px) {
  .gallery-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (max-width: 768px) {
  .ugc-gallery {
    padding: 60px 0;
  }

  .gallery-title {
    font-size: 2rem;
  }

  .gallery-grid {
    grid-template-columns: repeat(2, 1fr);
    padding: 0 16px;
  }
}

@media (max-width: 480px) {
  .gallery-grid {
    grid-template-columns: 1fr;
  }
}
</style>

<section class="ugc-gallery">
  <div class="gallery-header">
    <h2 class="gallery-title">{{ section.settings.title | default: '#CurlsByRoaa Transformations' }}</h2>
    <p class="gallery-subtitle">{{ section.settings.subtitle | default: 'Real results from our amazing community. Share your journey with #CurlsByRoaa' }}</p>
  </div>

  <div class="gallery-grid">
    {% for block in section.blocks %}
      <div class="gallery-item" {{ block.shopify_attributes }}>
        {% if block.settings.image %}
          <img 
            src="{{ block.settings.image | image_url: width: 800, height: 800, crop: 'center' }}" 
            alt="{{ block.settings.instagram_handle | default: 'Customer photo' }}"
            class="gallery-image"
            loading="lazy"
            width="400"
            height="400">
        {% else %}
          <!-- Fallback gradient -->
          <div class="gallery-image" style="
            background: {% cycle 'linear-gradient(135deg, #E8C4B8, #D4A59A)', 
                               'linear-gradient(135deg, #A8D8EA, #78C2DC)', 
                               'linear-gradient(135deg, #F8B500, #FCE38A)', 
                               'linear-gradient(135deg, #95E1D3, #6DCFB7)', 
                               'linear-gradient(135deg, #FF9A9E, #FAD0C4)', 
                               'linear-gradient(135deg, #A3A1F6, #8A87E3)', 
                               'linear-gradient(135deg, #FFD3B6, #FFAAA5)', 
                               'linear-gradient(135deg, #98DDCA, #6AC4B5)' %};
            display: flex; 
            align-items: center; 
            justify-content: center; 
            color: white; 
            font-size: 2rem;
          ">
            {% cycle 'üì∏', '‚ú®', 'üåü', 'üí´', 'üéÄ', 'üåà', 'üå∏', 'üçÉ' %}
          </div>
        {% endif %}
        
        <div class="gallery-overlay">
          {% if block.settings.instagram_handle != blank %}
            <div class="instagram-handle">{{ block.settings.instagram_handle }}</div>
          {% endif %}
          {% if block.settings.caption != blank %}
            <div class="instagram-caption">"{{ block.settings.caption }}"</div>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>

  <div class="gallery-cta">
    <div class="gallery-hashtag">{{ section.settings.hashtag | default: '#CurlsByRoaa' }}</div>
    
    <!-- Upload Button -->
    <button type="button" class="btn" id="upload-trigger">
      {{ section.settings.button_text | default: 'Share Your Transformation' }}
    </button>
    
    <!-- Hidden File Input -->
    <input type="file" 
           id="image-upload" 
           accept="image/*" 
           capture="environment" 
           class="upload-input">
    
    <!-- Preview Area - FIXED WITH WIDTH/HEIGHT -->
    <img 
      id="upload-preview" 
      class="upload-preview" 
      alt="Upload preview"
      width="200"
      height="200"
      style="max-width: 200px; max-height: 200px;"
    >
    
    <!-- Success Message -->
    <div id="upload-success" class="upload-success">
      ‚úÖ Photo uploaded successfully! Use #CurlsByRoaa when sharing
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Click on gallery items
  const galleryItems = document.querySelectorAll('.gallery-item');
  const uploadTrigger = document.getElementById('upload-trigger');
  const fileInput = document.getElementById('image-upload');
  const preview = document.getElementById('upload-preview');
  const successMsg = document.getElementById('upload-success');
  
  galleryItems.forEach(item => {
    item.addEventListener('click', function() {
      const handle = this.querySelector('.instagram-handle')?.textContent;
      const caption = this.querySelector('.instagram-caption')?.textContent;
      
      if (handle && caption) {
        console.log('Instagram post:', handle, caption);
      }
    });
  });
  
  // Upload functionality
  uploadTrigger.addEventListener('click', function() {
    fileInput.click();
  });
  
  fileInput.addEventListener('change', function(e) {
    if (e.target.files && e.target.files[0]) {
      const file = e.target.files[0];
      
      // Validate file type
      if (!file.type.match('image.*')) {
        alert('Please select an image file');
        return;
      }
      
      // Validate file size (max 5MB)
      if (file.size > 5 * 1024 * 1024) {
        alert('Image size should be less than 5MB');
        return;
      }
      
      // Show preview
      const reader = new FileReader();
      reader.onload = function(e) {
        preview.src = e.target.result;
        preview.style.display = 'block';
        successMsg.style.display = 'block';
        
        // Reset file input
        fileInput.value = '';
        
        // Show success message for 5 seconds
        setTimeout(() => {
          successMsg.style.display = 'none';
          preview.style.display = 'none';
        }, 5000);
      };
      reader.readAsDataURL(file);
      
      // Here you would typically upload to your server
      // For Shopify, you might want to use their file upload API
      console.log('Photo selected:', file.name);
      
      // Example of how to send to server (you'll need to implement backend):
      // uploadToServer(file);
    }
  });
  
  // Function to simulate server upload (replace with actual API call)
  function uploadToServer(file) {
    const formData = new FormData();
    formData.append('image', file);
    
    // Replace with your actual upload endpoint
    fetch('/your-upload-endpoint', {
      method: 'POST',
      body: formData
    })
    .then(response => response.json())
    .then(data => {
      console.log('Upload successful:', data);
    })
    .catch(error => {
      console.error('Upload error:', error);
    });
  }
  
  // Add Instagram sharing option
  function shareToInstagram() {
    const hashtag = "{{ section.settings.hashtag | default: '#CurlsByRoaa' }}";
    const text = `Check out my transformation! ${hashtag}`;
    
    // For mobile devices
    if (navigator.share) {
      navigator.share({
        title: 'My Curl Transformation',
        text: text,
        url: window.location.href
      })
      .then(() => console.log('Shared successfully'))
      .catch(error => console.log('Share failed:', error));
    } else {
      // Fallback: open Instagram in new tab
      window.open('https://www.instagram.com/', '_blank');
    }
  }
  
  // Optional: Add Instagram share button
  const instagramBtn = document.createElement('button');
  instagramBtn.className = 'btn';
  instagramBtn.textContent = 'Share on Instagram';
  instagramBtn.style.marginLeft = '10px';
  instagramBtn.style.background = '#E4405F';
  instagramBtn.addEventListener('click', shareToInstagram);
  
  document.querySelector('.gallery-cta').appendChild(instagramBtn);
});
</script>

