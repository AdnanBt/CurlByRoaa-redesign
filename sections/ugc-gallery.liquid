<script>
class UGCGallery {
  constructor() {
    this.currentIndex = 0;
    this.items = [];
    this.images = [
      "{{ 'IMG-1625.webp' | asset_url }}",
      "{{ 'IMG-1318.jpg' | asset_url }}", 
      "{{ 'IMG-1316.jpg' | asset_url }}",
      "{{ 'IMG-1315.jpg' | asset_url }}",
      "{{ '1224A8E8-82DB-4B44-8842-59472FCE02B0.jpg' | asset_url }}",
      "{{ '2DFF26C9-7768-4A49-A4DE-3D3125AF30D6.jpg' | asset_url }}",
      "{{ 'IMG-1311.jpg' | asset_url }}",
      "{{ '3B488469-481D-4B83-BB18-021D2815511F.jpg' | asset_url }}"
    ];
    this.init();
  }

  init() {
    this.items = Array.from(document.querySelectorAll('.gallery-item'));
    this.bindEvents();
    this.preloadImages();
  }

  preloadImages() {
    // Preload images for better performance
    this.images.forEach(src => {
      const img = new Image();
      img.src = src;
    });
  }

  bindEvents() {
    // Gallery item clicks
    this.items.forEach((item, index) => {
      item.addEventListener('click', () => {
        this.openLightbox(index);
      });
    });

    // Lightbox controls
    document.getElementById('lightbox-close').addEventListener('click', () => this.closeLightbox());
    document.getElementById('lightbox-prev').addEventListener('click', () => this.prevImage());
    document.getElementById('lightbox-next').addEventListener('click', () => this.nextImage());

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (!document.getElementById('gallery-lightbox').classList.contains('active')) return;
      
      switch(e.key) {
        case 'Escape':
          this.closeLightbox();
          break;
        case 'ArrowLeft':
          this.prevImage();
          break;
        case 'ArrowRight':
          this.nextImage();
          break;
      }
    });

    // Close on overlay click
    document.getElementById('gallery-lightbox').addEventListener('click', (e) => {
      if (e.target === document.getElementById('gallery-lightbox')) {
        this.closeLightbox();
      }
    });
  }

  openLightbox(index) {
    this.currentIndex = index;
    this.updateLightbox();
    document.getElementById('gallery-lightbox').classList.add('active');
    document.body.style.overflow = 'hidden';
  }

  closeLightbox() {
    document.getElementById('gallery-lightbox').classList.remove('active');
    document.body.style.overflow = '';
  }

  prevImage() {
    this.currentIndex = this.currentIndex > 0 ? this.currentIndex - 1 : this.items.length - 1;
    this.updateLightbox();
  }

  nextImage() {
    this.currentIndex = this.currentIndex < this.items.length - 1 ? this.currentIndex + 1 : 0;
    this.updateLightbox();
  }

  updateLightbox() {
    const currentItem = this.items[this.currentIndex];
    const overlay = currentItem.querySelector('.gallery-overlay');
    const handle = overlay.querySelector('.instagram-handle').textContent;
    const caption = overlay.querySelector('.instagram-caption').textContent;

    document.getElementById('lightbox-handle').textContent = handle;
    document.getElementById('lightbox-caption').textContent = caption;
    
    // Set the actual image source
    const lightboxImage = document.getElementById('lightbox-image');
    lightboxImage.src = this.images[this.currentIndex];
    lightboxImage.alt = handle + ' - ' + caption;
  }
}

// Initialize gallery
document.addEventListener('DOMContentLoaded', () => {
  new UGCGallery();
});
</script>

