}

.faq-toggle {
  width: 24px;
  height: 24px;
  position: relative;
  transition: transform 0.3s ease;
}

.faq-toggle::before,
.faq-toggle::after {
  content: '';
  position: absolute;
  background: currentColor;
  transition: all 0.3s ease;
}

.faq-toggle::before {
  top: 50%;
  left: 0;
  right: 0;
  height: 2px;
  transform: translateY(-50%);
}

.faq-toggle::after {
  left: 50%;
  top: 0;
  bottom: 0;
  width: 2px;
  transform: translateX(-50%);
}

.faq-item.active .faq-toggle::after {
  transform: translateX(-50%) rotate(90deg);
  opacity: 0;
}

.faq-answer {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
  color: #666;
  line-height: 1.6;
}

.faq-item.active .faq-answer {
