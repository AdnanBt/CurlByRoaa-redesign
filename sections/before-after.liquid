<style>
.before-after {
  padding: {{ section.settings.padding_top }}px 20px {{ section.settings.padding_bottom }}px;
  background: {{ section.settings.background_gradient | default: 'linear-gradient(135deg, #2D2D2D 0%, #1a1a1a 100%)' }};
  color: white;
  position: relative;
}

{% if section.settings.background_pattern %}
.before-after::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('{{ section.settings.background_pattern | image_url: 'master' }}');
  opacity: {{ section.settings.pattern_opacity | divided_by: 100.0 }};
  background-size: {{ section.settings.pattern_size }};
}
{% endif %}

.before-after-header {
  text-align: {{ section.settings.header_alignment }};
  margin-bottom: {{ section.settings.header_spacing }}px;
  position: relative;
  z-index: 2;
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
}

.before-after-header h2 {
  font-size: {{ section.settings.heading_size }}px;
  font-weight: {{ section.settings.heading_weight }};
  margin-bottom: 16px;
  color: {{ section.settings.heading_color }};
}

.before-after-header p {
  font-size: {{ section.settings.subheading_size }}px;
  color: {{ section.settings.subheading_color }};
  line-height: 1.6;
}

.comparison-container {
  max-width: {{ section.settings.slider_width }}px;
  margin: 0 auto;
  position: relative;
  z-index: 2;
}

.comparison-slider {
  position: relative;
  border-radius: {{ section.settings.slider_border_radius }}px;
  overflow: hidden;
  box-shadow: {{ section.settings.slider_shadow }};
}

.comparison-image {
  width: 100%;
  height: {{ section.settings.slider_height }}px;
  position: relative;
}

.before-image, .after-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
}
.before-image {
  {% if section.settings.before_image %}
    background-image: url('{{ section.settings.before_image | image_url: width: 2000 }}');
  {% else %}
    background: {{ section.settings.before_fallback_color | default: 'linear-gradient(135deg, #8B7355, #A08D75)' }};
  {% endif %}
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: {{ section.settings.image_text_size }}px;
  font-weight: 600;
}

.after-image {
  {% if section.settings.after_image %}
    background-image: url('{{ section.settings.after_image | image_url: width: 2000 }}');
  {% else %}
    background: {{ section.settings.after_fallback_color | default: 'linear-gradient(135deg, #E8C4B8, #D4A59A)' }};
  {% endif %}
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: {{ section.settings.image_text_size }}px;
  font-weight: 600;
  width: 50%;
}

.slider-handle {
  position: absolute;
  top: 0;
  left: 50%;
  width: {{ section.settings.handle_thickness }}px;
  height: 100%;
  background: {{ section.settings.handle_color }};
  cursor: ew-resize;
  z-index: 10;
  transform: translateX(-50%);
}

.slider-handle::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: {{ section.settings.handle_size }}px;
  height: {{ section.settings.handle_size }}px;
  background: {{ section.settings.handle_color }};
  border-radius: 50%;
  transform: translate(-50%, -50%);
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
}

.slider-handle::after {
  content: '{{ section.settings.handle_icon }}';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: {{ section.settings.handle_icon_color }};
  font-weight: bold;
  font-size: {{ section.settings.handle_icon_size }}px;
}

.labels {
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
  color: {{ section.settings.label_color }};
  font-weight: {{ section.settings.label_weight }};
  text-transform: {{ section.settings.label_transform }};
  letter-spacing: {{ section.settings.label_spacing }}px;
}

.labels span:first-child {
  text-align: left;
}

.labels span:last-child {
  text-align: right;
}

.testimonial-grid {
  display: grid;
  grid-template-columns: repeat({{ section.settings.testimonials_per_row }}, 1fr);
  gap: {{ section.settings.testimonial_gap }}px;
  margin-top: {{ section.settings.testimonial_spacing }}px;
  position: relative;
  z-index: 2;
}

.testimonial-card {
  background: {{ section.settings.testimonial_bg }};
  backdrop-filter: blur({{ section.settings.testimonial_blur }}px);
  padding: {{ section.settings.testimonial_padding }}px;
  border-radius: {{ section.settings.testimonial_radius }}px;
  text-align: {{ section.settings.testimonial_alignment }};
  border: {{ section.settings.testimonial_border }};
}

.testimonial-image {
  width: {{ section.settings.testimonial_image_size }}px;
  height: {{ section.settings.testimonial_image_size }}px;
  border-radius: 50%;
  margin: 0 auto {{ section.settings.testimonial_image_spacing }}px;
  background: {{ section.settings.testimonial_image_bg }};
  display: flex;
  align-items: center;
  justify-content: center;
  color: {{ section.settings.testimonial_image_color }};
  font-size: {{ section.settings.testimonial_image_icon_size }}px;
  overflow: hidden;
}

.testimonial-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.testimonial-text {
  font-style: {{ section.settings.testimonial_text_style }};
  margin-bottom: {{ section.settings.testimonial_text_spacing }}px;
  line-height: {{ section.settings.testimonial_text_line_height }};
  color: {{ section.settings.testimonial_text_color }};
  font-size: {{ section.settings.testimonial_text_size }}px;
}

.testimonial-author {
  font-weight: {{ section.settings.testimonial_author_weight }};
  color: {{ section.settings.testimonial_author_color }};
  font-size: {{ section.settings.testimonial_author_size }}px;
}

.testimonial-time {
  font-size: {{ section.settings.testimonial_time_size }}px;
  color: {{ section.settings.testimonial_time_color }};
  margin-top: {{ section.settings.testimonial_time_spacing }}px;
}

/* Responsive */
@media (max-width: 968px) {
  .testimonial-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 768px) {
  .before-after {
    padding: {{ section.settings.mobile_padding_top }}px 15px {{ section.settings.mobile_padding_bottom }}px;
  }
  
  .before-after-header h2 {
    font-size: {{ section.settings.mobile_heading_size }}px;
  }
  
  .comparison-image {
    height: {{ section.settings.mobile_slider_height }}px;
  }
  
  .testimonial-grid {
    grid-template-columns: 1fr;
    gap: {{ section.settings.mobile_testimonial_gap }}px;
    margin-top: {{ section.settings.mobile_testimonial_spacing }}px;
  }
  
  .testimonial-card {
    padding: {{ section.settings.mobile_testimonial_padding }}px;
  }
  
  .slider-handle::before {
    width: {{ section.settings.mobile_handle_size }}px;
    height: {{ section.settings.mobile_handle_size }}px;
  }
}
</style>

<section class="before-after">
  <div class="before-after-header">
    <h2>{{ section.settings.heading | default: 'Real Transformations' }}</h2>
    <p>{{ section.settings.subheading | default: 'See the incredible results our customers have achieved with our curl care system' }}</p>
  </div>
  
  <div class="comparison-container">
    <div class="comparison-slider">
      <div class="comparison-image">
        <div class="before-image">
          {% unless section.settings.before_image %}
            {{ section.settings.before_text | default: 'Before: Dry, Frizzy Curls' }}
          {% endunless %}
        </div>
        <div class="after-image">
          {% unless section.settings.after_image %}
            {{ section.settings.after_text | default: 'After: Defined, Hydrated Curls' }}
          {% endunless %}
        </div>
        <div class="slider-handle"></div>
      </div>
    </div>
    <div class="labels">
      <span>{{ section.settings.before_label | default: 'Before' }}</span>
      <span>{{ section.settings.after_label | default: 'After 4 Weeks' }}</span>
    </div>
  </div>
  
  <div class="testimonial-grid">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'testimonial' %}
          <div class="testimonial-card" {{ block.shopify_attributes }}>
            <div class="testimonial-image">
              {% if block.settings.customer_image %}
                 <img 
    src="{{ img | image_url: width: 200, height: 200, crop: 'center' }}" 
    alt="{{ block.settings.customer_name | escape }}" 
    width="200" 
    height="200"
    loading="lazy"
  >
              {% else %}
                {{ block.settings.emoji_icon | default: 'üë©üèΩ' }}
              {% endif %}
            </div>
            <p class="testimonial-text">"{{ block.settings.testimonial_text }}"</p>
            <div class="testimonial-author">{{ block.settings.customer_name }}</div>
            {% if block.settings.time_period %}
              <div class="testimonial-time">{{ block.settings.time_period }}</div>
            {% endif %}
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const slider = document.querySelector('.comparison-slider');
  const handle = document.querySelector('.slider-handle');
  const afterImage = document.querySelector('.after-image');
  
  if (!slider || !handle || !afterImage) return;
  
  let isDragging = false;
  
  function updateSlider(x) {
    const rect = slider.getBoundingClientRect();
    let percentage = (x - rect.left) / rect.width * 100;
    percentage = Math.max(0, Math.min(100, percentage));
    
    afterImage.style.width = `${percentage}%`;
    handle.style.left = `${percentage}%`;
  }
  
  handle.addEventListener('mousedown', function(e) {
    isDragging = true;
    e.preventDefault();
  });
  
  document.addEventListener('mousemove', function(e) {
    if (!isDragging) return;
    updateSlider(e.clientX);
  });
  
  document.addEventListener('mouseup', function() {
    isDragging = false;
  });
  
  // Touch events for mobile
  handle.addEventListener('touchstart', function(e) {
    isDragging = true;
    e.preventDefault();
  });
  
  document.addEventListener('touchmove', function(e) {
    if (!isDragging) return;
    updateSlider(e.touches[0].clientX);
  });
  
  document.addEventListener('touchend', function() {
    isDragging = false;
  });
  
  // Click on slider to move handle
  slider.addEventListener('click', function(e) {
    updateSlider(e.clientX);
  });
});
</script>

