<style>
  .announcement-bar {
    background: #808080;
    color: white;
    padding: 0.5rem 0;
    text-align: center;
    font-size: 0.9rem;
    position: fixed; /* Changed to fixed */
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
  }
  
  /* Add padding to body so content isn't hidden behind fixed bar */
  body {
    padding-top: 2.5rem; /* Adjust based on your announcement bar height */
  }
  
  .announcement-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-sm);
  }
  
  .announcement-bar p {
    margin: 0;
  }
</style>

<div class="announcement-bar">
  <div class="announcement-content">
    <p>{{ section.settings.announcement_text }}</p>
  </div>
</div>

