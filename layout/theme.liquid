  <!-- Mobile specific CSS -->
  <style>
    @media (max-width: 767px) {
      /* Prevent horizontal scrolling */
      html, body {
        overflow-x: hidden;
        width: 100%;
      }
      
      /* Improve tap highlights */
      * {
        -webkit-tap-highlight-color: rgba(0,0,0,0.1);
      }
      
      /* Better scrolling on iOS */
      .scrollable {
        -webkit-overflow-scrolling: touch;
      }
    }
  </style>
</head>

